@model List<myRaiCommonModel.EccezioniGroupCounter>

@if (Model != null && Model.Any())
{
    foreach (var group in Model)
    {
        using (Html.BeginPanel(myRaiHelper.PanelType.PanelNoPadding, group.Nome, false))
        {
            <table class="table rai-table rai-table-vcenter rai-table-panel">
                @foreach (var item in group.Eccezioni)
                {
                    string des_Eccezione = item.CodEccezione;
                    switch (item.Response.CodiceEccezione)
                    {
                        case "FECE":
                            des_Eccezione += " - Ferie cedute";
                            break;
                        case "MRCE":
                            des_Eccezione += " - Manc.Rip. Ceduti";
                            break;
                        case "MNCE":
                            des_Eccezione += " - Manc. NL. Ceduti";
                            break;
                        case "MFCE":
                            des_Eccezione += " - Manc. Fes. Ceduti";
                            break;
                        case "MRDO":
                            des_Eccezione += " - Mancati Riposo Donati";
                            break;
                        case "MRRI":
                            des_Eccezione += " - Mancati Riposo Ricevuti";
                            break;
                        case "MNDO":
                            des_Eccezione += " - Mancati Non Lav. Donati";
                            break;
                        case "MNRI":
                            des_Eccezione += " - Mancati Non Lav. Ricevuti";
                            break;
                        default:
                            break;
                    }


                    <tr>
                        <td>
                            <span class="rai-font-md-bold interactive-primary-color">@des_Eccezione</span><br />
                        </td>
                        <td class="text-right">
                            <span class="rai-font-lg-bold">@item.Response.Totale</span>
                        </td>
                    </tr>
                }
            </table>
        }
    }
}
