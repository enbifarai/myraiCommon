@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@model MyRaiServiceInterface.it.rai.servizi.digigappws.Giornata

@{
    if ( Model.codiceVisualizzazione != "MR" && Model.codiceVisualizzazione != "MN" && Model.codiceVisualizzazione != "MF" )
    {
        <tr tabindex="@((bool)ViewData["FirstRow"]?"0":"-1")" aria-label="In data @Model.data.ToString("d MMMM yyyy") hai usufruito di @Model.Frazione" role="row">
            <td style="padding:16px;width:40%">
                @Model.data.ToString( "d MMMM yyyy, dddd" )
                <br /><i> @Model.Provenienza</i>
            </td>
            <td style="padding:16px;width:40%">
                @if ( Model.codiceVisualizzazione == "MR" || Model.codiceVisualizzazione == "RR" )
                {
                    @: (@Model.codiceVisualizzazione)
                }
                <b>
                    @if ( Model.codiceVisualizzazione == "MR" || Model.codiceVisualizzazione == "RR" )
                    {
                        @: Giornata intera
                    }
                    else
                    {
                        @Model.Frazione
                    }
                </b><br />
                <i> @Model.StatoDescrizione</i>
            </td>
            <td style="padding:16px;width:10%">
                @if ( Model.Stato != -1 )
                {
                    @Html.DisplayFor( e => Model.Stato , "IdStato" )
                }
            </td>
            <td style="padding:16px;width:10%">
                @if ( Model.ShowDelete )
                {
                    <i class="icons icon-trash h4" style="cursor:pointer"></i>
                }
            </td>
        </tr>
    }
}