@model myRaiCommonModel.FerieDipendente

@{
    var countElem = 0;
    var listElem = new List<Tuple<float, string>>();
    if (Model.Ceduti != 0)
    {
        countElem += 1;
        listElem.Add(new Tuple<float, string>(Model.Ceduti, "CEDUTE"));
    }
    if (Model.Donati != 0)
    {
        countElem += 1;
        listElem.Add(new Tuple<float, string>(Model.Donati, "DONATE"));
    }
    if (Model.Ricevuti != 0)
    {
        countElem += 1;
        listElem.Add(new Tuple<float, string>(Model.Ricevuti, "RICEVUTE"));
    }
}

<div class="row visible-xs push-5-t">
    <div class="col-xs-12">
        <table class="table rai-table rai-table-vcenter">
            <tr>
                <td class="td-40">ANNO PREC.</td>
                <td class="td-10 border-right"><b>@Model.AnnoPrec</b></td>
                <td class="td-40 border-left">SPETTANTI</td>
                <td class="td-10"><b>@Model.Spettanti</b></td>
            </tr>
            <tr>
                <td class="td-40">FRUITE</td>
                <td class="td-10 border-right"><b>@Model.Usufruite</b></td>
                <td class="td-40 border-left">PIANIFICATE</td>
                <td class="td-10"><b>@Model.Pianificate</b></td>
            </tr>
            <tr>
                <td class="td-40">RESIDUE</td>
                <td class="td-10 border-right"><b>@Model.Residue</b></td>
                @if (countElem >= 1)
                {
                    <td class="td-40 border-left">@listElem[0].Item2</td>
                    <td class="td-10"><b>@listElem[0].Item1</b></td>
                }
                else
                {
                    <td class="td-40 border-left">&nbsp;</td>
                    <td class="td-10">&nbsp;</td>
                }
            </tr>
            @if (countElem >= 2)
            {
                <tr>
                    <td class="td-40">@listElem[1].Item2</td>
                    <td class="td-10 border-right"><b>@listElem[1].Item1</b></td>
                    @if (countElem >= 3)
                    {
                        <td class="td-40 border-left">@listElem[2].Item2</td>
                        <td class="td-10">@listElem[2].Item1</td>
                    }
                    else
                    {
                        <td class="td-40 border-left">&nbsp;</td>
                        <td class="td-10">&nbsp;</td>
                    }
                </tr>
            }
        </table>
    </div>
</div>


<div class="row hidden-xs">
    <div class="col-sm-12">
        <div class="info-container">
            <div class="info-scroll">
                <div class="info-item">
                    <div class="block block-transparent block-content-table no-margin-bottom">
                        <div class="block-header block-content-mini" style="text-align:center;">
                            <label class="rai-font-md">ANNO PREC.</label>
                        </div>
                        <div class="block-content block-content-mini text-center" style="text-align:center;">
                            <span class="rai-font-lg-bold">@Model.AnnoPrec</span>
                        </div>
                    </div>
                </div>
                <div class="info-item">
                    <div class="block block-transparent block-content-table no-margin-bottom">
                        <div class="block-header block-content-mini" style="text-align:center;">
                            <label class="rai-font-md">SPETTANTI</label>
                        </div>
                        <div class="block-content block-content-mini text-center" style="text-align:center;">
                            <span class="rai-font-lg-bold">@Model.Spettanti</span>
                        </div>
                    </div>
                </div>
                <div class="info-item">
                    <div class="block block-transparent block-content-table no-margin-bottom">
                        <div class="block-header block-content-mini" style="text-align:center;">
                            <label class="rai-font-md">FRUITE</label>
                        </div>
                        <div class="block-content block-content-mini text-center" style="text-align:center;">
                            <span class="rai-font-lg-bold">@Model.Usufruite</span>
                        </div>
                    </div>
                </div>
                <div class="info-item">
                    <div class="block block-transparent block-content-table no-margin-bottom">
                        <div class="block-header block-content-mini" style="text-align:center;">
                            <label class="rai-font-md">PIANIFICATE</label>
                        </div>
                        <div class="block-content block-content-mini text-center" style="text-align:center;">
                            <span class="rai-font-lg-bold">@Model.Pianificate</span>
                        </div>
                    </div>
                </div>
                <div class="info-item">
                    <div class="block block-transparent block-content-table no-margin-bottom">
                        <div class="block-header block-content-mini" style="text-align:center;">
                            <label class="rai-font-md">RESIDUE</label>
                        </div>
                        <div class="block-content block-content-mini text-center" style="text-align:center;">
                            <span class="rai-font-lg-bold">@Model.Residue</span>
                        </div>
                    </div>
                </div>
                @if (Model.Ceduti > 0)
                {
                    <div class="info-item">
                        <div class="block block-transparent block-content-table no-margin-bottom">
                            <div class="block-header block-content-mini" style="text-align:center;">
                                <label class="rai-font-md">CEDUTE</label>
                            </div>
                            <div class="block-content block-content-mini text-center" style="text-align:center;">
                                <span class="rai-font-lg-bold">@Model.Ceduti</span>
                            </div>
                        </div>
                    </div>
                }
                @if (Model.Donati > 0)
                {
                    <div class="info-item">
                        <div class="block block-transparent block-content-table no-margin-bottom">
                            <div class="block-header block-content-mini" style="text-align:center;">
                                <label class="rai-font-md">DONATE</label>
                            </div>
                            <div class="block-content block-content-mini text-center" style="text-align:center;">
                                <span class="rai-font-lg-bold">@Model.Donati</span>
                            </div>
                        </div>
                    </div>
                }
                @if (Model.Ricevuti > 0)
                {
                    <div class="info-item">
                        <div class="block block-transparent block-content-table no-margin-bottom">
                            <div class="block-header block-content-mini" style="text-align:center;">
                                <label class="rai-font-md">RICEVUTE</label>
                            </div>
                            <div class="block-content block-content-mini text-center" style="text-align:center;">
                                <span class="rai-font-lg-bold">@Model.Ricevuti</span>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


