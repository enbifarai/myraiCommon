@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="javascript:$('#divdoc').slideToggle()" class="panel-action" style="color: #aaa;">
            </a>
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle="" aria-labelledby="lblSitFeriePerm" aria-expanded="true"></a>
        </div>
        <h2 id="lblSitFeriePerm" class="panel-title">
            Ispeziona eccezione ricalcolata

        </h2>

    </header>
    <div class="panel-body" style="display: block; padding: 8px">
        @using ( Html.BeginForm( "getag" , "tech" , FormMethod.Get , new { @id = "form-testecc" , target = "_blank" } ) )
        {
            <div class="row" style="margin-top:16px;margin-bottom:16px">
            <div class="col-sm-3">
                    <input required name="d" type="text" class="form-control js-datetimepicker" data-format="DD/MM/YYYY" data-locale="it" id="data-test" placeholder="Data..." />
                </div>
            <div class="col-sm-2">
                    <input required name="m" id="matricola-test" style="width:98%" class="form-control" placeholder="Matricola..." value="@myRaiHelper.CommonHelper.GetCurrentUserMatricola()" />
                </div>

                <div class="col-sm-2">
                    <input required name="e" id="ecc-test" style="width:98%" class="form-control" placeholder="Eccezione..." />
                </div>
            <div class="col-sm-2">
                <input required name="esim" id="ecc-simulata" style="width:98%" class="form-control" placeholder="Simula ecc..." />
            </div>
                <div class="col-sm-2">
                    <input type="checkbox" value="1" name="smap1" id="smap1" /> Simula SMAP 1 min
                <br /><input type="checkbox" value="1" name="skipcoda" id="skipcoda" /> Skip taglio coda
                <br /><input type="checkbox" value="1" name="skipcar" id="skipcar" /> Skip no carenza
                </div>

                <div class="col-sm-1">
                    <button id="button-test-ecc" class="btn btn-success" type="button">INVIA</button>
                </div>
            </div>

            <pre id="json-display"></pre>

            <div id="json-cont" class="col-sm-12">

            </div>

        }


    </div>
    <script>InitDatePicker()</script>
</section>