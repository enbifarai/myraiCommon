@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle=""></a>
        </div>
        <h2 class="panel-title">Tools</h2>
    </header>
    <div class="panel-body" style="height:193px">
        <div class="row">
            <div class="col-sm-2"> <button class="btn btn-danger" onclick="cacheReset()">RESET</button></div>
            <div class="col-sm-10"> <b>Resetta cache dei profili abilitazioni di HRGA</b></div>
           
        </div>

        <div class="row" style="margin-top:20px">
            <div class="col-sm-12" style="
    margin-bottom: 8px;
">
                <b>Modifica sede PF e resetta stato sede</b>
            </div>
            <div class="col-sm-2" style="padding:0px;padding-left:12px">
                <input id="anno-pf" class="form-control" style="width:96%" type="text" name="anno" value="@DateTime.Now.Year" />
            </div>
            <div class="col-sm-3"  style="padding:0px">
                <input id="matricola-pf" class="form-control" style="width:96%" type="text" name="matricola" placeholder="Matricola..." />
            </div>
            <div class="col-sm-3"  style="padding:0px">
                <input id="sede-pf" class="form-control" style="width:96%" type="text" name="sede" placeholder="Sede..." />
            </div>
            <div class="col-sm-2" style="padding:0px"> <button style="padding-left: 4px;
    padding-right: 4px;
    width: 96%;" class="btn btn-danger" onclick="modpf()">MOD P.F.</button></div>
            <div class="col-sm-2" style="padding:0px"> <button style="padding-left: 4px;
    padding-right: 4px;
    width: 96%;" class="btn btn-danger" onclick="resetsede()">RESET SEDE</button></div>
        </div>
    </div>
</section>