
@* freak - definisco il modello *@
@model myRaiCommonModel.cvModels.cvModel.Formazione


   @{
       myRai.Data.CurriculumVitae.cv_ModelEntities cvEnt = new myRai.Data.CurriculumVitae.cv_ModelEntities();
   }
<div  id="modalAggiungi" class="modal fade right" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"> @*tabindex="-1"   aria-hidden="true"  style="display: none;"        class="modal-block modal-block-lg mfp-hide" *@
    <div class="modal-dialog modal-lg">
    
        @*  block-transparent remove-margin-b *@
    <form class="form-horizontal mb-lg form-insertformazione" novalidate="novalidate" action="/CurriculumVitae/InsertFormazione" method="post">  @* js-form2  *@
       
        <div class="modal-content">



             <div class="block-header bg-cdf" style="height: 58px;">
                        <ul class="block-options visible-xs">
                            <li>
                                <button data-dismiss="modal" type="button"><span aria-hidden="true">×</span></button>
                            </li>
                        </ul>
                        <h4 class="lead" style="float: left; margin: -3px 0 0 0px; font-size: 2.1rem; color: #fff;">Corso di formazione
                        </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

              </div>
              <div class="modal-body row height100" id="edit-content">
                  <div class="form-group">
                      <div class="col-sm-6 no-pad-left no-pad-right border-right ">
     <!-- form-group -->
        <!-- Composizione della FORM -->
         @*col-md-8 col-sm-offset-2*@
                          
                                <div class="col-md-12 push-10">
                                    <label for="_corso">Titolo corso</label>
                                    <input class="form-control" type="text" id="_corso" name="_corso"  placeholder="Inserire a testo libero il titolo del corso" />
                                </div>
                              
                @Html.ValidationMessageFor(x => x._corso)
                        <div class="col-md-6 push-10">
                                    <label>Anno</label>
                            <div class="input-group">
                                    <span class="input-group-addon" style="cursor:pointer" onclick="$('#_anno').datetimepicker('show')"><i class="icons icon-calendar"></i></span>
                                    <input class="js-datetimepicker form-control" data-format="YYYY" data-locale="it" type="text" id="_anno" name="_anno" placeholder="Selezionare un anno"/>
                            </div>
                            @Html.ValidationMessageFor(x => x._anno)
                        </div>
                        <div class="col-md-6 push-10">
                                    <label >Durata</label>
                                    <input class="form-control"type="text" id="_durata" name="_durata" placeholder="Inserire a testo libero la durata" style="width:100%"/>
                        </div>
                <div class="col-md-12 push-10">
                    <label for="_presso">Nome società o ente erogatore della formazione</label>
                    <input class="form-control" type="text" id="_presso" name="_presso" placeholder="Inserire a testo libero il nome della società" />
                </div>
                @Html.ValidationMessageFor(x => x._presso)
                <div class="col-md-12 push-10">
                    <label for="_localitaStudi">Città</label>
                    <input class="form-control" type="text" id="_localitaCorso" name="_localitaCorso" placeholder="Inserire a testo libero la città dove si è svolto il corso" />
                </div>
                <div class="col-md-12 push-10">
                    <label for="_codNazione">Paese</label>
                    <select class="form-control js-select2" id="_codNazione" name="_codNazione" style="width: 100%;" data-placeholder="Seleziona dalla lista">
                        <option></option><!-- necessario per il placeholder con Select2 plugin -->
                        @{
                            var naz = (from nazione in cvEnt.DNazione
                                        orderby nazione.DES_NAZIONE
                                        select nazione).ToList();
                        }
                        @foreach (var elem in naz)
                        {
                            <option value="@elem.COD_SIGLANAZIONE">@elem.DES_NAZIONE</option>
                        }
                    </select>
                </div>
                <div class="col-md-12 push-10">
                        <label for="_note">Principali competenze acquisite</label>
                        <textarea class="form-control" id="_note" name="_note" rows="5" placeholder="Descrivere sinteticamente le principali competenze acquisite utilizzando al massimo 250 caratteri"></textarea>
                    @Html.ValidationMessageFor(x => x._note)
                </div>

        
        <!-- fine form -->
    <div class="modal-footer">
                    <div class="row">
                        <div class="col-xs-12 text-right">
                            <button class="btn btn-default bg-puls_dash" type="submit" onclick="submit_formazione()"><i class=""></i> Invia</button>  @* fa fa-check-circle-o *@
                        </div>
                    </div>
                  </div>
        <!-- FREAK - COPIARE FINO A QUAAAAAAAAAAAA -->
                      </div> 
                       </div>
              </div>
                 
            </div>
          </form>
         
        
    </div>
</div>
