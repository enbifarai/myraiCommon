@model myRaiCommonModel.cvModels.cvModel.AltreInfo

@{
    myRai.Data.CurriculumVitae.cv_ModelEntities cvEnt = new myRai.Data.CurriculumVitae.cv_ModelEntities();

    string matricola = myRaiHelper.UtenteHelper.EsponiAnagrafica()._matricola;

    List<myRai.Data.CurriculumVitae.DTipoPatente> listaPatente = cvEnt.DTipoPatente.ToList();
    
    
}
    
<form class="" name="frm_InsertAltreInfo" method="post" action="/CurriculumVitae/InsertAltreInfo">
<div class="block">
        <div class="block block-themed block-transparent remove-margin-b">
              <div class=" block-header bg-primary-dark">
                <h3 class="block-title">Altre informazioni</h3>
              </div>
              <div class="">
    <div class="form-group">
        <!-- Composizione della FORM -->
        <div class="col-md-12"> @*col-md-8 col-sm-offset-2*@
            <div class="">    @*form-material*@
                <div class="">
                    <div class="col-xs-12">
                        <label><strong>Residenza</strong></label>
                        <p>@Model._indirizzo_residenza PROVA TESTO</p>
                    </div>
                    
                </div> 
                <div class="">
                    <div class="col-xs-4">
                        <label>Cap</label>
                        <p>@Model._cap_residenza PROVA TESTO</p>
                    </div>
                    <div class="col-xs-8">
                        <label>Città</label>
                       <p> @Model._comune_residenza PROVA TESTO</p>
                    </div>
                </div>
                <div class="">
                    <div class="col-xs-4">
                        <label>Provincia</label>
                        <p>@Model._provincia_residenza PROVA TESTO</p>
                    </div>
                    <div class="col-xs-8">
                        <label>Nazione</label>
                        <p>@Model._descNazione_residenza PROVA TESTO</p>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="">
                        <label><strong>Domicilio</strong></label>
                        <p>@Model._indirizzo_domicilio PROVA TESTO</p>
                    </div>
                    
                </div> 
                <div class="">
                    <div class="col-xs-4">
                        <label>Cap</label>
                        <p>@Model._cap_domicilio PROVA TESTO</p>
                    </div>
                    <div class="col-xs-8">
                        <label>Città</label>
                       <p> @Model._comune_domicilio PROVA TESTO</p>
                    </div>
                </div>
                <div class="">
                    <div class="col-xs-4">
                        <label>Provincia</label>
                        <p>@Model._provincia_domicilio PROVA TESTO</p>
                    </div>
                    <div class="col-xs-8">
                        <label>Nazione</label>
                        <p>@Model._descNazione_domicilio PROVA TESTO</p>
                    </div>
                </div>
                <label for="_tipoTel1">Contatto telefonico (es. telefono casa, cellulare privato)</label>
                <div class="row push-10">
                    
                    <div class="col-xs-5">
                        <select class="js-select2 form-control" id="_tipoTel1" name="_tipoTel1" style="width: 100%;" data-placeholder="Seleziona tipologia">
                            <option></option>
                            @{
                                string selectedTipologia1_a = "";
                                string selectedTipologia1_b = "";
                                string selectedTipologia1_c = "";
                                switch (Model._tipoTel1)
                                {
                                    case "Telefono casa":
                                        selectedTipologia1_a = "selected=\"selected\"";
                                        break;
                                    case "Cellulare privato":
                                        selectedTipologia1_b = "selected=\"selected\"";
                                        break;
                                    case "Fax":
                                        selectedTipologia1_c = "selected=\"selected\"";
                                        break;
                                }
                            }
                            <option value="Telefono casa" @selectedTipologia1_a>Telefono Casa</option>
                            <option value="Cellulare privato" @selectedTipologia1_b>Cellulare privato</option>
                            <option vlaue="Fax" @selectedTipologia1_c>Fax</option>
                        </select>
                    </div>
                    <div class="col-xs-7">
                        <input type="text" class="form-control" id="_numTel1" name="_numTel1" placeholder="Inserire il numero telefonico" value="@Model._numTel1"/>
                    </div>
                </div>
                <label for="_tipoTel2">Contatto telefonico (es. telefono casa, cellulare privato)</label>
                <div class="row push-10">
                    
                    <div class="col-xs-5">
                        <select class="js-select2 form-control" id="_tipoTel2" name="_tipoTel2" style="width: 100%;" data-placeholder="Seleziona tipologia">
                            <option></option>
                            @{
                                string selectedTipologia2_a = "";
                                string selectedTipologia2_b = "";
                                string selectedTipologia2_c = "";
                                switch (Model._tipoTel1)
                                {
                                    case "Telefono casa":
                                        selectedTipologia2_a = "selected=\"selected\"";
                                        break;
                                    case "Cellulare privato":
                                        selectedTipologia2_b = "selected=\"selected\"";
                                        break;
                                    case "Fax":
                                        selectedTipologia2_c = "selected=\"selected\"";
                                        break;
                                }
                            }
                            <option value="Telefono casa" @selectedTipologia2_a>Telefono Casa</option>
                            <option value="Cellulare privato" @selectedTipologia2_b>Cellulare privato</option>
                            <option vlaue="Fax" @selectedTipologia2_c>Fax</option>
                        </select>
                    </div>
                    <div class="col-xs-7">
                        <input type="text" class="form-control" id="_numTel2" name="_numTel2" placeholder="Inserire il numero telefonico" value="@Model._numTel2"/>
                    </div>
                </div>
                <div class="push-10">
                    <label for="_email">Email</label>
                    <input type="text" class="form-control" id="_email" name="_email" placeholder="Inserire a testo libero un indirizzo di posta elettronica" value="@Model._email"/>
                </div>
                <div class="push-10">
                    <label for="_email">Sito web/blog</label>
                    <input type="text" class="form-control" id="_sitoWeb" name="_sitoWeb" placeholder="Inserire a testo libero l'indirizzo di un proprio sito web o blog" value="@Model._sitoWeb"/>
                </div>

                <!--
                    FREAK - ISERIRE IL CAMPO SELECT2 MULTISELECT PER LA PATENTE...ASPETTARE LA TABELLA
                -->
                <div class="push-10">
                    <label for="_email">Patente</label>
                    <select class="js-select2 form-control" multiple="multiple" id="tipoPatente" name="tipoPatente" style="width: 100%;"  data-placeholder="Selezionare dalla lista">
                        <option></option>
                        @foreach (var elem in listaPatente)
                        {
                            string checkedPatente = "";
                            if (Model._tipoPatente != null)
                            {
                                if (Model._tipoPatente.Where(x => x.CodTipoPatente == elem.CodTipoPatente).Count() > 0)
                                {
                                    checkedPatente = "selected=\"selected\"";
                                }
                            }
                            <option value="@elem.CodTipoPatente" @checkedPatente>@elem.DescTipoPatente</option>
                        }
                    </select>
                </div>
                <!-- 
                    FREAK - INSERIRE ALTRI CAMPI
                    -->
                <div class="push-20">
                    <div>
                        <label for="_note">Ulteriori informazioni</label>
                        <textarea class="form-control" id="_note" name="_note" rows="5" placeholder="Inserire ulteriori informazioni di carattere personale utilizzando al massimo 250 caratteri">@Model._note</textarea>
                    </div>
                    
                </div>

            </div>
        </div>
        <!-- fine form -->
    </div> <!-- FREAK - COPIARE FINO A QUAAAAAAAAAAAA -->
              </div>
                  <div class="block-content block-content-mini block-content-full border-t">
                    <div class="row push-10-t">
                        <div class="col-xs-6">   @*col-xs-6*@
                            @*<button class="btn btn-warning"  data-dismiss="modal" type="button"><i class="fa fa-arrow-circle-o-left"></i> Indietro</button>*@
                        </div>
                        <div class="col-xs-6 text-right">  @*col-xs-6 *@
                            <button class="btn btn-primary" type="submit" onclick=""><i class="fa fa-check-circle-o"></i> Invia</button> 
                        </div>
                    </div>
                  </div>
          </div>

</div>
</form>


