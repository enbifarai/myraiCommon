                        break;
                    default:
                        checked_codConInfoLiv01 = "";
                        checked_codConInfoLiv02 = "";
                        checked_codConInfoLiv04 = "";
                        break;
                }

                if (item._flagPrincipale == "1")
                {
                    checked_flagPrincipale = "checked=\"checked\"";
                }
                else
                {
                    checked_flagPrincipale = "";
                }
                
                if (item._isTitle)
                {
        <tr>
