@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model List<myRaiData.B2RaiPlace_Eventi_Anagrafica>

@if ( Model != null && Model.Count( ) > 0 )
{
    <table class="table table-hover rai-table rai-table-vcenter" id="infotable_preonta">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach ( var item in Model )
            {
                <tr>
                    <td> @item.nome</td>
                    <td> @item.cognome</td>
                    <td class="botton_operazioni">
                        <a id="modifica-evento-@item.id" class="btn rai-btn-small" href="javascript:VediPrenotazione(@item.id, @item.id_evento)">Vedi</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span class="rai-font-md-neutral">
        Non hai posti prenotati
    </span>
}