@using myRai.Models.DashboardResponsabile

@model DipendenteScostamento

<section class="rai block block-content-table block-transparent" id="">
    <header class="block-header">
        <label class="rai-font-table-heading">Monitoraggio ferie</label>
    </header>
	<div class="block-content">
        @{
        <table class="table">
            <tbody>
                @{
                    <tr>
                        <td class="col-xs-7">Giorni pianificati ad oggi</td>
                        <td class="col-xs-5">@(Model.GiorniPianificatiAdOggi) di @(Model.GiorniPianificati)</td>
                    </tr>
                    <tr>
                        <td class="col-xs-7">Giorni effettivi ad oggi</td>
                        <td class="col-xs-5">@(Model.GiorniEffettivi)</td>
                    </tr>
                    <tr>
                        <td class="col-xs-7">Scostamento</td>
                        <td class="col-xs-5">
                            <div class="rai progress progress-chart" style="height:20px;">
                                <div class="progress-bar" role="progressbar" aria-valuenow="@(Model.Percentuale.ToString())" aria-valuemin="0" aria-valuemax="100" tabindex="0" style="width: 0%;">
                                    @{
                                        string txScostamento = "";
                                        txScostamento = Model.Scostamento.ToString( ) + "%";
                                        //if ( Model.Scostamento > 0 )
                                        //{
                                        //    txScostamento = "+" + Model.Scostamento.ToString( ) + "%";
                                        //    //classTextColor = "green";
                                        //}
                                        //else if ( Model.Scostamento < 0 )
                                        //{
                                        //    txScostamento = Model.Scostamento.ToString( ) + "%";
                                        //    //classTextColor = "red";
                                        //}
                                    }
                                    <span class="progress-bar-tooltip" style="line-height:20px; font-size:13px;">&nbsp;@(txScostamento)</span>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
    </div>				
</section>

<script type="text/javascript">
    $(function () {
        $(".progress-bar").each(function () {
            each_bar_width = $(this).attr('aria-valuenow');
            $(this).width(each_bar_width + '%');
        });
    });
</script>