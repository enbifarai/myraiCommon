@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@model FormStatsModel
@{
    ViewBag.Title = "Statistiche Form";
    Layout = "~/Views/Shared/_layoutContent.cshtml";
}

<section role="main" class="content-body">
    <main id="main-container">
        <div class="content">
            <div class="row">
                <div class="col-sm-8">
                    @{
                        bool GappChiuso = false;
                    }

                    @if (!UtenteHelper.GappChiuso())
                    {
                        @Html.Partial("lista", Model.forms)
                    }
                    else
                    {
                        @Html.Partial("_cics_chiuso")
                        GappChiuso = true;
                    }
                </div>

                <div class="col-sm-4">
                    <section class="panel">
                        <header class="panel-heading">
                            <div class="panel-actions">
                                <a href="#" class="panel-action panel-action-toggle" data-panel-toggle=""></a>
                            </div>
                            <h2 class="panel-title">Cerca tra i forms</h2>
                        </header>
                        @using (Html.BeginForm("index", "formstats", FormMethod.Get))
                        {
                            <div class="panel-body" id="my-block">
                                <div class="row">

                                    <div class="col-sm-12 lead">
                                        @Html.TextBoxFor(modelitem=>modelitem.searchModel.nome, new {@class="form-control",
                                                          placeholder="Titolo"})
                                    </div>
                                    <div class="col-sm-12 lead">
                                        @Html.DropDownListFor(model => model.searchModel. id_tipologia,
                                        Model.searchModel.id_tipologia_list, "Seleziona",
                                        new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 text-right">
                                        <button type="submit" class="btn btn-info not-auto">Cerca</button>

                                    </div>
                                </div>

                            </div>
                        }
                    </section>

                </div>
            </div>
        </div>

    </main>

    <!-- end: page -->
</section>


<div class="modal right fade" id="modal-form-primario" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-popin">

        <div class="modal-content height100">

            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header bg-cdf" style="height: 58px;">
                    <ul class="block-options visible-xs">
                        <li>
                            <button data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                        </li>
                    </ul>
                    <h4 id="tit-prim" class="lead" style="float: left; margin: -3px 0 0 0px; font-size: 2.1rem; color: #fff;">
                        Nuovo Form Primario
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                </div>

                <div class="row no-margin-left-right" id="form-primario-content">




                </div>

            </div>

        </div>

    </div>
</div>

<div class="modal right fade" id="modal-form-secondario" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-popin">

        <input type="hidden" id="id-form-secondario" />
        <div class="modal-content height100">

            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header bg-cdf" style="height: 58px;">
                    <ul class="block-options visible-xs">
                        <li>
                            <button data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                        </li>
                    </ul>
                    <h4 id="tit-sec" class="lead" style="float: left; margin: -3px 0 0 0px; font-size: 2.1rem; color: #fff;">
                        Nuovo Form Secondario
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                </div>

                <div class="row no-margin-left-right" id="form-secondario-content">




                </div>

            </div>

        </div>

    </div>
</div>

<div class="modal right fade" id="modal-form-question" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-popin">

        <input type="hidden" id="id-form-question" />
        <div class="modal-content height100">

            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header bg-cdf" style="height: 58px;">
                    <ul class="block-options visible-xs">
                        <li>
                            <button data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                        </li>
                    </ul>
                    <h4 id="tit-que" class="lead" style="float: left; margin: -3px 0 0 0px; font-size: 2.1rem; color: #fff;">
                        Nuova voce
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                </div>

                <div class="row no-margin-left-right" id="form-question-content">




                </div>
            </div>
        </div>
    </div>
</div>


