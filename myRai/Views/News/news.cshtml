@using System.Globalization;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model NewsEditorModel

<section class="rai panel">
    <header class="panel-heading">
        <div class="panel-actions">


            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle="" aria-labelledby="lblSitFeriePerm" aria-expanded="true"></a>

        </div>

        <h1 id="lblSitFeriePerm" class="panel-title">News</h1>
        <div class="panel-actions rai-panel-actions">
            <a href="#" class="panel-action rai panel-action-toggle" data-panel-toggle="" aria-labelledby="lblRightBox" aria-expanded="true"></a>
        </div>

    </header>
        <div class="panel-body no-padding">
            <div class="block " style="margin-bottom:0px;">
                <ul class="nav nav-tabs nav-tabs-alt nav-justified" id="tabContent">
                    <li class="active"><a href="" data-toggle="tab">Main news</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active bg-neutrals-xl-10" style="margin:-15px;padding:15px;" id="">
                @foreach ( var item in Model.NewsList )
                {
                            <div class="row">
                                <div class="col-sm-12">
                                    <section class="rai panel">
                                        <div class="panel-body ">
                                            <div class="row push-10" tabindex="0">
                                                <div class="col-sm-8 col-lg-6">
                                                    <label class="rai-font-md-bold">@item.titolo</label>
                                                </div>
                                            </div>
                                            <div class="rai-table-info">
                                                <div class="row push-xs-10" tabindex="0">
                                                    <div class="col-xs-12 col-sm-4 col-xl-2"><span>Data: </span></div>
                                                    <div class="col-xs-12 col-sm-7 col-xl-7"><label>@(((DateTime)item.data_info).ToString("dd/MM/yyyy HH.mm"))</label></div>
                                                    <div class="col-xs-12 col-sm-1 col-xl-2">
                                                        <i class="icons icon-pencil edit-news-content" style="cursor:pointer" title="" data-id-news="@item.id"></i>
                                <i class="icons icon-trash " style="cursor:pointer" onclick="delNews(@item.id)"></i>
                                                    </div>
                                                </div>
                                                <div class="row push-xs-10" tabindex="0">
                                                        <div class="col-xs-12 col-sm-4 col-xl-2"><span>Contenuto: </span></div>
                                                    <blockquote class="blockquote">
                                                        <div class="col-xs-12 col-sm-8 col-xl-10">
                                                            <span>@Html.Raw(item.contenuto)</span>
                                                        </div>
                                                    </blockquote>
                                                </div>
                                            </div>
                                            <div class="row push-xs-10" tabindex="0">
                                                <div class="col-xs-12 col-sm-4 col-xl-2"><span>Destinatari: </span></div>
                                                
                                                <div  class="col-xs-12 col-sm-8 col-xl-10">
                                @if ( item.destinatari_any )
                                {
                                    @:Tutti  <br />
                                }
                                @if ( !String.IsNullOrWhiteSpace( item.destinatari_matricole ) )
                                {
                                    @:Matricole: @item.destinatari_matricole <br />
                                }
                                @if ( !String.IsNullOrWhiteSpace( item.destinatari_sedigapp ) )
                                {
                                    @:Sedi: @item.destinatari_sedigapp <br />
                                }
                                @if ( !String.IsNullOrWhiteSpace( item.destinatari_tipodip ) )
                                {
                                    @:Tipi: @item.destinatari_tipodip  <br />
                                }
                                @if ( item.destinatari_L1 == true )
                                {
                                    @:Livelli 1 <br />
                                }
                                @if ( item.destinatari_L2 == true )
                                {
                                    @:Livelli 2 <br />
                                }

        </div>





    </div>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
</section>


  
<script>InitDatePicker()</script>


