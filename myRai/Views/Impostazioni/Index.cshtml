@using myRaiHelper
@using myRaiCommonManager
@using myRai.Business
@using myRai.Models
@model myRaiCommonModel.ProfiloPersonaleModel

@{
    Layout = "~/Views/Shared/_layoutContent.cshtml";
    ViewBag.Title = "Rai per Me - Impostazioni";
}

<script src="@Url.Content("~/assets/js/myRaiV2.js")"></script>


@{
    string s = CommonManager.GetTema(CommonManager.GetCurrentUserMatricola());
}


<section role="main" class="content-body" style="padding-top:10px;">
    <!-- start: page -->
    <!-- Main Container -->

    <main id="main-container">

        <div class="content">
            @if (Utente.IsAbilitatoGapp())
            {
                <div class="row">
                    <div class="col-md-8">
                        @Html.Partial("subpartial/Widget_GestioneNotifiche", Model)
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("subpartial/Widget_GestioneTema", "verticale")
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        @Html.Partial("subpartial/Widget_GestioneTema", "orizzontale")
                    </div>
                </div>
            }
        </div>
    </main>
    @section afterjs
           {
        <script>
                   @Html.Raw(Model.JSlines)
        </script>

    }
    <!-- end: page -->
</section>
