                type: 'error',
                confirmButtonClass: "btn btn-primary btn-lg",
                confirmButtonText: 'Ok',
                customClass: 'rai'
            });
            return false;
        }

        var esci = false;

        $('input[data-check-group="scelta-filter"]:checked').each(function () {
            var isChecked = $(this).is(':checked');
            var idParent = $(this).attr('id');
            // verifica se ha delle sottovoci
            var countFigli = $('input[id^="' + idParent + '_"]').length;
            var countFigliDal = $('input[id^="' + idParent + '_Dal"]').length;
            var countFigliAl = $('input[id^="' + idParent + '_Al"]').length;

            countFigli = countFigli - countFigliDal - countFigliAl;

            var almenoUnFiglioSelezionato = false;
            if (countFigli > 0) {
                $('input[id^="' + idParent + '_"]').each(function () {
                    if ($(this).is(':checked')) {
                        almenoUnFiglioSelezionato = true;
                    }
                });

                if (!almenoUnFiglioSelezionato) {
                    swal({
                        title: 'E\' necessario selezionare almeno una delle sottovoci',
                        type: 'error',
                        confirmButtonClass: "btn btn-primary btn-lg",
                        confirmButtonText: 'Ok',
                        customClass: 'rai'
                    });
                    esci = true;
                    return false;
                }
            }

            var esisteDal = $('input[id^="' + idParent + '_Dal"]').length;
            var esisteAl = $('input[id^="' + idParent + '_Al"]').length;
            var Scelta_Dal = "";
            var Scelta_Al = "";

            if (esisteDal > 0) {
                Scelta_Dal = $('#' + idParent + '_Dal').val();
                if (Scelta_Dal.length == 0 ||
                    Scelta_Dal.length != 10 ||
                    Scelta_Dal == null) {
                    swal({
                        title: 'E\' necessario selezionare le date',
                        type: 'error',
                        confirmButtonClass: "btn btn-primary btn-lg",
                        confirmButtonText: 'Ok',
                        customClass: 'rai'
                    });
                    esci = true;
                    return false;
                }
            }

            if (esisteAl > 0) {
                Scelta_Al = $('#' + idParent + '_Al').val();
                if (Scelta_Al.length == 0 ||
                    Scelta_Al.length != 10 ||
                    Scelta_Al == null) {
                    swal({
                        title: 'E\' necessario selezionare le date',
                        type: 'error',
                        confirmButtonClass: "btn btn-primary btn-lg",
                        confirmButtonText: 'Ok',
                        customClass: 'rai'
                    });
                    esci = true;
                    return false;
                }
            }

        });

        if (esci)
        {
            return true;
        }

       swal({
            title: 'Conferma selezione',
            html: "<br><p class='rai-font-md'>Sicuro di voler continuare?</p><p class='rai-font-md'>Si ricorda che non è possibile modificare la scelta.</p>",
            showCancelButton: true,
            confirmButtonClass: "btn btn-primary btn-lg",
            confirmButtonText: "Si",
            cancelButtonClass: "btn btn-secondary btn-lg",
            cancelButtonText: "No",
            closeOnConfirm: true,
            customClass: 'rai',
            reverseButtons: true
        }).then(function () {
            var selezione = "";
            var dateSelezionate = "";

            $('input[data-check-group="scelta-filter"]:checked').each(function () {
                selezione += $(this).val() + ";";

                var isChecked = $(this).is(':checked');
                var idParent = $(this).attr('id');

                var valore = $(this).val();
                var esisteDal = $('input[id^="' + idParent + '_Dal"]').length;
                var esisteAl = $('input[id^="' + idParent + '_Al"]').length;
                var Scelta_Dal = "";
                var Scelta_Al = "";

                if (esisteDal > 0) {
                    Scelta_Dal = $('#' + idParent + '_Dal').val();
                }

                if (esisteAl > 0) {
                    Scelta_Al = $('#' + idParent + '_Al').val();
                }

                if (esisteDal > 0 && esisteAl > 0) {
                    if (dateSelezionate == "") {
                        dateSelezionate = valore + "|" + Scelta_Dal + "#" + Scelta_Al;
                    }
                    else {
                        dateSelezionate = dateSelezionate + "-" + valore + "|" + Scelta_Dal + "#" + Scelta_Al;
                    }
                }
                else if (esisteDal > 0) {
                    if (dateSelezionate == "") {
                        dateSelezionate = valore + "|" + Scelta_Dal + "#";
                    }
                    else {
                        dateSelezionate = dateSelezionate + "-" + valore + "|" + Scelta_Dal + "#";
                    }
                }
            });

            $.ajax({
                url: '@Url.Action("SalvaScelta", "Moduli")',
                type: "POST",
                dataType: "html",
                data: {
                    scelta: selezione,
                    dateSelezionate: dateSelezionate
                },
                success: function (data) {
                    switch (data) {
                        case "OK":
                            $('#@(Model.WidgetId)_ChiudiModale').click();
                            $.ajax({
                                type: "POST",
                                cache: false,
                                async: false,
                                contentType: "application/json; charset=utf-8",
                                dataType: 'html',
                                url: '@Url.Action( "RicaricaWidget" , "Moduli")',
                                success: function (data) {
                                    $('#ContainerDiv_WdgSmartWorking').html(data);
                                },
                                error: function (parm1, parm2, parm3) {
                                }
                            });
                            swal({
                                title: 'Modulo compilato con successo',
                                type: 'success',
                                confirmButtonClass: "btn btn-primary btn-lg",
                                showConfirmButton: true,
                                confirmButtonText: 'Ok',
                                customClass: 'rai'
                            });
                            break;
                        default:
                            swal({
                                title: data,
                                type: 'error',
                                confirmButtonClass: "btn btn-primary btn-lg",
                                confirmButtonText: 'Ok',
                                customClass: 'rai'
                            });
                            break;
                    }
                },
                error: function (parm1, parm2, parm3) {
                }
            });
        });
    }
</script>