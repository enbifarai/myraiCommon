    function ModuloSmartWorking_AttivaElementiTab(nTab) {
        for (var i = 1; i < nTab; i++) {
            $('#tab-modSW-' + i).removeClass('active');
            $('#tab-modSW-' + i).addClass('disable');
            $('#tab-modSW-' + i).addClass('completed');
            $('#btns-fase' + i).hide();
            $('#div-sw-tab' + i).hide();
        }

        $('#tab-modSW-' + nTab).removeClass('disable');
        $('#tab-modSW-' + nTab).addClass('active');
        $('#btns-fase' + nTab).show();
        $('#div-sw-tab' + nTab).show();

        for (var i = nTab + 1; i <= 2; i++) {
            $('#tab-modSW-' + i).removeClass('active');
            $('#tab-modSW-' + i).addClass('disable');
            $('#tab-modSW-' + i).removeClass('completed');
            $('#btns-fase' + i).hide();
            $('#div-sw-tab' + i).hide();
        }
    }

    function ModuloSmartWorking_Btn2PrevClick() {
        ModuloSmartWorking_AttivaElementiTab(1);
        for (var i = 1; i <= 6; i++) {
            $('div[data-gruppo="' + i + '"]').each(function () {
                $(this).hide();
            });
        }
    }

    function ModuloSmartWorking_Btn1Click() {
        ModuloSmartWorking_AttivaElementiTab(2);
        $('input[id^="Gruppo"][type="checkbox"]:checked').each(function () {
            var valore = $(this).val();
            $('div[data-gruppo="' + valore + '"]').each(function () {
                $(this).show();
            });
        });

        var selezionati = $('input[id^="Gruppo"][type="checkbox"]:checked').length;
        if (selezionati > 1) {
            var idx = 1;
            $('sup').not('sup[data-nota=""]').each(function () {
                if ($(this).is(':visible')) {
                    $(this).text(idx);
                    idx++;
                }
            });

            var idx = 1;
            $('sup[data-nota=""]').each(function () {
                if ($(this).is(':visible')) {
                    $(this).text(idx);
                    idx++;
                }
            });
        }
    }

    $('input[id^="Gruppo"][type="checkbox"]').on('click', function () {
        var isChecked = $(this).is(':checked');
        var idParent = $(this).attr('id');
        var valore = $(this).val();
        var nextIsDisabled = $('#btns-fase1-next').hasClass('disable');

        if (isChecked) {
            if (nextIsDisabled) {
                $('#btns-fase1-next').removeClass('disable');
            }
        }
        else {

            $('div[data-gruppo="' + valore + '"] input[id^="Scelta"][type="checkbox"][data-check-group="scelta-filter"]').each(function () {
                $(this).prop('checked', false);
            });

            var almenoUno = false;
            // verifica che almeno un check sia selezionato
            $('input[id^="Gruppo"][type="checkbox"]').each(function () {
                if ($(this).prop('checked')) {
                    almenoUno = true;
                }
            });

            if (!almenoUno) {
                if (!nextIsDisabled) {
                    $('#btns-fase1-next').addClass('disable');
                }
            }
        }
    });

    $('input[id^="Scelta"][type="checkbox"]').on('click', function () {
        var isChecked = $(this).is(':checked');
        var idParent = $(this).attr('id');

        $('input[id^="'+idParent+'_"]').each(function () {
            if (isChecked) {
                if ($(this).prop('disabled')) {
                    $(this).removeAttr('disabled');
                }
            }
            else {
                if (!$(this).prop('disabled')) {
                    $(this).attr('disabled', 'disabled');
                    $(this).prop('checked', false);
                }
            }
        });
    });

    JSRai.initHelper('datetimepicker');

    function ConfermaScelta() {
