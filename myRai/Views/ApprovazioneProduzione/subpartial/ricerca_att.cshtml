@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;
@using myRai.DataControllers;

@model  RicercaDaApprovareAttivita

<section class="panel">
    <header class="panel-heading">
        <h2 id="lblCercaRichieste" class="panel-title">Cerca tra le richieste</h2>
        <div class="panel-actions rai-panel-actions">
            <button tabindex="0" type="button" class="btn btn-action-icon" data-toggle="block-option" onclick="reset_ric()">
                <i class="fa fa-refresh"></i>
            </button>

            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle="" aria-labelledby="lblCercaRichieste" aria-expanded="true"></a>
        </div>
    </header>
    <div class="panel-body" id="my-block">
        <div class="js-form-search form-group">
            <div class="row push-10">
                <div class="col-lg-12">
                    <label class="rai-caption" for="Valoreda">Nominativo</label>
                    @Html.TextBoxFor( x => x.Nominativo , new { @class = "form-control" , placeholder = "Nominativo" , name = "nominativo" , id = "nominativo" } )
                </div>
            </div>

            <div class="row push-10">
                <div class="col-sm-12">
                    <label class="rai-caption">Stato</label>
                    @Html.DropDownListFor( x => x.stato , Model.ListaStati as List<SelectListItem> , "Stato" , new { @class = "form-control" , name = "stato" , id = "stato" } )
                </div>
            </div>

            <div id="divSelectBox">
                @Html.Partial( "~/Views/ApprovazioneProduzione/subpartial/_selectAttivita.cshtml" , Model )
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <label class="rai-caption">Data richiesta</label>
                </div>
                <div class="col-md-12 col-lg-6 push-10">
                    <div class="input-group">
                        <span onclick="$('#datada').datetimepicker('show')" class="input-group-addon"><i class="icons icon-calendar"></i></span>
                        <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="datada" name="datada" placeholder="Dal">
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 push-10">
                    <div class="input-group">
                        <span onclick="$('#dataal').datetimepicker('show')" class="input-group-addon"><i class="icons icon-calendar"></i></span>
                        <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="dataal" name="dataal" placeholder="Al">
                    </div>
                </div>
            </div>

            <div class="row push-5-t">
                <div class="col-sm-12 ">
                    <input type="submit" onclick="Verifica();" id="btnFilter" name="btnFilter" disabled class="btn rai-btn-primary full-width" data-parentdiv="daapprovare" data-filterelements="my-block,my-block2" title="Cerca" value="Cerca" />
                </div>
            </div>
        </div>
    </div>
</section>