@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@model DaFirmareModel

@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<div id="page-loaderR"><span class="loaderR"><span class="loader-innerR">S</span></span></div>
<div id="page-container" class="sidebar-l sidebar-mini sidebar-o header-navbar-fixed">
    @Html.Partial( "../Shared/sidebar3" , myRaiHelper.UtenteHelper.getSidebarModel(  ) )
    @Html.Partial( "../Shared/header" , new myRaiCommonModel.NotifichePopupModel( CommonHelper.GetCurrentUserMatricola( ) ) )

    <main id="main-container">
        <div class="content">
            <div class="row">
                <div class="col-sm-8">
                    @if ( !UtenteHelper.GappChiuso( ) )
                    {
                        if ( UtenteHelper.IsBoss( CommonHelper.GetCurrentUserPMatricola() ) )
                        {
                            @Html.Partial( "../Responsabile/da_firmare" , Model.Sedi )
                        }
                    }
                    else
                    {
                        @Html.Partial( "_cics_chiuso" )
                    }
                </div>
                <div class="col-sm-4">
                    @Html.Partial( "../home/today" , Model.modeldash )
                </div>
            </div>
        </div>
    </main>
    <!-- FINE Main Container -->
</div>
<!-- FINE Page Container -->
