@using System.Globalization;
@using myRaiHelper;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;
@using myRaiCommonManager;

<div class="modal right fade" id="modal-profili" role="dialog" aria-hidden="true" style="display: none;">
    <input type="hidden" id="idprofilo" />
    <div class="modal-dialog modal-dialog-popin">
        <div class="modal-content height100">
            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header bg-cdf" style="height: 58px;">
                    <ul class="block-options visible-xs">
                        <li>
                            <button data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                        </li>
                    </ul>
                    <h4 id="tit-modal-boss" class="lead" style="float: left; margin: -3px 0 0 0px; font-size: 2.1rem; color: #fff;">
                        Gestione Profili
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="row no-margin-left-right">
                    @using ( Html.BeginForm( "modProfilo" , "profilimenu" , FormMethod.Post , new { id = "form-profili" } ) )
                    {
                        @*COLONNA SINISTRA---------------------------------------------------------*@
                        <div class="col-sm-6 no-pad-left no-pad-right border-right ">
                            <div class="block-header block-content-mini bg-cel " style="padding-top:12.5px;padding-bottom:12.5px;">
                                <h4 class="font-w600">Caratteristiche profilo </h4>
                            </div>
                            <div id="datiprofilo">
                            </div>
                            @*COLONNA DESTRA---------------------------------------------------------*@
                        </div>
                        <div class="col-sm-6 no-pad-left no-pad-right border-right ">
                            <div class="block-header block-content-mini bg-cel " style="padding-top:12.5px;padding-bottom:12.5px;">
                                <h4 class="font-w600">Menu items </h4>
                            </div>
                            <div id="datimenu">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>