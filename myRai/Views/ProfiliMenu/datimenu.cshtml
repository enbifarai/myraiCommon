@using System.Globalization;
@using myRaiHelper;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;
@using myRaiCommonManager;

@model ProfiloDatiMenuModel

<div class="row" style="margin-top:10px;margin-bottom:10px">
    <div class="col-sm-7" style="text-align:right">
        Copia voci da:
    </div>
    <div class="col-sm-5">
        <select class="form-control" id="copiaprofilo" name="copiaprofilo" onchange="CopiaProfilo()">
            <option>Scegli profilo... </option>
            @foreach ( var profilo in new myRaiData.digiGappEntities( ).MyRai_Profili )
            {
                <option value="@String.Join(",", profilo.MyRai_Profili_Menu.Select(x=>x.idmenu).ToArray())">@profilo.nome_profilo</option>
            }
        </select>
    </div>
</div>

@foreach ( var item in Model.vociMenu )
{

    <div class="row">
        <div class="col-sm-2">
            <input type="checkbox" name="vocemenu" style="width:20px;height:20px" value="@item.voceMenu.ID"
                   @if ( @item.Selected ) { @: checked="checked"
                   } />
        </div>
        <div class="col-sm-5">@item.voceMenu.Titolo</div>
        <div class="col-sm-5">@item.voceMenu.customView</div>
    </div>
}
