@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model  RicercaDaApprovareAttivita

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a tabindex="0" type="button" data-toggle="block-option" href="javascript:reset_ric()">
                <i class="icons icon-refresh"></i>
            </a>
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle="" aria-labelledby="lblCercaRichieste" aria-expanded="true"></a>
        </div>
        <h2 id="lblCercaRichieste" class="panel-title">Cerca tra le richieste</h2>
    </header>
    <div class="panel-body" id="my-block">
        <div class="row" style="margin-bottom:4px">
            <div class="col-sm-12">@Html.TextBoxFor( x => x.Nominativo , new { @class = "form-control" , placeholder = "Nominativo" , name = "nominativo" , id = "nominativo" } )</div>
        </div>
        <div class="row" style="margin-bottom:4px">
            <div class="col-sm-12">
                @Html.DropDownListFor( x => x.titolo , Model.ListaTitoli as List<SelectListItem> , "Titolo" , new { @class = "form-control" , name = "titolo" , id = "titolo" } )
            </div>
        </div>
        <div class="row" style="margin-bottom:4px">
            <div class="col-sm-12">
                @Html.DropDownListFor( x => x.eccezione , Model.ListaEccezioniCeiton as List<SelectListItem> , "Eccezione" , new { @class = "form-control" , name = "eccezione" , id = "eccezione" } )
            </div>
        </div>
        <div class="row" style="margin-bottom:4px">
            <div class="col-sm-12">
                @Html.DropDownListFor( x => x.stato , Model.ListaStati as List<SelectListItem> , "Stato" , new { @class = "form-control" , name = "stato" , id = "stato" } )
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="input-group mb-md">
                    <span class="input-group-addon"><i class="icons icon-calendar"></i></span>
                    <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="datada" name="datada" placeholder="Dal">
                    <span class="input-group-addon"><i class="icons icon-calendar"></i></span>
                    <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="dataal" name="dataal" placeholder="Al">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 ">
                <div class="rai-btn-fill">
                    <a onclick="$('#refresh-attivita').click()" id="btnFilter" name="btnFilter" disabled class="btn rai-btn-primary" data-parentdiv="daapprovare" data-filterelements="my-block,my-block2">Cerca</a>
                </div>
            </div>
        </div>
    </div>
</section>