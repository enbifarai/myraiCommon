@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

<div class="modal fade" id="richiesta-modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-popout">
        <div class="modal-content">
            <div class="block block-themed block-transparent remove-margin-b">
                <div class="block-header bg-primary-dark">
                    <ul class="block-options">
                        <li>
                            <span class="label label-info block-title h4">18 Gennaio 2017</span>
                        </li>
                        <li>
                            <button data-dismiss="modal" type="button"><i class="si si-close"></i></button>
                        </li>
                    </ul>
                    <h3 class="block-title">RICHIESTA DI FERIE</h3>
                </div>
                <div class="block-content block-content-full">
                    <div class="row">
                        <div class="col-sm-12">
                            <ul class="nav-users">
                                <li>
                                    <a href="base_pages_profile_v2.html">
                                        <img class="img-avatar" src="~/assets/img/avatars/avatar2.jpg" alt="">
                                        <i class="fa fa-circle text-success"></i> Vincenzo Bifano
                                        <div class="font-w400 text-muted"><small><i class="fa fa-users"></i> DDE30 - SISTEMI DEL PERSONALE</small></div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="block-content block-content-full block-content-mini bg-gray-light">
                    <span class="font-w600">Assenti nello stesso giorno</span>
                </div>
                <div class="block-content">
                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 50px;">#</th>
                                <th>Nome</th>
                                <th class="text-center" style="width: 200px;">Permesso</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="active">
                                <td class="text-center">1</td>
                                <td>Mario Rossi</td>
                                <td>
                                    <span class="label text-info">FERIE</span>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">2</td>
                                <td>Guido Bianchi</td>
                                <td>
                                    <span class="label text-info">PERMESSO RETRIBUITO</span>
                                </td>
                            </tr>
                            <tr class="warning">
                                <td class="text-center">3</td>
                                <td>Vito Verdi</td>
                                <td>
                                    <span class="label text-info">FUORI SEDE</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="block-content block-content-full block-content-mini bg-gray-light">
                    <i class="fa fa-fw fa-plus"></i> <span class="font-w600">Nota in risposta</span>
                </div>
                <div class="block-content">
                    <form class="form-horizontal" action="base_pages_tickets.html" method="post" onsubmit="return false;">
                        <div class="form-group push-10">
                            <div class="col-xs-12">
                                <textarea class="form-control" rows="4" placeholder="La tua nota"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="block-content block-content-full bg-gray-lighter clearfix">
                    <button class="pull-right btn btn-square btn-default push-5-r push-10" type="button">
                        <i class="fa fa-fw fa-check text-success"></i> Approva
                    </button>
                    <button class="pull-right btn btn-square btn-default push-5-r push-10" type="button">
                        <i class="fa fa-fw fa-remove text-danger"></i> Rifiuta
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>