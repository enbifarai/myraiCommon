@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@model BoxSituazioneModel

@{ 
    string mainText = String.IsNullOrEmpty(Model.CifraPrincipale) && !String.IsNullOrEmpty(Model.MessaggioPrincipale) ? Model.MessaggioPrincipale : Model.CifraPrincipale;
}

@Html.RenderWidget(WidgetType.Normal, Model.Titolo, Model.ClasseIcona, mainText, Model.AllaData, action: new ActionTemplate()
{
    Href = Model.HrefPulsante,
    Text = Model.TestoPulsante
})

