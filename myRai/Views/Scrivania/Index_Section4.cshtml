@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@model SituazioniEAnagraficaModel

<div class="panel-card-container" style="min-height:0px" data-async="/scrivania/index_section4?gappclosed=@Model.GappClosed">
    @if (Model.IsPreview)
    {
        if (Model.Boxes != null)
        {
            <div class="panel-card">
                <div class="panel-card-container" style="min-height:0px">
                    @foreach (var box in Model.Boxes)
                    {
                        if (box.Visibile == true)
                        {
                            <div class="panel-card">
                                @Html.Partial("subpartial/box_situazione_skeleton", box)
                            </div>

                        }
                    }
                </div>
            </div>
        }
    }
    else
    {
            <div class="panel-card">
                <div class="panel-card-container" style="min-height:0px">
                    @foreach (var box in Model.Boxes)
                    {
                        if (box.Visibile == true)
                        {
                            <div class="panel-card">
                                @Html.Partial("subpartial/box_situazione", box)
                            </div>
                        }
                    }
                </div>
            </div>
    }

    @if (Model.Visibile)
    {
        <div class="panel-card">
            @if (Model.IsPreview)
            {
                @Html.Partial("subpartial/anagrafica_skeleton")
            }
            else
            {
                @Html.Partial("subpartial/anagrafica", new UtenteTerzoAnagrafica());
            }
        </div>
    }
</div>
