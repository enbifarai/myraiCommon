@using System.Globalization;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model JobPostingModel

@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<style>
    html, body {
        background-color: #ffffff;
    }

    .job-posting {
        width: 100%;
        padding-top: 100px;
        text-align: center;
    }

    .msg {
        color: #999;
        font-family: Open Sans, Arial, sans-serif;
        font-size: 30px;
        font-weight: 100;
    }

    #A_1 {
        box-sizing: border-box;
        color: rgb(51, 51, 51);
        display: inline-block;
        height: 30px;
        text-align: center;
        text-decoration: none solid rgb(51, 51, 51);
        text-size-adjust: 100%;
        text-transform: uppercase;
        touch-action: manipulation;
        vertical-align: middle;
        column-rule-color: rgb(51, 51, 51);
        perspective-origin: 34.1719px 15px;
        transform-origin: 34.1719px 15px;
        user-select: none;
        caret-color: rgb(51, 51, 51);
        background: rgb(243, 243, 243) none repeat scroll 0% 0% / auto padding-box border-box;
        border: 0px none rgb(51, 51, 51);
        border-radius: 3px 3px 3px 3px;
        font: normal normal 700 normal 10.4px / 14.8571px "Open Sans", Arial, sans-serif;
        outline: rgb(51, 51, 51) none 0px;
        padding: 6px 12px;
    }
</style>

<div class="job-posting">
    <img src="/assets/img/unauth.png" />
    <h2 class="msg">Impossibile accedere al job posting in quanto risulta non attivo.</h2>
</div>