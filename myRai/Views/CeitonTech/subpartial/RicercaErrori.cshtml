<section class="rai panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle=""></a>
        </div>
        <h2 class="panel-title">Ricerca log</h2>
    </header>
    <div class="panel-body" onkeydown="CheckEnter()">
        <div class="rai form-group">
        <div class="row">
                <div class="col-xl-6 col-sm-12">
                    <label class="rai-caption">Matricola</label>
                <input type="text" class="form-control" id="matrError" style="width:100%" />
            </div>
                <div class="col-xl-6 col-sm-12">
                    <label class="rai-caption">Data operazione</label>
                <div class="input-group mb-md">
                    <span class="input-group-addon"><i class="icons icon-calendar"></i></span>
                    <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="dataError" name="dataError" value="@(DateTime.Today.ToString("dd/MM/yyyy"))" placeholder="">
                </div>
            </div>
                <div class="col-xl-6 col-sm-12">
                    <label class="rai-caption">Data riferimento</label>
                <div class="input-group mb-md">
                    <span class="input-group-addon"><i class="icons icon-calendar"></i></span>
                    <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="dataRifError" name="dataRifError" placeholder="">
                </div>
            </div>
                <div class="col-xl-6 col-sm-12">
                    <label class="rai-caption">Errore</label>
                <input type="text" class="form-control" id="msgError" style="width:100%" />
            </div>
                <div class="col-xl-6 col-sm-12">
                    <div class="rai-checkbox">
                <input type="checkbox" class="" id="withError"  checked="checked"/>
                        <label class="rai-caption">Solo con errore</label>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="panel-footer" style="display:block;">
        <div class="rai-btn-fill">
            <input type="button" id="btnAzzera" class="btn rai-btn-secondary" title="Azzera" value="Azzera" onclick="ClearRicerca()" />
            <input type="submit" id="btnCerca" class="btn rai-btn-primary" title="Cerca" value="Cerca" onclick="UpdateTableError()" />
        </div>
    </div>
</section>

<script type="text/javascript">
    InitDatePicker();

    function CheckEnter()
    {
        if (event.keyCode == 13)
        {
            UpdateTableError();
        }
    }

    function ClearRicerca()
    {
        $('#dataError').val('');
        $('#dataRifError').val('');
        $('#matrError').val('');
        $('#msgError').val('');

        UpdateTableError();
    }
</script>
