<section class="rai panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle=""></a>
        </div>
        <h2 class="panel-title">Ricerca log Rai per Me</h2>
    </header>
    <div class="panel-body" onkeydown="CheckEnterRPM()">
        <div class="row">
            <div class="rai form-group">
                <div class="col-xl-6 col-sm-12">
                    <label class="rai-caption">Matricola</label>
                <input type="text" class="form-control" id="matrErrorRPM" style="width:100%" />
            </div>
                <div class="col-xl-6 col-sm-12">
                    <label class="rai-caption">Data operazione</label>
                <div class="input-group mb-md">
                    <span class="input-group-addon"><i class="icons icon-calendar"></i></span>
                    <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="dataErrorRPM" name="dataErrorRPM" value="@(DateTime.Today.ToString("dd/MM/yyyy"))" placeholder="">
                </div>
            </div>
                <div class="col-xl-6 col-sm-12">
                    <label class="rai-caption">Data riferimento</label>
                <div class="input-group mb-md">
                    <span class="input-group-addon"><i class="icons icon-calendar"></i></span>
                    <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="dataRifErrorRPM" name="dataRifErrorRPM" placeholder="">
                </div>
            </div>
                <div class="col-xl-6 col-sm-12">
                    <label class="rai-caption">Errore</label>
                <input type="text" class="form-control" id="msgErrorRPM" style="width:100%" />
            </div>
                <div class="col-xl-6 col-sm-12">
                    <div class="rai-checkbox">
                <input type="checkbox" class="" id="withErrorRPM" checked="checked" />
                        <label class="rai-caption">Solo con errore</label>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="panel-footer">
        <div class="rai-btn-fill">
        <input type="button" id="btnAzzera" class="btn btn-primary" title="Azzera" value="Azzera" onclick="ClearRicercaRPM()" />
        <input type="submit" id="btnCerca" class="btn btn-primary" title="Cerca" value="Cerca" onclick="UpdateTableErrorRPM()" />
        </div>
    </div>
</section>

<script type="text/javascript">
    InitDatePicker();

    function CheckEnterRPM()
    {
        if (event.keyCode == 13)
        {
            UpdateTableErrorRPM();
        }
    }

    function ClearRicercaRPM()
    {
        $('#dataErrorRPM').val('');
        $('#dataRifErrorRPM').val('');
        $('#matrErrorRPM').val('');
        $('#msgErrorRPM').val('');

        UpdateTableErrorRPM();
    }
</script>
