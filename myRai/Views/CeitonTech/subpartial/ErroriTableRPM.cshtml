@model myRai.Controllers.CeitonErrorTable

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle=""></a>
        </div>
        <h2 class="panel-title">Elenco log Rai per Me</h2>
    </header>
    <div class="panel-body">
        <div id="wait-error-tableRPM" class="text-center" style="display:none;">
            <i class="fa fa-refresh fa-spin" style="font-size: 22px; color: #ebebeb;"></i>
        </div>
        <div id="content-error-tableRPM">
            <div class="row">
                <div class="col-sm-12" style="height:400px;overflow-y:auto">
                    @if (Model.RichiesteRPM.Count() == 0)
                    {
                        <h4>Nessun record trovato</h4>
                    }
                    else
                    {
                        <i>Numero record: @Model.RichiesteRPM.Count()</i>
                        <table class="js-table-sections table table-hover" role="grid" id="erroriTableRPM" aria-label="Errori nelle richieste">
                            <thead>
                                <tr>
                                    <th>Data oper.</th>
                                    <th>Data rif.</th>
                                    <th>Matricola</th>
                                    <th>Flusso</th>
                                    <th>Errore</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.RichiesteRPM.OrderBy(x => x.data_ultimo_invio))
                            {
                                @*<tbody class="js-table-sections-header">*@
                                    <tr role="row">
                                        <td>@item.data_ultimo_invio.ToString("dd/MM/yyyy\nHH:mm")</td>
                                        <td>@item.data.ToString("dd/MM/yyyy")</td>
                                        <td>@item.matricola</td>
                                        <td>Da @item.ultimo_invio_da</td>
                                        <td>@item.errore</td>
                                        <td><i class="icon icon-info" onclick="ShowMessage(@item.contenuto_json)"></i></td>
                                    </tr>
                                @*</tbody>*@

                            }
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    InitDatePicker();
</script>