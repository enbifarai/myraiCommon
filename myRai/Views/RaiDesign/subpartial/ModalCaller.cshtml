<div class="row">
    <div class="col-sm-12">
        <div class="rai-btn-fill">
            <button class="btn rai-btn-small" onclick="OpenModalFull()">Modale full</button>
            <button class="btn rai-btn-small" onclick="OpenModalHalf()">Modale half</button>
        </div>
    </div>
</div>

<div class="row push-10-t push-10">
    <div class="col-sm-12">
        <i>Swal vecchio design</i>
    </div>
    <div class="col-sm-12">
        <div class="rai-btn-fill">
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwalNoCustom('success')">Success</button>
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwalNoCustom('info')">Info</button>
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwalNoCustom('error')">Error</button>
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwalNoCustom('warning')">Warning</button>
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwalNoCustom('question')">Question</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <i>Swal nuovo design</i>
    </div>
    <div class="col-sm-12">
        <div class="rai-btn-fill">
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('success')">Success</button>
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('info')">Info</button>
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('error')">Error</button>
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('warning')">Warning</button>
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('question')">Question</button>
            <button class="btn rai-btn-small" onclick="OpenFeedbackSwalCC('question')">Confirm cancel</button>
        </div>
    </div>
</div>


<script>
    function OpenModalFull() {
        RaiOpenAsyncModal('modal-full','/RaiDesign/ModaleFull');
    }
    function OpenModalHalf() {
        RaiOpenAsyncModal('modal-half', '/RaiDesign/ModaleHalf');
    }


    function OpenFeedbackSwal(tipo) {
        swal({
            title: 'Pratica Conclusa',
            type: tipo,
            confirmButtonText: 'Vedi il riepilogo',
            customClass: 'rai'
        }).then(function () {
            //something
        })
    }

    function OpenFeedbackSwalCC(tipo) {
        swal({
            title: 'Pratica Conclusa',
            type: tipo,
            html: "Riceverai subito un'e-mail di conferma<br>Vuoi modificare anche il numero del Servizio in Mobilità?",
            confirmButtonText: '<i class="fa fa-check"></i> Vedi il riepilogo',
            showCancelButton: true,
            cancelButtonText: '<i class="fa fa-times"></i> No, lascia stare',
            reverseButtons: true,
            customClass: 'rai rai-confirm-cancel',
        }).then(function () {
            //something
        })
    }

    function OpenFeedbackSwalNoCustom(tipo) {
        swal({
            title: 'Pratica Conclusa',
            type: tipo,
            confirmButtonText: 'Vedi il riepilogo',
        }).then(function () {
            //something
        })
    }
</script>