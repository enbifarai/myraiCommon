@using System.Globalization;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model NotificaDettaglio

<div class="block-header block-content-mini bg-cel ">
    <h4 class="font-w600">Dettaglio</h4>
</div>

<div class="block block-rounded" onclick="hidePopover()">
    <div class="block-header">
        <div class="row">
            <div class="col-xs-12">
                <h4>@(Model.Title)</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @Html.Raw( Model.Note.Replace( "\r\n" , "<br/>" ) )
            </div>
        </div>
        @if ( Model.ShowButton )
        {
            <div class="row">
                <div class="col-xs-12" style="text-align:right">
                    <a class="btn btn-md btn-primary" href="@Model.AnchorHref">@Model.AnchorText</a>
                </div>
            </div>
        }
    </div>
</div>
