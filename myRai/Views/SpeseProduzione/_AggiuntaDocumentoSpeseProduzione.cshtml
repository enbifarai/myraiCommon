@using myRaiHelper;

@using (Html.BeginModal("Modal Half"))
{
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginPanel(PanelType.Panel, "Colonna principale", false))
            {


                using (Html.BeginBlock(BlockType.ContentTable, "Modifica anagrafica", new List<ActionTemplate>() { new ActionTemplate() { Icon = "fa fa-refresh" } }))
                {
                    using (Html.BeginForm("SaveDocumentoSpesaProduzione", "SpeseProduzione", FormMethod.Post, new { @id = "modal-form" }))
                    {

                        <div class="form-group">

                            <div class="row push-10">
                                <div class="col-sm-12">
                                    <label class="rai-label">Nome file</label>
                                    <input class="form-control" type="text" id="nome-file-doc" />
                                </div>
                            </div>
                            <div class="row push-10">
                                <div class="col-sm-12">
                                    @Html.RaiUploader("fileUpload1")
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="rai-btn-fill">
                                        <button class="btn rai-btn-secondary" onclick="ClearThisForm()">Pulisci form</button>
                                        <button class="btn rai-btn-primary" onclick="SubmitThisForm(this)">Salva</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
}

<script>
    function ClearThisForm() {
        event.preventDefault();
        RaiClearForm('modal-form');
    }

    function SubmitThisForm(button) {
        RaiSubmitForm(button, 'modal-form',
            function () {
                return {};
            }, null, null, "Salvataggio avvenuto con successo",
            function () {
                $('#modal-half').modal('hide');
            })
    }
</script>