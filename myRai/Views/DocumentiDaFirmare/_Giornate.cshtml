@using myRaiHelper;
@using myRaiCommonModel.DocFirmaModels;
@using MVCProject.Custom_Helpers;

@model GiornateModel

<div id="me">
    <div class="text-left" style="padding: 5px">
        <span style="font-size: 18px">GIORNI DISPONIBILI</span>
    </div>
    <div class="row">
        <div class="col-12">
            @if ( Model.Giornate != null )
            {
                foreach ( var giornata in Model.Giornate )
                {
                    <div class="col-sm-4 col-lg-3">
                        <div class="block dayfirma giornoON" onclick="toggleGiorno(@giornata.data.Day)" data-day="@giornata.data.Day">
                            <div class="block-content block-content-full text-center">
                                <small>@giornata.data.ToString( "dddd" ).ToUpper( )</small>
                                <h3 class="font-s96 text-info">@giornata.data.Day</h3>
                                @if ( CommonHelper.GetParametro<Boolean>( EnumParametriSistema.GestisciDateSuDocumenti ) )
                                {
                                    <div>
                                        <i onclick="ShowEccezioniGiornata('@giornata.data.ToString("dd/MM/yyyy")')" data-day="@giornata.data.Day" class="cursor-pointer fa fa-fw fa-2x fa-edit text-primary idata"></i>
                                        <label>Gestisci data</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>