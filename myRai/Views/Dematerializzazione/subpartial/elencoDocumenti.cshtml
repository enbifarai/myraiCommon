@using myRai.Models

@model CaricaTabellaDocumentiVM

<div class="row" id="div-tabella-documenti-internal">
    <section class="rai panel" style="">
        <header class="panel-heading" data-panel-toggle="">
            <h1 class="panel-title">Richieste di firma documenti</h1>
            <div class="panel-actions rai-panel-actions">
                <a href="#" class="panel-action rai panel-action-toggle" data-panel-toggle="" aria-labelledby="lblRightBox" aria-expanded="true"></a>
            </div>
        </header>
        <div id="div-dem-documenti" class="panel-body no-padding">
            <div id="">
                <div class="block" style="margin-bottom:0px;">
                    <div class="block block-transparent tab-content" style="padding:0px 5px;overflow:unset; margin-bottom:0px;">
                        <div id="dem-tab-1-lavorazione" role="tabpanel" class="tab-pane tab-filtro active">
                            <div class="table-responsive">
                                <table class="rai-table table rai-table-vcenter rai-table-high-row rai-table-panel" id="">
                                    <thead>
                                        <tr>
                                            <th class="text-left">Documento</th>
                                            <th class="text-left">Data emissione</th>
                                            <th class="text-right">Azioni</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Documenti == null || Model.Documenti.Any() == false)
                                        {
                                            <tr>
                                                <td class="text-center no-border" colspan="100"><span class="rai-font-md-neutral">Non ci sono dati da visualizzare</span></td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var r in Model.Documenti)
                                            {
                                                @Html.Partial("~/Views/Dematerializzazione/subpartial/_contentRow.cshtml", r)
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>