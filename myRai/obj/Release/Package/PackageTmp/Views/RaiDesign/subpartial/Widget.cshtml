@using myRaiCommonModel;

@using Arturo;
@using Arturo.Model;

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginPanel(myRaiHelper.PanelType.NoHeader, ""))
        {
            <div class="row">
                <div class="col-sm-12">
                    <label class="rai-font-text-heading">Widget</label>
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        @Arturo.DisegnaWidget(Html, WidgetType.Normal, "Oggi", "fa fa-thumbs-up", "Tanti auguri di buon compleanno!")
    </div>
    <div class="col-sm-6">
        @Arturo.DisegnaWidget(Html, WidgetType.Interactive, "Widget interattivo", "fa fa-thumbs-up", "Testo principale", "Testo dettaglio", "", action: new ActionTemplate() { OnClick = "ShowAlert('error')", Text = "Azione!" })
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        @Arturo.DisegnaWidget(Html, WidgetType.Normal, "Il tuo orario di lavoro per oggi", "icons icon-calendar", "Sei in smartworking", action: new ActionTemplate() { OnClick = "ShowAlert('success')", Text = "Entra nella giornata" })
    </div>
    <div class="col-sm-6">
        @Arturo.DisegnaWidget(Html, WidgetType.Normal, "Spesa mensile", "icons icon-wallet", "€ 30,50", "7 pasti fruiti", "La tua spesa in mensa per il mese di Dicembre 2019 è", "spesa_mensile")
    </div>
</div>

@{
    var widgets = new List<AlertModel>();
    widgets.Add(new AlertModel()
    {
        IntestazioneWidget = "Gruppo 1",
        Titolo = "Titolo",
        TraParentesi = "Testo widget",
        CifraPrincipale = "10",
        HrefPulsante = "javascript:ShowAlert('warning')",
        TestoPulsante = "Vedi"
    });
    widgets.Add(new AlertModel()
    {
        IntestazioneWidget = "Gruppo 1",
        Titolo = "Titolo",
        TraParentesi = "Testo widget",
        CifraPrincipale = "5",
        HrefPulsante = "javascript:ShowAlert('info')",
        TestoPulsante = "Vedi"
    });
    widgets.Add(new AlertModel()
    {
        IntestazioneWidget = "Gruppo 2",
        Titolo = "Titolo",
        TraParentesi = "Testo widget",
        CifraPrincipale = "1",
        HrefPulsante = "javascript:ShowAlert('success')",
        TestoPulsante = "Vedi"
    });
}
<div class="row">
    <div class="col-sm-12">
        @Html.Partial("~/Views/_RaiDesign/Widget_Home_Container.cshtml", widgets)
    </div>
</div>
