@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model List<myRaiData.B2RaiPlace_Eventi_Anagrafica>

@if ( Model != null && Model.Count( ) > 0 )
{
    <table class="js-table-sections table table-hover rai-table" id="table_preonta">
        <thead>
            <tr>
                <th> Nome</th>
                <th> Cognome</th>
                <th> </th>
                <th class="rai-table-td-action"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach ( var item in Model )
            {
                <tr>
                    <td class="rai-font-md"> @item.nome</td>
                    <td class="rai-font-md "> @item.cognome</td>
                    <td class="botton_operazioni text-right">
                        <a id="modifica-evento-@item.id" class="btn rai-btn-small" href="javascript:ModificaPrenotazione(@item.id, @item.id_evento)">Modifica</a>
                    </td>
                    <td class="botton_operazioni">
                        <button class="btn btn-action-icon" onclick="EliminaPrenotazioneIdAn(@item.id, @item.id_evento)">
                            <i class="icons icon-trash" ></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span class="rai-font-md-neutral">
        Non hai posti prenotati
    </span>
}