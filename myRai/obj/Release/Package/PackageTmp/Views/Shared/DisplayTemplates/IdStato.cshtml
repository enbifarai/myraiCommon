@using myRaiData;
@using myRaiHelper;
@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;
@using MyRaiServiceInterface.it.rai.servizi.digigappws;

@model Int32

@if ( Model == 0 )
{
    <i data-toggle="tooltip" title="Non modificabile" class="fa fa-circle-thin" aria-hidden="true"></i>
}

@if ( Model == ( int ) EnumStatiRichiesta.InApprovazione )
{
    <a data-toggle="tooltip" title="In Approvazione">
        <i class="fa fa-circle circle-orange" aria-hidden="true"></i>
    </a>
}

@if ( Model == ( int ) EnumStatiRichiesta.Rifiutata )
{
    <a data-toggle="tooltip" title="Rifiutata">
        <i class="fa fa-circle circle-red" aria-hidden="true"></i>
    </a>
}

@if ( Model == ( int ) EnumStatiRichiesta.Eliminata )
{
    <a data-toggle="tooltip" title="Eliminata su Gapp">
        <i class="fa fa-circle-thin circle-red" style="font-weight: 900" aria-hidden="true"></i>
    </a>
}

@if ( Model == ( int ) EnumStatiRichiesta.Approvata )
{
    <a data-toggle="tooltip" title="Approvata">
        <i class="fa fa-circle circle-green" aria-hidden="true"></i>
    </a>
}

@if ( Model == 1 )
{
    <span class="label label-warning"><i class="fa fa-refresh fa-spin"></i>In approvazione</span>
}

@if ( Model == 2 )
{
    <span class="label label-success"><i class="fa fa-check"></i>Approvato</span>
}
@if ( Model == ( int ) EnumStatiRichiesta.InseritoSegreteria )
{

    <a data-toggle="tooltip" title="In Segreteria">
        <i class="fa fa-circle circle-orange" aria-hidden="true"></i>
    </a>
}
@if ( Model == ( int ) EnumStatiRichiesta.InProgressSegreteria )
{


    <a data-toggle="tooltip" title="In Segreteria (in carico)">
        <i class="fa fa-circle circle-orange" aria-hidden="true"></i>
    </a>
}