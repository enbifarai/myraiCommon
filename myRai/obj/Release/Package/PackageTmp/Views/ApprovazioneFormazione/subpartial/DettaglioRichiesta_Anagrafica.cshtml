@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;
@using myRai.Controllers;

@model myRai.Controllers.RichiestaModel

<div class="block-header block-header-inc block-content-mini bg-cel ">
    <div class="row">
        <div class="col-sm-8 col-xs-7">
            <h4 class="font-w600">Dati generali</h4>
        </div>
        <div class="col-sm-4 col-xs-5 text-right no-padding" style="padding-top:7px !important;font-size:15px;">

        </div>
    </div>
</div>
<!--contenuto-->
<div class="block-content block-content-mini block-content-full">
    <div class="row">
        <div class="col-sm-12 no-padding">
            <div class="row push-10">
                <div class="col-xs-12 col-sm-3">
                    <div class="widget-profile-info">
                        <div class="profile-picture">
                            <img style="width: 100px; height: 100px; border-radius: 50px;" src="@ApprovazioneFormazioneController.GetUrlFoto(Model.Richiesta.SINTESI1.COD_MATLIBROMAT)">
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 visible-xs">&nbsp;</div>
                <div class="col-xs-12 col-sm-8">
                    <div class="row">
                        <div class="col-sm-5 col-xs-6">
                            <label class="text-bold">Matricola</label>
                        </div>
                        <div class="col-sm-7 col-xs-6">
                            <label>@Model.Richiesta.SINTESI1.COD_MATLIBROMAT</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5 col-xs-6 no-padding-right">
                            <label class="text-bold">Direzione/Servizio</label>
                        </div>
                        <div class="col-sm-7 col-xs-6">
                            <label>@Model.Richiesta.SINTESI1.DES_SERVIZIO</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5 col-xs-6 no-padding-right">
                            <label class="text-bold">Struttura/Sezione</label>
                        </div>
                        <div class="col-sm-7 col-xs-6">
                            <label>@Model.Richiesta.SINTESI1.COD_UNITAORG - @Model.Richiesta.SINTESI1.DES_DENOMUNITAORG</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5 col-xs-6 no-padding-right">
                            <label class="text-bold">Profilo professionale</label>
                        </div>
                        <div class="col-sm-7 col-xs-6">
                            <label>@Model.Richiesta.SINTESI1.QUALIFICA.TB_QUALSTD.DES_QUALSTD</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--fine contenuto-->
