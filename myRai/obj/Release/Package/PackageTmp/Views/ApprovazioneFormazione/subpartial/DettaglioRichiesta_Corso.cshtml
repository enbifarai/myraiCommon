@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model myRai.Controllers.RichiestaModel

<div class="block-header block-header-inc block-content-mini">
    <div class="row">
        <div class="col-sm-7 col-xs-7 no-padding">
            <h4 class="font-w600">Dettaglio corso</h4>
        </div>
        <div class="col-sm-5 col-xs-5 text-right no-padding" style="padding-top:7px !important;font-size:15px;">
            @*<i class="icons icon-info text-primary" data-toggle="tooltip" data-placement="bottom" data-trigger="hover click" title="Data aggiornamento: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")"></i>*@
        </div>
    </div>
</div>

<!--contenuto-->
<div class="block-content block-content-mini block-content-full no-padding-left no-padding-right">
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-12">
                    <h4><a href="@Url.Action("DettaglioCorso","RaiAcademy",new { idCorso = Model.Corso.Id })" target="_blank">@Model.Corso.Titolo</a></h4>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label class="text-bold">Area formativa</label>
                </div>
                <div class="col-sm-8">
                    <label>@Model.Corso.AreaFormativa</label>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label class="text-bold">Tematica</label>
                </div>
                <div class="col-sm-8">
                    <label>@Model.Corso.Tematica@(!String.IsNullOrWhiteSpace( Model.Corso.Gruppo ) ? " - " + Model.Corso.Gruppo : "")</label>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label class="text-bold">Tipo fruizione</label>
                </div>
                <div class="col-sm-8">
                    <label>@Model.Corso.TipoMetodoFormativo.GetAmbientValue( ) - @Model.Corso.MetodoFormativo</label>
                </div>
            </div>
            @if ( !String.IsNullOrWhiteSpace( Model.Corso.Sede ) )
            {
                <div class="row">
                    <div class="col-sm-4">
                        <label class="text-bold">Luogo</label>
                    </div>
                    <div class="col-sm-8">
                        @Model.Corso.Sede
                    </div>
                </div>
            }
            @if ( !String.IsNullOrWhiteSpace( Model.Corso.Durata ) )
            {
                <div class="row">
                    <div class="col-sm-4">
                        <label class="text-bold">Durata</label>
                    </div>
                    <div class="col-sm-8">
                        <label>@Model.Corso.Durata</label>
                    </div>
                </div>
            }

        </div>
    </div>
</div>