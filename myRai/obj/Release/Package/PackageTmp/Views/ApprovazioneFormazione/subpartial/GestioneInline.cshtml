@model myRai.Controllers.RichiestaInline

<div class="modal-dialog modal-dialog-centered" style="margin-top:25%">
    <div class="modal-content ">
        <div class="block block-themed block-transparent remove-margin-b">
            <div class="block-header bg-cdf" style="height: 58px; border-radius: 6px 6px 0px 0px">
                <ul class="block-options visible-xs">
                    <li>
                        <button data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
                    </li>
                </ul>
                <h4 class="lead" style="float: left; margin: -3px 0 0 0px; font-size: 2.1rem; color: #fff;">
                    @if (Model.Oper==1)
                    {
                        <text>Approva richiesta</text>
                    }
                    else if (Model.Oper==2)
                    {
                        <text>Rifiuta richiesta</text>
                    }
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            @if (Model.Oper==1)
            {
                @Html.Partial("subpartial/Richiesta_Approvazione", Model.IdRichiesta)
            }
            else if (Model.Oper==2)
            {
                @Html.Partial("subpartial/Richiesta_Rifiuto", Model.IdRichiesta)
            }

            <div class="row push-10-t push-10">
                <div class="col-sm-7">
                    &nbsp;
                </div>
                <div class="col-sm-5 text-right">
                    <button class="btn btn-md btn-default" type="submit" data-dismiss="modal" aria-label="Close">
                        Annulla
                    </button>
                    @if (Model.Oper == 1)
                    {
                    <button class="btn btn-md btn-success" type="submit" onclick="RichFormAccetta(0,@Model.IdRichiesta, @Model.IdRichiestaStep)">
                        Conferma
                    </button>
                    }
                    else if (Model.Oper==2)
                    {
                    <button class="btn btn-md btn-success" type="submit" onclick="RichFormRifiuta(0,@Model.IdRichiesta, @Model.IdRichiestaStep)">
                        Conferma
                    </button>
                    }
                </div>
            </div>

        </div>
    </div>
</div>