@model myRaiHelper.OnePageTemplate

@{
    bool hasContent = !Model.OnlyHeader && !Model.OnlyFooter;
}

@if (hasContent || Model.OnlyHeader)
{
    @Html.Raw("<div class=\"rai-op-nav\" id=\"" + Model.Id + "\">")

    <div class="row">
        <div class="col-xs-12">
            <div class="rai-op-breadcrumb" style="display:none;">
                <span data-op-path="main" onclick="RaiOPGotoMain('@Model.Id')">@Model.Title</span>
            </div>
        </div>
    </div>

    @Html.Raw("<div class=\"rai-op-main\">")
}

@if (hasContent)
{

}

@if (hasContent || Model.OnlyFooter)
{
    @Html.Raw("</div>")
    <div class="rai-op-sub" style="display:none;">

    </div>
    @Html.Raw("</div>")

}
