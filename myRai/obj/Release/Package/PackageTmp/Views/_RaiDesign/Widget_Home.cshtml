@model myRaiCommonModel.AlertModel

<section class="panel panel-card" data-step="@Model.intro_datastep" data-intro="@Model.intro_dataintro" aria-label="@Model.AriaLabelSummary" tabindex="0">
    <div class="panel-heading @(Model.TipoAlert==1?"light":"dark")">
        <label class="panel-title">@Model.IntestazioneWidget</label>
    </div>
    <div class="panel-body">
        <div class="panel-card-main">@Model.Titolo</div>
        <div class="panel-card-sub">@Model.TraParentesi</div>
        @if (!String.IsNullOrWhiteSpace(Model.TestoRosso))
        {
            <span class="panel-card-sub feedback-error-color">@Model.TestoRosso</span>
        }
        <div class="panel-card-counter">
            <span>@Model.CifraPrincipale</span>
        </div>
        @if (!String.IsNullOrWhiteSpace(Model.WaitLabel))
        {
            <span id="wait-res" class="panel-card-span">
                <i class="fa fa-spinner fa-spin" style="margin-right: 3px;"></i>@Model.WaitLabel
            </span>
            <span class="panel-card-span">&nbsp;</span>
        }
        else
        {
            <span class="panel-card-span">&nbsp;</span>
        }
        <a class="btn btn-sm rai-btn-small full-width" href="@Model.HrefPulsante">@Model.TestoPulsante</a>
    </div>
</section>