@using myRaiHelper;
@model RaiUploader

@{
    var fileEmptyLabel = "Nessun file selezionato";
}


<div id="@Model.ControlId" class="rai-uploader" data-uploader-type="@Model.UploaderType" data-uploader-async="@(Model.Async?"true":"false")" data-uploader-url="@Model.Action">
    <input id="@Model.Id" name="@Model.Id" type="file" style="display:none;" accept="@Model.Accept" onchange="RaiUploadOnChange('@Model.ControlId', @(Model.Async?"true":"false"), '@fileEmptyLabel')" @(Model.Multiple?"multiple":"") />

    <button class="btn rai-btn-small" onclick="RaiUploadClick('@Model.ControlId')" aria-label="Scegli file" title="Scegli file" style="min-width:80px;">Scegli file</button>
    @if (Model.Async)
    {
        <span class="text-primary rai-uploading" data-uploader-loading="" style="display:none;"></span>
    }
    <span class="neutrals-md-40-color fa fa-times cursor-pointer" data-uploader-remove="" style="display:none;" aria-label="Rimuovi file" title="Rimuovi file" onclick="RaiUploadRemove('@Model.ControlId','@fileEmptyLabel')"></span>
    <span data-uploader-file="">@fileEmptyLabel</span>

</div> 


