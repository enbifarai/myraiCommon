@using System.Globalization;
@using myRaiHelper;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;
@using myRaiCommonManager;

@model AlertModel

<div class="col-xs-12 col-sm-6 no-pad-right" data-step="@Model.intro_datastep" data-intro="@Model.intro_dataintro" aria-label="@Model.AriaLabelSummary" tabindex="0">
    <section class="panel panel-featured-left panel-featured-primary">
        <div class="panel-body">
            <div class="widget-summary">
                <div class="widget-summary-col widget-summary-col-icon">
                    <div class="summary-icon bg-@Model.ColoreClasseIcona">
                        <i class="@Model.ClasseIcona"></i>
                    </div>
                </div>
                <div class="widget-summary-col">
                    <div class="summary">
                        <h3 class="title">@Model.Titolo</h3>
                        <div class="info" style="font-size: 18px;">
                            <div style="float: left">
                                <strong class="amount">@Model.CifraPrincipale</strong>

                            </div>
                            <div style="float:left;@(String.IsNullOrWhiteSpace(Model.TestoRosso) ? "" : "line-height:1.2")">
                                <span class="text-primary visibile-lg" style="font-size: 1.0em;">@Model.TraParentesi</span>
                                @if ( !String.IsNullOrWhiteSpace( Model.TestoRosso ) )
                                {
                                    <br />
                                    <span class="text-danger extra-poh">@Model.TestoRosso</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="summary-footer">
                        <a href="@Model.HrefPulsante" aria-label="@Model.AriaLabelPulsante" class="btn btn-default btn-scriv text-uppercase bg-puls_dash">@Model.TestoPulsante</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>