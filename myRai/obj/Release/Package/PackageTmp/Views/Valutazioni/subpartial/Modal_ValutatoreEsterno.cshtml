@using myRaiHelper;
@model myRaiCommonModel.Gestionale.ValutatoreEsternoContainer

    @{
        string titleMain = "Scelta valutatore esterno";

}

@using (Html.BeginModal("Valutazioni delle perfomance"))
{
    using (Html.BeginPanel(PanelType.Panel, titleMain, false))
    {
        if (Model != null && Model.Valutatori != null && Model.Valutatori.Any())
        {
        foreach (var item in Model.Valutatori)
        {
            string titleBlock = item.ActualEvaluator.Role.XR_VAL_CAMPAIGN_SHEET.XR_VAL_CAMPAIGN.NAME+" - "+item.ActualEvaluator.Role.XR_VAL_CAMPAIGN_SHEET.DESCRIPTION;

                <div class="rai block block-content-table remove-margin-bottom">
                    <div class="block-header block-content-mini">
                        <label class="block-title">@titleBlock</label>
                    </div>
                    <div class="block-content">
                        @Html.Partial("subpartial/Modal_ValutatoreEsterno_Scheda", item)
                    </div>
                </div>
            }
        }
        }
    }