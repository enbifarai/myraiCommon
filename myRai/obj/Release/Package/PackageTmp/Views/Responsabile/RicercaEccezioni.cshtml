@using System.Globalization;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model ModelDash
@{
    ViewBag.Title = "RicercaEccezioni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-loaderR"><span class="loaderR"><span class="loader-innerR">S</span></span></div>
<!-- Container di Pagina -->
<div id="page-container" class="sidebar-l sidebar-mini sidebar-o header-navbar-fixed">
    @Html.Partial( "../Shared/sidebar" , Model.menuSidebar )
    @Html.Partial( "../Shared/header" , new NotifichePopupModel( CommonHelper.GetCurrentUserMatricola( ) ) )
    <!-- Main Container -->
    <main id="main-container">
        <div class="content">
            <h2>RicercaEccezioni</h2>
            <div class="col-xs-12">
                <div class="block-content">
                    <div class="col-sm-2">
                        Nominativo
                    </div>
                    <div class="col-sm-3">
                        Sede
                    </div>
                    <div class="col-sm-2">
                        Stato
                    </div>
                    <div class="col-sm-2">
                        Dal Giorno
                    </div>
                    <div class="col-sm-2">
                        Al Giorno
                    </div>
                </div>
            </div>
            <div class="col-xs-12" style="float:left">
                <div class="block-content">
                    <div class="col-sm-2">
                        @Html.TextBox( "RicercaNominativo" )
                    </div>
                    <div class="col-sm-3">
                        <select id="ddlSedi">
                            <option value="0">
                                --Tutte--
                            </option>
                            @foreach ( var sede in Model.RicercaGen.ListaSedi )
                            {
                                <option value="@sede.CodiceSede">
                                    @sede.DescrizioneSede
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <select id="ddlStato">
                            <option value="0">
                                --Tutti--
                            </option>
                            <option value="10">
                                Da Approvare
                            </option>
                            <option value="20">
                                Approvati
                            </option>
                            <option value="50">
                                Rifiutati
                            </option>
                        </select>
                    </div>


                    <div class="col-sm-2">
                        <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="dalGiorno" name="dalGiorno" placeholder="Dal giorno">
                    </div>


                    <div class="col-sm-2">
                        <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="alGiorno" name="alGiorno" placeholder="Al giorno">
                    </div>

                    <div class="col-sm-1">
                        <button id="btnRicercaGen" onclick="GeneralSearch()" class="btn btn-sm btn-default" type="button"><i class="fa fa-arrow-right text-info"></i></button>
                    </div>
                </div>

            </div>
            <div id="idEccLoader">
                <div class="block" id="my-block">
                    <div id="idEccezioniRicerca" />
                </div>
            </div>
        </div>
    </main>
    <!-- FINE Main Container -->


</div>
<div class="modal fade" id="giornata-modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
</div>
@Html.Partial( "../Richieste/_motivoRifiuto" )
<!-- FINE Page Container -->
