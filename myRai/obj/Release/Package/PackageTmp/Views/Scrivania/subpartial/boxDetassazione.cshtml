@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@model DetassazioneVM
<div id="DetassazioneContainerDiv">
    @{

        if ( Model != null && Model.HaDiritto )
        {
            <section class="rai-widget" id="panelBoxDetassazione">
                <div class="rai-widget-body bg-base">
                    <div class="rai-widget-cta">
                        <div class="rai-widget-cta-title">
                            <label class="rai-title interactive-primary-color">@Html.Raw( Model.Messaggio )</label>
                        </div>
                        <div class="rai-widget-cta-action">
                            <a href="javascript:showDetassazioneForm('@(Model.Anno)', '@(Model.CodiceModello)', '@(Model.CodiceDetassazione)');" aria-label="Vedi" class="btn rai-btn-small">Compila</a>
                        </div>
                    </div>
                </div>
            </section>
        }
        else if ( Model != null && Model.GiaScelto )
        {
            <section class="rai-widget" id="panelBoxDetassazione">
                <div class="rai-widget-body bg-base">
                    <div class="rai-widget-cta">
                        <div class="rai-widget-cta-title">
                            <label class="rai-title interactive-primary-color">@Html.Raw( Model.Messaggio )</label>
                        </div>
                        <div class="rai-widget-cta-action">
                            <a href="javascript:showDetassazionePDF('@(Model.Anno)', '@(Model.CodiceModello)', '@(Model.CodiceDetassazione)');" aria-label="Vedi" class="btn rai-btn-small">Vedi</a>
                        </div>
                    </div>
                </div>
            </section>
        }
    }
</div>