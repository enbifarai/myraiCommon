@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@model AlertModel

<section class="panel panel-card" data-step="@Model.intro_datastep" data-intro="@Model.intro_dataintro" aria-label="@Model.AriaLabelSummary" tabindex="0">
    <div class="panel-heading @(Model.TipoAlert.Equals(2)? "bg-neutrals-80": "")">
        <label class="panel-title">@(Model.IntestazioneWidget)</label>
    </div>
    <div class="panel-body">
        <span class="panel-card-main">@Model.Titolo</span><br />
        <span class="panel-card-sub">@Model.TraParentesi</span>
        @if ( !String.IsNullOrWhiteSpace( Model.TestoRosso ) )
        {
            <span class="panel-card-sub feedback-error-color">@Model.TestoRosso</span>
        }
        <div class="panel-card-counter">
            <span>@Model.CifraPrincipale</span>
        </div>
        @if ( !String.IsNullOrWhiteSpace( Model.WaitLabel ) )
        {
            <span id="wait-res" class="panel-card-sub">
                <i class="fa fa-spinner fa-spin" style="margin-right: 3px;"></i>@Model.WaitLabel
            </span>
            <span class="panel-card-sub">&nbsp;</span>
        }
        else
        {
            <span class="panel-card-sub">&nbsp;</span>
        }
        <a class="btn btn-sm rai-btn-small full-width">@Model.TestoPulsante</a>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        setAletWidgetHeight();
    });
</script>