@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@{
    var sediL4 = CommonHelper.GetSediL4();
    var sediL5 = CommonHelper.GetSediL5();
    bool schermataFlat = CommonHelper.GetParametro<bool>( EnumParametriSistema.AbilitaSchermataFlat );
}

@Html.Partial("subpartial/alert_skeleton_id", "Widget1")
@{
    if ( !schermataFlat )
    {
        @Html.Partial("subpartial/alert_skeleton_id", "Widget2")
    }
}

@if (UtenteHelper.IsBoss(CommonHelper.GetCurrentUserPMatricola()) ||
    UtenteHelper.IsBossLiv2(CommonHelper.GetCurrentUserPMatricola()))
{
    @Html.Partial("subpartial/alert_skeleton_id", "Widget3")
    @Html.Partial("subpartial/alert_skeleton_id", "Widget4")
    if ( ( sediL4 != null && sediL4.Any( ) ) ||
    ( sediL5 != null && sediL5.Any( ) ) )
    {
        @Html.Partial("subpartial/alert_skeleton_id", "Widget5")
    }
}
else
{
    if (sediL4 != null && sediL4.Any())
    {
        @Html.Partial("subpartial/alert_skeleton_id", "Widget5")
    }
}