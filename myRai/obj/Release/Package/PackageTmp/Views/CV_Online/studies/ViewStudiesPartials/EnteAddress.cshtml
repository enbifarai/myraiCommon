 @model myRaiCommonModel.cvModels.cvModel.Studies
 @using MVCProject.Custom_Helpers 
@{string contesto = ViewBag.contesto;}

<div class="row">@* --------------------CITTA , PAESE DIPLOMA-----------------*@


        <div class="push-10 col-md-6"
            @Html.TourAttributes(Model.TourElements,"tour-studio-"+contesto+"-citta")
            >
            <label for="_localitaStudi" class="titleElements rai-caption rai-caption">Città</label>
            @Html.TextBoxFor(m => m._localitaStudi, new { @class="rai form-control ", placeholder="Inserisci a testo libero", id="_localitaStudi" })
            @Html.ValidationMessageFor(m => m._localitaStudi)
        </div>

        <div class="push-10 col-md-6"
            @Html.TourAttributes(Model.TourElements,"tour-studio-"+contesto+"-paese")
            >
            <label for="_codNazione"  class="titleElements rai-caption rai-caption">Paese</label>
                @Html.DropDownListFor(modelitem => modelitem._codNazione, Model.Paesi, 
                new  { @data_minimum_results_for_search="Infinity",
                    @class="js-select2 rai form-control",
                    @style="width:100%",
                    @data_placeholder="Selezionare dalla lista"
                })  

                                      
        </div>
    </div>

