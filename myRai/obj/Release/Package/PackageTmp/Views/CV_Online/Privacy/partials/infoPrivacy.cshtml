@model myRaiCommonModel.cvModels.cvModel.Privacy


@{
    int count = 0;

    string liItems = "", li, a, div = "", p1, p2, active = "", itemBlocks = "", ariaExpanded = "";

    foreach (KeyValuePair<string, string> info in @Model.infoPrivacy)
    {
        active = "";
        
        ariaExpanded = "false";
        p1 = "";
        if (count == Model.infoPrivacy.Count - 1)
        {
            ariaExpanded = "true";
            active = " active";
            //p1 = string.Format("<p>{0}</p>", "Disclaimer"); //Freak test
        }

        a = string.Format("<a href=\"#{0}\" data-toggle=\"tab\" aria-expanded=\"{1}\" class=\"text-primary\">{2}. {3}</a>", string.Format("item{0}", count), ariaExpanded, count + 1, info.Key);
        li = string.Format("<li class=\"{0}\">{1}</li>", active, a);


        liItems = string.Format("{0}{1}", liItems, li);

        
        
        
        
        p1 += string.Format("<h4 class=\"text-bold\">{0}</h4>", info.Key);
        p2 = string.Format("<p>{0}</p>", info.Value);

        div = string.Format("<div id=\"item{0}\" class=\"tab-pane{1}\">{2}{3}</div>", count, active, p1, p2);

        itemBlocks = string.Format("{0}{1}", itemBlocks, div);

        count++;
    }
}

