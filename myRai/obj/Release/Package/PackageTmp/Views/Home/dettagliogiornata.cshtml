@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@model ModelDash
@{
    var dbdigigapp = new myRaiData.digiGappEntities();
    var er = dbdigigapp.MyRai_Eccezioni_Richieste.Where(x => x.id_eccezioni_richieste == Model.PopupDettaglioGiornataModel.IdRichiestaEccezione).FirstOrDefault();
}

<div class="modal-backdrop fade in"></div>
<div class="modal-dialog modal-dialog-popout">
    <div class="rai modal-content height100 scroll-container">
