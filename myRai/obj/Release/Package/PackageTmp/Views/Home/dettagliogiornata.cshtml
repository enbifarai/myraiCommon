                                        <div class="panel-group" id="accordion-presenti">

                                            <div id="assenti" class="panel panel-accordion">

                                                @foreach (var day in Model.DipendentiAssenti.datadipPresenti.Select(x => x.data).Distinct())

                                                {
                                                    <div class="panel-heading" style="margin-top: 4px">
