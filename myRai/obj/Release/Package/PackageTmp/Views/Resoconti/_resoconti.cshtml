                                                    @Html.Raw(
                                                    //sede.IsPDFpresent && sede.DataPDFfirmato != null ?
                                                    //"PDF FIRMATO IN DATA " + ((DateTime)sede.DataPDFfirmato).ToString("dd/MM/yyyy") :

