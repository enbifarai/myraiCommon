                                        {
                                            if (sede.MieiReparti.Count() > 0 && !sede.MieiReparti.Contains(rep.Key))
                                            {
                                                continue;
                                            }

                                            if (rep.Key != "00" && rep.Key != null)
                                            {
                                                var desRep = "";
                                                if (!sede.MieiRepartiDes.TryGetValue(rep.Key, out desRep))
                                                {
                                                    desRep = "Descrizione non trovata";
                                                }

