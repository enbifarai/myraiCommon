                                    @for (int i = 0; i < 7; i++)
                                    {
                                        <div class="col-sm-1">
                                            @*<b>@sede.DataDa.ToString("dd") </b><br />@sede.DataDa.ToString("ddd")*@
                                            <div class="row rectangle-day push-10">
