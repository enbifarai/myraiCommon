@using myRaiHelper;
@using myRaiCommonModel.Tech;
@using MVCProject.Custom_Helpers;

@model List<PuntoRichiesta>

@{
    Layout = null;
}

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="@(Url.Action("Esporta","Tech"))" target="_blank" class="panel-action fa fa-save"></a>
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
        </div>
        <h2 class="panel-title">Situazione richieste</h2>
    </header>
    <div class="panel-body" style="display: block; padding: 8px">

        <div style="max-height: 300px; overflow-y: auto">
            @if ( Model.Count( ) == 0 )
            {
                <div style="text-align: center;">
                    <i class="fa fa-refresh fa-spin" style="font-size: 22px; color: #ebebeb;"></i>
                </div>
            }
            else
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-primary">Codice</th>
                            <th class="text-primary">Descrizione</th>
                            <th class="text-primary">Totale richieste</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach ( var item in Model.OrderByDescending( m => m.Valore ) )
                            {
                                <tr>
                                    <td class="col-xs-2"><b>@(item.Codice)</b></td>
                                    <td class="col-xs-6"><b>@(item.Tooltip)</b></td>
                                    <td class="col-xs-4">@item.Valore</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>