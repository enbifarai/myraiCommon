@using myRaiHelper;
@using myRaiCommonModel.Controllo;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

@model Report

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div id="page-loaderR"><span class="loaderR"><span class="loader-innerR">S</span></span></div>

<section class="body">
    @Html.Partial( "../Shared/header2" , new myRaiCommonModel.NotifichePopupModel( CommonHelper.GetCurrentUserMatricola( ) ) )
    <div class="inner-wrapper">
        @Html.Partial( "../Shared/sidebar3" , myRaiHelper.UtenteHelper.getSidebarModel( appType: myRaiHelper.ApplicationType.Gestionale ) )
        <section role="main" class="content-body">
            <main id="main-container">
                <div class="content">
                    <div class="row">
                        <div class="col-sm-8" id="bstot">
                            <div class="row">
                                <section class="panel">
                                    <header class="panel-heading">
                                        <h2 class="panel-title">Report</h2>
                                    </header>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="ct-chart1 ct-golden-section" id="chart1"></div>
                                        </div>
                                    </div>
                                </section>
                            </div>

                            <script>
                                // Initialize a Line chart in the container with the ID chart1
                                Chartist.Line('.ct-chart1', {
                                    labels: [1, 2, 3],
                                    series: [[100, 120, 180]]
                                });
                            </script>
                        </div>
                        <div class="col-sm-4">
                        </div>
                    </div>
                </div>
            </main>
            <!-- end: page -->
        </section>
    </div>
</section>

<div id="pg-visible-xs" class="visible-xs"></div>
<div id="pg-visible-sm" class="visible-sm"></div>
<div id="pg-visible-md" class="visible-md"></div>
<div id="pg-visible-lg" class="visible-lg"></div>

<div class="modal fade right" id="pdf-modalDoc" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-popin modal-lg">
        <div class="modal-content" id="pdfcontent">
        </div>
    </div>
</div>