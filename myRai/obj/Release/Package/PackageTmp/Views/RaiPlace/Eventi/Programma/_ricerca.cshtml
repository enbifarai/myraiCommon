@using System.Globalization;
@using myRaiHelper;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;
@using myRaiCommonManager;

@model ProgramsModel

@using (Html.BeginPanel(PanelType.Panel, "Cerca un programma"))
{
<div class="my-block js-form-search form-group">
    <div class="row push-10">
        <div class="col-lg-12">
            <label class="rai-caption" for="Valoreda">Titolo</label>
            @Html.TextBoxFor( x => x.Titolo , new { @class = "form-control" , placeholder = "Titolo" , name = "titolo" , id = "titolo" } )
        </div>
    </div>
    <div class="row push-10">
        <div class="col-lg-12">
            <label class="rai-caption" for="Valoreda">Luogo</label>
            @Html.TextBoxFor( x => x.Luogo , new { @class = "form-control" , placeholder = "Luogo" , name = "luogo" , id = "luogo" } )
        </div>
    </div>
    <div class="col-xs-12">
        <label class="rai-caption">Data</label>
    </div>
    <div class="col-md-12 col-lg-6 push-10">
        <div class="input-group">
            <span onclick="$('#datada').datetimepicker('show')" class="input-group-addon"><i class="icons icon-calendar"></i></span>
            <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="datada" name="datada" placeholder="Dal">
        </div>
    </div>
    <div class="col-md-12 col-lg-6 push-10">
        <div class="input-group">
            <span onclick="$('#dataal').datetimepicker('show')" class="input-group-addon"><i class="icons icon-calendar"></i></span>
            <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="dataal" name="dataal" placeholder="Al">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a id="btnFilter" name="btnFilter" disabled class="btn rai-btn-primary full-width" data-filter="/eventi/RefreshProgrammi/" data-parentdiv="listaprogrammi" data-filterelements="my-block">Cerca</a>
        </div>
    </div>
</div>
}
