@using System.Globalization;
@using myRaiHelper;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;
@using myRaiCommonManager;

@model ModelDash

<!-- Icone -->
@{
    ViewBag.Title = "Gestione programmi";
    Layout = "~/Views/Shared/_layoutContent.cshtml";
}

<!-- Container di Pagina -->


<section role="main" class="content-body">

    <main id="main-container">
        <div class="content left-top-20">
            <div class="row">
                <div class="col-sm-8">
                    <section class="panel" id="listaProgrammi">
                        @Html.Partial("../Tabelle/subpartial/listaprogrammi")
                    </section>
                </div>

                <div class="col-sm-4">
                    <div class="row">
                        <div class="col-sm-12">
                            @Html.Partial("~/Views/RaiPlace/Eventi/Programma/_ricerca.cshtml", new ProgramsModel())
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            @Html.RenderWidget(WidgetType.Normal, "Programma", "fa fa-settings", "Da qui puoi inserire un programma", action:new ActionTemplate()
                               {
                                   Text="Inserisci programma",
                                   OnClick = "ShowPopUpProgramma()"
                               })

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </main>
</section>



@Html.Partial("~/Views/RaiPlace/Eventi/Programma/_nuovoprogramma.cshtml", Model)

@Html.Partial("~/Views/RaiPlace/Eventi/Programma/_modificaprogramma.cshtml", Model)



