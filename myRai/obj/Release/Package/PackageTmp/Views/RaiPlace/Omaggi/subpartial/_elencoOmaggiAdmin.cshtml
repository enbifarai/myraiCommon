@using System.Globalization;
@using myRaiHelper;
@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonModel.raiplace;
@using MVCProject.Custom_Helpers;
@using myRaiCommonManager;

<header class="panel-heading">
    <h2 class="panel-title">Elenco Omaggi</h2>
</header>
<div class="panel-body table-responsive">
    @if (Model.Count == 0)
    {
        <div class="row">
            Nessun Omaggio presente
        </div>
    }
    else
    {

        <table id="tableOmaggi" class="table table-hover table-responsive rai-table rai-table-vcenter">
            <thead>
                <tr>
                    <th class="col-md-2 col-lg-1">Data ricezione</th>
                    <th class="col-md-3  col-lg-2">Utente</th>
                    <th class="hidden-xs col-md-2 col-lg-2">Motivo</th>
                    <th class="col-md-2 col-lg-1">Tipo</th>
                    <th class="col-md-2 col-lg-1">Valore</th>
                    <th class="hidden-xs hidden-sm hidden-md col-lg-2">Mittente</th>
                    <th class="hidden-xs hidden-sm hidden-md col-lg-2">Descrizione</th>
                    <th class="hidden">Ufficio Spedizioni</th>
                    <th class="hidden">Ente Beneficiario</th>
                    <th class="hidden">Note</th>
                    <th class="hidden">Data inserimento</th>
                    <th class="hidden">Mail responsabile</th>
                    <th class="col-xs-1">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var omaggio in Model)
                {
                    <tr>
                        <td class="col-md-2 col-lg-1">@omaggio.Data_Ricezione</td>
                        <td class="col-md-3 col-lg-2">@omaggio.Utente.Cognome&nbsp;@omaggio.Utente.Nome</td>
                        <td class="hidden-xs col-md-3 col-lg-2">@omaggio.Motivo.Text</td>
                        <td class="col-md-2 col-lg-1">@omaggio.Tipo.Text</td>
                        <td class="col-md-2 col-lg-1">€  @omaggio.Valore</td>
                        <td class="hidden-xs hidden-sm hidden-md col-lg-2">@omaggio.Mittente</td>
                        <td class="hidden-xs hidden-sm hidden-md col-lg-2">@omaggio.Descrizione</td>
                        <td class="hidden">@omaggio.UfficioSpedizioni</td>
                        <td class="hidden">@omaggio.Ente_Beneficiario</td>
                        <td class="hidden">@omaggio.Note</td>
                        <td class="hidden">@omaggio.Data_Inserimento.ToString()</td>
                        <td class="hidden">@omaggio.Mail_Responsabile</td>
                        <td class="col-xs-1">
                            <a href="#" class="btn rai-btn-small" onclick="ShowGestisciOmaggio('r','@omaggio.Id');">Dettagli</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="row">
            <div class="col-md-12 text-center">
                <a class="btn rai-btn-small" href="@Url.Action("IndexAdmin", "Omaggi", new { quantita = "tutti" }) ">Visualizza tutti</a>
            </div>

            @*<div class="col-md-6">
                    <input type="button" class="btn btn-default bg-puls_dash btn-scriv" id="test" onclick="fnExcelReport();" value="Esporta in excel" />
                </div>*@
        </div>
    }
    <iframe id="txtArea1" style="display:none"></iframe>
</div>

