
@model  myRai.Models.RicercaDaApprovareAttivita


<div class="row" style="margin-bottom:4px">
    <div class="col-sm-12">
        <select class="form-control select2" id="titolo">
            <option value="">Attività di produzione</option>
            @{
                if ( Model.ListaTitoliRecenti != null && Model.ListaTitoliRecenti.Any( ) )
                {
                    <optgroup label="Recenti">
                        @{
                            foreach ( var item in Model.ListaTitoliRecenti )
                            {
                                <option style="margin-left: 10px;" value="@item.Value">@item.Text</option>
                            }
                        }
                    </optgroup>
                }

                if ( Model.ListaTitoli != null && Model.ListaTitoli.Any( ) )
                {
                    <optgroup label="Attività">
                        @{
                            foreach ( var item in Model.ListaTitoli )
                            {
                                if ( !String.IsNullOrEmpty( item.Text ) )
                                {
                                    <option style="margin-left: 10px;" value="@item.Value">@item.Text</option>
                                }
                            }
                        }
                    </optgroup>
                }
            }
        </select>
    </div>
</div>

<div class="row" style="margin-bottom:4px">
    <div class="col-sm-12">
        @Html.DropDownListFor( x => x.eccezione , Model.ListaEccezioniCeiton as List<SelectListItem> , "Eccezione" , new { @class = "form-control" , name = "eccezione" , id = "eccezione" } )
    </div>
</div>







