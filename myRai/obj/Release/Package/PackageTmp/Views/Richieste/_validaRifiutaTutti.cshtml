@using myRaiHelper;
@using myRaiCommonModel;
@using myRaiCommonManager;
@using MVCProject.Custom_Helpers;

<div class="modal fade" id="valida-rifiuta-tutti" tabindex="-1" role="dialog" aria-hidden="true"
     data-backdrop="static" data-keyboard="false" style="display: none;">
    <div class="modal-dialog modal-dialog-popout">
        <div class="modal-content">
            <div class="block block-themed block-transparent remove-margin-b">


                <div class="block-content block-content-full block-content-mini bg-gray-light" style="background-color:#f5f5f5">

                    <span id="titolo1" class="font-w600"></span>
                </div>



                <div class="block-content">
                    <form class="form-horizontal" action="base_pages_tickets.html" method="post" onsubmit="return false;">
                        <div class="form-group push-10">
                            <div class="col-xs-12">
                                <h5 style="font-weight: bold;" id="messaggio"></h5>

                                <textarea id="testoprogress" class="form-control" rows="4" placeholder="Motivo del rifiuto"></textarea>
                                <div id="rich-cont" class="ricserie">
                                    <table id="rich-table" class="tableall"></table>

                                </div>

                                <div class="progress" style="display:none;background-color: #eee; height: 8px; margin-top: 4px">
                                </div>
                            </div>
                        </div>

                    </form>
                </div>

                <div class="block-content block-content-full bg-gray-lighter clearfix">

                    <div id="div-riprova" style="text-align:center;font-weight:bold;display:none">
                        <span id="nonvalid" style="color:red">1</span>
                        <span id="rich" style="color:red"> richiesta non validata</span>
                        <a href="" class="btn btn-default btn-scriv text-uppercase bg-puls_dash">RIPROVA A VALIDARE</a>
                    </div>

                    <button id="btn-conf-tutti" style="margin-right:4px" onclick="EseguiApprovaTutti(null)" class="pull-right btn btn-square btn-default push-5-r push-10" type="button">

                        <i class="fa fa-fw fa-check text-success"></i>Conferma

                    </button>
                    <button id="btn-ann" style="margin-right:4px" onclick="AbortTutti()" class="pull-right btn btn-square btn-default push-5-r push-10" type="button">
                        <i class="glyphicon glyphicon-remove text-danger"></i>Annulla

                    </button>
                    <a id="btn-chiudi" data-dismiss="modal" style="display: none;color:#555" data-dismiss="modal"
                       class="pull-right  push-5-r push-10" type="button">
                        CHIUDI

                    </a>
                </div>

            </div>
        </div>
    </div>
    <input type="hidden" id="action-url" />
</div>
