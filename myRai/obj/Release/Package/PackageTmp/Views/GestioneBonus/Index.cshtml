@using MVCProject.Custom_Helpers;

@{
    Layout = "~/Views/Shared/_layoutContent.cshtml";
}

<!-- Container di Pagina -->

<section role="main" class="content-body">
    <main id="main-container">
        <div class="content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="incentivi-title">Scelta bonus 100</div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-12" id="panel-lista-dipendenti">
                    <section class="rai panel ">
                        <header class="panel-heading">
                            <div class="panel-actions visible-xs">
                                <a href="#" class="panel-action panel-action-toggle" data-panel-toggle="" aria-labelledby="lblLeftBox" aria-expanded="true"></a>
                            </div>
                            <h2 id="lblLeftBox" class="panel-title">Elenco dipendenti</h2>
                        </header>
                        <div class="panel-body no-padding">
                            <div class="col-sm-12">
                                <div class="my-card-loading-block"></div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </main>
</section>

@section afterjs {
    @Html.Raw(TempData["script"])

    <script type="text/javascript">

        $(function () {
            $.ajax({
                url: '@Url.Action( "GetReport" , "GestioneBonus" )',
                type: "POST",
                success: function (data) {
                    $('#panel-lista-dipendenti').html(data);
                },
                error: function (parm1, parm2, parm3) {
                }
            });
        })
    </script>
}
