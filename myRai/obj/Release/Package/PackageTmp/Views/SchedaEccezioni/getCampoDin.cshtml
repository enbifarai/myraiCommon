@using System.Globalization;
@using myRaiHelper;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;
@using myRaiCommonManager;

@model string

<div class="col-sm-12" style="margin-top:30px">
    <label class="rai-caption">Nome campo:</label>
    <input type="text" name="campodinamico" class="form-control campodin" style="width:100%" />

</div>
<div class="col-sm-12" style="margin-top:10px">
    <label class="rai-caption">Valore campo:</label>
    <textarea name="valoredinamico" class="form-control valoredin html-editor" style="width:100%" rows="5"></textarea>

</div>
<div class="col-sm-12" style="margin-top:10px">

    <label class="rai-caption">Posizione campo:</label>

    <select class="form-control" id="posizionedinamico" name="posizionedinamico">
        <option value="">Scegli posizione...</option>
        @foreach ( SchedaEccezioniManager.EnumPosizioniCampo val in Enum.GetValues( typeof( SchedaEccezioniManager.EnumPosizioniCampo ) ) )
        {
            <option value="@((int)val)">
                @val.ToString( ).Replace( "_" , " " )
        </option>
    }
    </select>

</div>
