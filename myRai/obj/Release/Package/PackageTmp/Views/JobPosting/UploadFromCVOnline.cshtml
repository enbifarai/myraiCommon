@using System.Globalization;
@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model JobPostingModel

@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<style>
    html, body {
        background-color: #ffffff;
    }

    .job-posting {
        width: 100%;
        padding-top: 100px;
        text-align: center;
    }

    .msg {
        color: #999;
        font-family: Open Sans, Arial, sans-serif;
        font-size: 30px;
        font-weight: 100;
    }

    .msg2 {
        color: #999;
        font-family: Open Sans, Arial, sans-serif;
        font-size: 24px;
        font-weight: 100;
    }

    .A_1 {
        box-sizing: border-box;
        color: rgb(51, 51, 51);
        display: inline-block;
        height: 30px;
        text-align: center;
        text-decoration: none solid rgb(51, 51, 51);
        text-size-adjust: 100%;
        text-transform: uppercase;
        touch-action: manipulation;
        vertical-align: middle;
        column-rule-color: rgb(51, 51, 51);
        perspective-origin: 34.1719px 15px;
        transform-origin: 34.1719px 15px;
        user-select: none;
        caret-color: rgb(51, 51, 51);
        background: rgb(243, 243, 243) none repeat scroll 0% 0% / auto padding-box border-box;
        border: 0px none rgb(51, 51, 51);
        border-radius: 3px 3px 3px 3px;
        font: normal normal 700 normal 10.4px / 14.8571px "Open Sans", Arial, sans-serif;
        outline: rgb(51, 51, 51) none 0px;
        padding: 6px 12px;
    }

    .job-posting-upload {
        margin-left: 20%;
        margin-right: 20%;
    }
</style>

<div id="UploadFromCVOnlineContainer">

</div>

@section afterjs {
    <script type="text/javascript">
    function ClosePage()
    {
        var win = window.open( '', '_self' );
        win.close();
    }

    $( function ()
    {
        $.get( 'http://www.hris.rai.it/ORE/servizioJobPosting/default.aspx?mctl=@(Model.Matricola)&key=ddUzEi3UIYEi5cIkGTinPwRufoLZe2Ln', function ( data )
        {
            var testocv = data;
            testocv = 'success'
            if ( testocv == 'success' )
            {
                $.ajax( {
                    url: "/JobPosting/InviaCandidatura",
                    type: "POST",
                    data: {
                        id: '@(Model.IdJob)',
                        numerojp: '@(Model.NumeroJP)'
                    },
                    cache: false,
                    async: false,
                    success: function ( data )
                    {
                        $( '#UploadFromCVOnlineContainer' ).html( data );
                    }
                } );
            }
            else
            {
                $.ajax( {
                    url: "/JobPosting/UploadCVOnlineNoData",
                    type: "POST",
                    data: {
                        id: '@(Model.IdJob)',
                        numerojp: '@(Model.NumeroJP)'
                    },
                    cache: false,
                    async: false,
                    success: function ( data )
                    {
                        $( '#UploadFromCVOnlineContainer' ).html( data );
                    }
                } );
            }
        } );
    } );
    </script>
}