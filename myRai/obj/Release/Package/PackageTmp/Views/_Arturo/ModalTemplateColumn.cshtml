@model Arturo.ModalColumn

<div class="@Model.Width">
    @if (Model.Type == Arturo.ModalColumnType.Main)
    {
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">@Model.Title</h2>
            </header>
            <div class="panel-body">
                @foreach (var section in Model.Sections)
                {
                    switch (section.Type)
                    {
                        case Arturo.SectionType.Panel:
                            @Html.RenderPanel(section)
                            break;
                        case Arturo.SectionType.Block:
                            @Html.RenderBlock(section)
                            break;
                        default:
                            break;
                    }
                }
            </div>
        </section>
    }
    else
    {
        foreach (var section in Model.Sections)
        {
            switch (section.Type)
            {
                case Arturo.SectionType.Panel:
                    @Html.RenderPanel(section)
                    break;
                case Arturo.SectionType.Block:
                    @Html.RenderBlock(section)
                    break;
                default:
                    break;
            }
        }
    }
</div>