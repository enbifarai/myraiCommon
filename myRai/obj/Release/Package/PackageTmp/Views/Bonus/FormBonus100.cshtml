@model myRaiCommonModel.Bonus100Model
<div class="block block-themed block-transparent remove-margin-b">
    <div class="block-header bg-cdf" style="height: 58px;">
        <ul class="block-options visible-xs">
            <li>
                <button data-dismiss="modal" type="button"><span aria-hidden="true">×</span></button>
            </li>
        </ul>
        <h4 class="lead" style="display:inline;float: left; margin: -3px 0 0 0px; font-size: 2.1rem; color: #fff;">DICHIARAZIONE PER LA FRUIZIONE DEL PREMIO RICONOSCIUTO AI LAVORATORI DIPENDENTI </h4>
        <h4 class="lead" id="periodo-scroll" style="font-weight:500;display:inline;float: left;margin: -3px 0 0 10px;font-size: 2.1rem;color: #fff;"></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Chiudi"><span aria-hidden="true">×</span></button>
    </div>
    <div class="row no-margin-left-right">
        <!-- Colonna -->
        <div class="col-sm-12 no-pad-left no-pad-right border-right ">
            <div class="block-content block-content-full boxdate" style="margin-bottom: 0px; padding-bottom:5px;">
                <div class="row">
                    <div class="col-xs-12" id="modulo-content-body" style="margin-left:5%; width:90%;">
                        <div class="row">
                            <span class="rai-font-text-heading text-justify text-uppercase">DICHIARAZIONE PER LA FRUIZIONE DEL PREMIO RICONOSCIUTO AI LAVORATORI DIPENDENTI CHE NEL MESE DI MARZO 2020 HANNO RESO LA LORO ATTIVITA’ LAVORATIVA PRESSO LA SEDE AZIENDALE E/O IN TRASFERTA</span>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            @{
                                if ( Model.Sesso == "F" )
                                {
                                    <span class="rai-font-lg text-justify" style="font-size:16px;">La sottoscritta <b>@(Model.Nominativo)</b> nata il <b>@Model.DataDiNascita.ToString( "dd/MM/yyyy" )</b> a <b>@(Model.LuogoDiNascita)</b> prov (<b>@(Model.ProvinciaDiNascita)</b>) matr. n. <b>@(Model.Matricola)</b> ai fini del riconoscimento del premio monetario previsto dall’articolo 63 del Decreto Legge n. 18/2020 (vedi comunicazione FP/FISC/ del ) in relazione al requisito reddituale relativo all’anno d’imposta 2019 </span>

                                }
                                else
                                {
                                    <span class="rai-font-lg text-justify" style="font-size:16px;">Il sottoscritto <b>@(Model.Nominativo)</b> nato il <b>@Model.DataDiNascita.ToString( "dd/MM/yyyy" )</b> a <b>@(Model.LuogoDiNascita)</b> prov (<b>@(Model.ProvinciaDiNascita)</b>) matr. n. <b>@(Model.Matricola)</b> ai fini del riconoscimento del premio monetario previsto dall’articolo 63 del Decreto Legge n. 18/2020 (vedi comunicazione FP/FISC/ del ) in relazione al requisito reddituale relativo all’anno d’imposta 2019 </span>
                                }
                            }
                            <br />
                            <br />
                            <span class="rai-font-text-heading text-uppercase" style="font-size:16px;"><center>dichiara (ai sensi degli artt. 46 e 47 del DPR n. 445/2000) quanto segue:</center></span>
                            <br />
                            <div class="form-check radio-custom radio-info primary" style="margin-left:10px; margin-top:10px;">
                                <input name="scelta" type="radio" id="radio1" value="1">
                                <label for="radio1" style="font-size:16px;" class="rai-font-lg">
                                    di NON aver percepito, nel corso dell’anno 2019, redditi complessivi da lavoro dipendente (*)
                                    per un importo superiore a 40.000 euro e pertanto di aver diritto all’erogazione del premio;
                                </label>
                            </div>
                            <br />
                            <div class="form-check radio-custom radio-info primary" style="margin-left:10px; margin-top:10px;">
                                <input name="scelta" type="radio" id="radio2" value="2">
                                <label for="radio2" style="font-size:16px;" class="rai-font-lg">
                                    di aver percepito, nel corso dell’anno 2019, redditi complessivi da lavoro dipendente (*)
                                    per un importo superiore a 40.000 euro e pertanto di NON aver diritto alla corresponsione del premio.
                                </label>
                            </div>
                            <br />
                            <br />

                            <span class="rai-font-lg text-left" style="font-size:16px;">Data @(DateTime.Now.ToString( "dd/MM/yyyy" ))</span><br />
                            <br />
                            <br />
                            <span class="text-left rai-font-lg">
                                (*) ai fini del calcolo dell’importo del reddito complessivo da lavoro dipendente si deve tener conto delle seguenti retribuzioni
                                eventualmente percepite: stipendi, cassa integrazione, indennità di disoccupazione, indennità di mobilità, indennità di malattia,
                                indennità di maternità, etc. Tali dati sono contenuti nei punti 1 e/o 2 delle CU 2020 (redditi 2019) rilasciate al dipendente
                                dai sostituti che nel 2019 hanno corrisposto le somme elencate (a titolo esemplificativo, dal datore di lavoro,
                                dall’ente previdenziale, etc).
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Fine colonna -->
    </div>
</div>
<div class="modal-footer" style="width:100%;height:60px;position:absolute;bottom:0px;text-align:center;border-top:none;">
    <button type="button" class="btn btn-primary" onclick="ConfermaScelta();">Conferma</button>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annulla</button>
</div>

<script type="text/javascript">

function ConfermaSceltaDetrazione() {
}
</script>