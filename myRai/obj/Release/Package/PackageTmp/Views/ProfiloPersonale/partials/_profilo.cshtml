@using myRai.Business;


@{
    string matricola = CommonManager.GetCurrentUserMatricola();
    string details2 = "";
    if (myRai.Models.Utente.EsponiAnagrafica()._dataAssunzione != null)
    {
        details2 = "in servizio dal " + ((DateTime)myRai.Models.Utente.EsponiAnagrafica()._dataAssunzione).ToString("d MMMM yyyy");
    }
}

<section class="rai panel" id="ImpDatiProfilo" tabindex="0" aria-labelledby="ImpDatiProfiloLabel">
    <header class="panel-heading">
        <h2 id="ImpDatiProfiloLabel" class="panel-title">Profilo</h2>
    </header>
    <div class="panel-body" id="Profilo">
        <div id="ImpDatiProfiloGroup">
            <div class="row">
                <div class="col-sm-12">
                    @Html.ProfileWidget(matricola, myRai.Models.Utente.Nominativo(), null, "matricola " + matricola, details2, htmlImgAttributes: new { style = "width:72px;height:72px;" })
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <div class="rai-font-md-neutral"> Settore</div>
                </div>
                <ul class="simple-todo-list pull-10-t" tabindex="0">
                    @{
                        string tmp = myRai.Models.Utente.EsponiAnagrafica()._inquadramento.ToString();
                        string[] inquadramento;
                        int count;
                        if ((tmp != null) && (tmp != ""))
                        {
                            inquadramento = tmp.Split(';');
                            count = (int)inquadramento.Count();
                        }
                        else
                        {
                            count = 0;
                            inquadramento = null;
                        }
                    }
                    @for (int i = 1; i < count; i++)
                    {
                        string tabs = new String('-', i);
                        <li class="rai-font-md" aria-label="@inquadramento[i]">@tabs @inquadramento[i]</li>
                    }
                </ul>
            </div>


            <div class="row push-10-t" tabindex="0">
                <div class="col-sm-12">
                    <div class="rai-font-md-neutral">Figura professionale</div>
                    <div class="rai-font-md">@myRai.Models.Utente.EsponiAnagrafica()._figProfessionale.ToUpper()</div>
                </div>
            </div>
            <hr />
            <div class="row push-10-t" tabindex="0">
                <div class="col-sm-12">
                    <div class="rai-font-md-neutral">Contratto</div>
                    <div class="rai-font-md">@myRai.Models.Utente.EsponiAnagrafica()._contratto.ToUpper()</div>
                </div>

            </div>

            <div class="row push-10-t" tabindex="0">
                <div class="col-sm-12">
                    <div class="rai-font-md-neutral">Telefono</div>
                    <div class="rai-font-md">@myRai.Models.Utente.EsponiAnagrafica()._telefono.ToUpper()</div>
                </div>
            </div>
