
@* freak - definisco il modello *@
@model List<myRaiCommonModel.cvModels.cvModel.CompetenzeDigitali>


   @{
       myRai.Data.CurriculumVitae.cv_ModelEntities cvEnt = new myRai.Data.CurriculumVitae.cv_ModelEntities();
   }
<div  id="modalAggiungi" class="modal fade right" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
    <form class="form-horizontal mb-lg  form-insertcompetenzeDigitali" action="/CurriculumVitae/InsertCompetenzeDigitali" method="post">
    <div class="modal-content">
             <div class="block-header bg-cdf" style="height: 58px;">
                        <ul class="block-options visible-xs">
                            <li>
                                <button data-dismiss="modal" type="button"><span aria-hidden="true">×</span></button>
                            </li>
                        </ul>
                        <h4 class="lead" style="float: left; margin: -3px 0 0 0px; font-size: 2.1rem; color: #fff;">Autovalutazione
                        </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

              </div>

        
              <div class="modal-body row height100" id="edit-content">
    <div class="form-group">
            <div class="col-sm-6 no-pad-left no-pad-right border-right ">
        
        <!-- Composizione della FORM -->
        @{
            foreach (var elem in Model){
                
                <div class="col-md-12 push-10">
            <label class="col-xs-12 h4 ">@elem._descCompDigit</label>
                      <input type="hidden" name="compDigit" value="@elem._codCompDigit" />
            <div class="col-xs-1 push-10-t">
                 <img src=@("/assets/img/"+@elem._codCompDigit+".png") />
            </div>
            <div class="col-xs-11  push-10-t">
                <select class="js-select2 form-control input-validation-error form-control h3" data-val="true" data-val-required="Campo obbligatorio"  name="compDigitLiv" style="width: 100%;">
                    
                    @{
                
                var descComp3 = (from item in cvEnt.DCompDigitLiv
                                where item.CodCompDigit == elem._codCompDigit
                                select item).ToList();
                foreach (var desc in descComp3)
                {
                    string selectedItem = "";
                    if (desc.CodCompDigitLiv == elem._codCompDigitLiv)
                    {
                        selectedItem = "selected=\"selected\"";
                    }
                    
                    <option class="h3" value="@desc.CodCompDigitLiv" @selectedItem>@desc.DescCompDigitLiv - @desc.DescCompDigitLivLunga</option>
                }
                    }
                </select>
           
            </div>
            </div>
                
                
            }
        }
    <div class="modal-footer">
                    <div class="row">
                        <div class="col-xs-12 text-right">
                            <button class="btn btn-default bg-puls_dash" type="submit" onclick="submit_competenzeDigitali()"><i class=""></i> Invia</button>  @* fa fa-check-circle-o *@
                        </div>
                    </div>
                  </div>
            
        <!-- fine form -->
        </div>
    </div> <!-- FREAK - COPIARE FINO A QUAAAAAAAAAAAA -->
              </div>
