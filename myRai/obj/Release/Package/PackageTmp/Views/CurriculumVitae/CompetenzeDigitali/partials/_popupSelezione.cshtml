                    <div class="row">
                        <div class="col-xs-6">
                            <button class="btn btn-warning"  data-dismiss="modal" type="button"><i class="fa fa-arrow-circle-o-left"></i> Indietro</button>
                        </div>
                        <div class="col-xs-6 text-right">
                            <button class="btn btn-primary" type="submit" onclick="submit_competenzeDigitali()"><i class="fa fa-check-circle-o"></i> Invia</button> 
                        </div>
                    </div>
                  </div>*@
          
        </div>
        </form>
    </div>
</div>
