@model List<myRaiCommonModel.cvModels.cvModel.CompetenzeRAI>

@{
    myRai.Data.CurriculumVitae.cv_ModelEntities cvEnt = new myRai.Data.CurriculumVitae.cv_ModelEntities();
    int j=-1;
    

}


<form id="frm-insertCompetenzeRai" name="frm-insertCompetenzeRai" method="post" action="/CurriculumVitae/EditCompetenzeRai">

<!-- ******************************** -->
<div class="block">
        <div class="block block-themed block-transparent remove-margin-b">
              <div class=" block-header bg-primary-dark">
                <h3 class="block-title">Attività area editoriale</h3>
              </div>
    <div class="form-group col-xs-12">
        <!-- Composizione della FORM -->
    <table style="width:100%">
        <tr>
            <td style="width:60%">
                <label>Attività ricoperta</label>
            </td>
            <td style="width:15%">
                <label>Principale</label>
            </td>
            <td style="width:15%">
                <label>Secondario</label>
            </td>
            <td style="width:10%">
                <label>Extra Rai</label>
            </td>
        </tr>
        @foreach (var elem in Model)
        {
            j++;
            string checkP, checkS, checkCodConProf, checkExtraRai;
            checkCodConProf = "";
            if (elem._flagExtraRai == "1")
            {
                checkExtraRai = "checked=\"checked\"";
                checkCodConProf = "checked=\"checked\"";
            }
            else
            {
                checkExtraRai = "";
            }
            checkP = "";
            checkS = "";
            
            switch (elem._flagChoice)
            {
                case "P":
                    checkP = "checked=\"checked\"";
                    checkCodConProf = "checked=\"checked\"";
                    break;
                case "S":
                    checkS = "checked=\"checked\"";
                    checkCodConProf = "checked=\"checked\"";
                    break;
                default:
                    checkS = "";
                    checkP = "";
                    break;
                    
            }
        <tr>
            <td style="width:60%">
                <table>
                    <tr>
                        <td>
                            <label class="css-input css-checkbox css-checkbox-success">
                            <input  type="checkbox" name="compRai[@j]._codConProf" id="compRai[@j]._codConProf" value="@elem._codConProf" @checkCodConProf class="select-check-@j" onchange="controlCheck('select-check-@j', 'radio-item-@j', 'control-radio-@j')"/><span></span>
                            </label>
                            <input type="hidden" name="compRai[@j]._matricola" value="@elem._matricola" />
                        </td>
                        <td>
                            @elem._descConProf
                        </td>
                    </tr>
                </table>
            </td>
            <td style="width:15%">
            <label class="css-input css-radio css-radio-success push-10-r ">
                 <input type="radio" name="compRai[@j]._flagChoice" id="compRai[@j]._flagChoice"  value="P" class="radio-item-@j control-radio-@j" onchange="controlRadio('select-check-@j')" @checkP/><span></span> 
            </label>
            </td>
            <td style="width:15%">
            <label class="css-input css-radio css-radio-success push-10-r ">
                <input type="radio" name="compRai[@j]._flagChoice" id="compRai[@j]._flagChoice" value="S"  class="control-radio-@j" onchange="controlRadio('select-check-@j')" @checkS/><span></span> 
            </label>
            </td>
            <td style="width:10%">
                <label class="css-input css-checkbox css-checkbox-success">
                <input  type="checkbox" id="compRai[@j]._flagExtraRai" name="compRai[@j]._flagExtraRai"  value="1" @checkExtraRai class="control-radio-@j" onchange="controlRadio('select-check-@j')" /><span></span>
                </label>
            </td>
        </tr>

        }
    </table>
        <!-- fine form -->
    </div> <!-- FREAK - COPIARE FINO A QUAAAAAAAAAAAA -->
                  <div class="block-content block-content-mini block-content-full">
                    <div class="row push-10-t">
                        <div class="col-xs-6">   @*col-xs-6*@
                            @*<button class="btn btn-warning"  data-dismiss="modal" type="button"><i class="fa fa-arrow-circle-o-left"></i> Indietro</button>*@
                        </div>
                        <div class="col-xs-6 text-right">  @*col-xs-6 *@
                            <button class="btn btn-primary" type="submit" onclick=""><i class="fa fa-check-circle-o"></i> Invia</button> 
                        </div>
                    </div>
                  </div>
          </div>

</div>
<!-- ******************************** -->

</form>

 
   
