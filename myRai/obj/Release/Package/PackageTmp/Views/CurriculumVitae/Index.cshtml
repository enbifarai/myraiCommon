@model myRaiCommonModel.cvModels.cvModel
@{
    Layout = "~/Views/Shared/_layout2.cshtml";
}

    <div id="page-loaderR"><span class="loaderR"><span class="loader-innerR">S</span></span></div>

    <!-- Container di Pagina -->

    <div id="page-container" class="sidebar-l sidebar-mini sidebar-o header-navbar-fixed">

<section class="body">

    @Html.Partial("../Shared/header2", new myRai.Models.NotifichePopupModel())

    <div class="inner-wrapper">

        @Html.Partial("../Shared/sidebar3", Model.menuSidebar)
        <section role="main" class="content-body">
        <!-- Main Container -->
        <main id="main-container">
			<div class="content">
				<div class="row">
                    

						<div class="col-sm-6 col-lg-9 remove-padding">
                           @foreach (myRai.Models.cvModels.cvModel.Box box in Model.listaBox)
                           {
                               <div class="col-sm-12 col-lg-6 ">
                                   <section class="panel">
                                    
                                        <div class="panel-heading panel-featured bg-top-@box._colore">
                                            <h3 class="panel-title">@box._titolo</h3>
                                        </div>
                                        <div class="panel-body" style="height:150px">
                                                <div class="col-xs-4 block-content-full push">
                                                    <i class="@box._icon fa-5x text-@box._colore push-10 "></i>    <!-- text-black -->
                                                </div>
                                                <div class="col-xs-8 block-content-full">
                                                   @box._sottotitolo
                                                </div>                                                                                                
                                        </div>
                                        <div class="panel-footer setright">
                                                <a href="~/CurriculumVitae/@box._url">
                                                <button type="button" class="btn btn-default btn-scriv text-uppercase"><small>Accedi</small></button>         @* mb-xs mt-xs mr-xs btn btn-primary btn-block bg-@box._colore push-20  text-uppercase push-t text-white  *@
                                               </a>
                                        </div>
                                    </section>
                                   </div>
                          }
                        </div>
                                <div class="col-md-4 col-lg-3 remove-padding">
         
            @*<div class="remove-padding" id="inbox-nav">*@
            <section class="panel">

                 @Html.Partial("partials/_box_anagrafico")
            </section>


           @* </div>*@
            </div>
                            
				</div>
			</main>

            </section>
        </div>
    </section>
        <!-- FINE Main Container -->
        <div id="inner" class="inner"></div>
    </div>
    <!-- FINE Page Container -->

    <!-- Partial view per modali -->

      @Html.Partial("partials/_popupSelezione")

