@model myRaiCommonModel.cvModels.cvModel.Certificazioni
<form class="js-form2 form-horizontal form-modificaCertificazioni" action="/CurriculumVitae/ModificaCertificazioni" method="post">
    @Html.HiddenFor(x => x._matricola)
    @Html.HiddenFor(x => x._prog)
    @Html.HiddenFor(x => x._tipo)
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block block-themed block-transparent remove-margin-b">
                <div class=" block-header bg-primary-dark">
                    <ul class="block-options">
                        <li>
                            <button data-dismiss="modal" type="button"><i class="si si-close"></i></button>
                        </li>
                    </ul>
                    <h3 class="block-title">Brevetti</h3>
                </div>
                <div class="modal-body" id="edit-content">
                    <div class="form-group divdettaglio">
                        <div class="col-md-12">
                            <div class="push-10">
                                <div class="push-10">
                                    @Html.LabelFor(m => m._tipoBrevetto, "Titolo brevetto")
                                    @Html.TextBoxFor(m => m._tipoBrevetto, new { @class = "form-control required", style = "width: 100%", placeholder = "Inserire a testo libero", onkeyup = "inpreq('_tipoBrevetto');", id = "_tipoBrevetto" })
                                    @Html.ValidationMessageFor(m => m._tipoBrevetto, "Il titolo brevetto è obbligatorio", new { @class = "field-validation-error hidden" })
                                </div>
                                <div class="push-10">
                                    @Html.LabelFor(m => m._uffBrevetto, "Ufficio brevetti")
                                    @Html.TextBoxFor(m => m._uffBrevetto, new { @class = "form-control", style = "width: 100%", placeholder = "Inserire a testo libero" })
                                </div>
                                <div class="push-10">
                                    @Html.LabelFor(m => m._numBrevetto, "Numero brevetto o deposito")
                                    @Html.TextBoxFor(m => m._numBrevetto, new { @class = "form-control required", style = "width: 100%", placeholder = "Inserire a testo libero", onkeyup = "inpreq('_numBrevetto');", id = "_numBrevetto" })
                                    @Html.ValidationMessageFor(m => m._numBrevetto, "Il numero brevetto è obbligatorio", new { @class = "field-validation-error hidden" })
                                </div>
                                <div class="push-10">
                                    @Html.LabelFor(m => m._inventore, "Inventore/co-inventori")
                                    @Html.TextBoxFor(m => m._inventore, new { @class = "form-control", style = "width: 100%", placeholder = "Inserire a testo libero" })
                                </div>
                                <div class="row push-10">
                                    <div class="col-xs-1">
                                        @Html.RadioButtonFor(m => m._flagRegBrevetto, 0, new { @class = "radio control-radio", id = "_flagbrevetto" })
                                    </div>
                                    <div class="col-xs-6">
                                        <label>Brevetto in corso di registrazione</label>
                                    </div>
                                    <div class="col-xs-1">
                                        @Html.RadioButtonFor(m => m._flagRegBrevetto, 1, new { @class = "radio control-radio radio_default", id = "_flagbrevetto" })
                                    </div>
                                    <div class="col-xs-4">
                                        <label>Brevetto rilasciato</label>
                                    </div>
                                </div>
                                <div class="push-10">
                                    @Html.LabelFor(m => m._dataBrevetto, "Data concessione")
                                    <div class="stile-data">
                                        <div class="form-material input-group date" style="position: relative">
                                            @Html.TextBoxFor(m => m._dataBrevetto, new { @class = "js-datetimepicker form-control start required", data_format = "DD/MM/YYYY", data_locale = "it", id = "_dataBrevetto", placeholder = "Selezionare una Data", onchange = "inpreq('_dataBrevetto');" })
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                        <div>
                                            @Html.ValidationMessageFor(m => m._dataBrevetto, "La data concessione è obbligatoria", new { @class = "field-validation-error hidden" })
                                        </div>
                                    </div>
                                </div>
                                <div class="push-10">
                                    @Html.LabelFor(m => m._urlBrevetto, "Url brevetto")
                                    @Html.TextBoxFor(m => m._urlBrevetto, new { @class = "form-control url", style = "width: 100%", placeholder = "Inserire a testo libero", id = "_urlBrevetto", onkeyup = "ctrUrl('_urlBrevetto');"  })
                                    @Html.ValidationMessageFor(m => m._urlBrevetto, "Url non valido", new { @class = "field-validation-error hidden" })
                                </div>
                                <div class="row frk_info push-10">
                                    <div class="col-md-12">
                                        @Html.LabelFor(m => m._noteBrevetto, "Descrizione")
                                        @Html.TextAreaFor(m => m._noteBrevetto, new { @class = "form-control", style = "width: 100%", placeholder = "Inserire a testo libero utilizzando al massimo 250 caratteri", rows = 5 })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="block-content block-content-mini block-content-full border-t">
                    <div class="row">
                        <div class="col-xs-6">
                            <button class="btn btn-warning" data-dismiss="modal" type="button"><i class="fa fa-arrow-circle-o-left"></i>Indietro</button>
                        </div>
                        <div class="col-xs-6 text-right">
                            <button class="btn btn-primary" type="submit" onclick="submit_modificaCertificazione()"><i class="fa fa-check-circle-o"></i>Invia</button>
                            <button type="button" class="btn btn-danger"><span onclick="ConfermaCancellazione_Certificazione('@Model._matricola', '@Model._prog')">Elimina</span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>
