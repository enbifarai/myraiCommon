@using myRaiHelper;
@using myRaiCommonModel;
@using MVCProject.Custom_Helpers;

@model SediGappModel

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a tabindex="0" type="button" data-toggle="block-option" href="javascript:reset_ric()">
                <i class="icons icon-refresh"></i>
            </a>

            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle="" aria-labelledby="lblCercaRichieste" aria-expanded="true"></a>
        </div>
        <h2 id="lblCercaRichieste" class="panel-title">Cerca tra le sedi</h2>
    </header>

    <form action="/sedi/index" method="get">


        <div class="panel-body" id="my-block">
            <div class="row" style="margin-bottom: 4px">
                <div class="col-sm-12">
                    @Html.TextBoxFor( x => x.searchName , new { @class = "form-control" , placeholder = "Sede..." } )
                </div>
            </div>

            <div class="row" style="margin-bottom: 4px">
                <div class="col-sm-12">
                    @Html.DropDownListFor( x => x.searchCal , Model.listaCalendari , "Calendario di sede..." , new { @class = "form-control" } )
                </div>
            </div>

            <div class="row" style="margin-bottom: 4px">
                <div class="col-sm-12">
                    @Html.TextBoxFor( x => x.searchDesc , new { @class = "form-control" , placeholder = "Descrizione..." } )

                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 text-right">
                    <button type="submit" class="btn btn-info not-auto">Cerca</button>
                </div>
            </div>
        </div>
    </form>
</section>
