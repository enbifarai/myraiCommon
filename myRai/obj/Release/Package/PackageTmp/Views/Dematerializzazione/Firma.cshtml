        $.ajax({
            url: '@Url.Action( "SaltaDocumento" , "Dematerializzazione" )',
            type: "GET",
            async: true,
            cache: false,
            data: {
                idDoc: idCurrent
            },
            contentType: "application/json; charset=utf-8",
            dataType: 'html',
            success: function (data) {
                data = $.parseJSON(data);
                if (data.success) {
                    if (data.Id > 0) {
                        Dematerializzazione_GetDocumento(data.Id);
                    } else {
