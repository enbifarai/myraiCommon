@using myRai.Models
@using myRai.Business

@model ProfiloImageModel

<div class="rai-profile-widget" style="@(Model.RemoveMarginTop ? "" : "margin-top:20px")">
    <div class="rai-profile-image">
        <img src="@(CommonManager.GetUrlFotoExternal(Model.Matricola))" class="">
        @if ( Model.InServizio != null )
        {
            if ( Model.InServizio == EnumPresenzaDip.Presente )
            {
                <div class="border-base-color rai-profile-presence bg-feedback-success"></div>
            }
            else if ( Model.InServizio == EnumPresenzaDip.Assente )
            {
                <div class="border-base-color rai-profile-presence bg-feedback-error"></div>
            }
            else if ( Model.InServizio == EnumPresenzaDip.SmartWorking )
            {
                <div class="border-base-color rai-profile-presence rai-bg-primary"></div>
            }
        }

    </div>
    <div class="rai-profile-info">

        <span class="rai-font-md-bold ">@Model.Row1</span>

        <br>
        <span class="rai-font-sm">@Model.Row2</span>
    </div>

</div>
