@using myRaiCommonModel;

@model List<MPGStanza>

@if (!Model.Any())
{
    <div class="row">
        @Html.Partial("~/Views/Shared/_NoDatiDiv.cshtml")
    </div>
}
else
{
    <div class="row">
        <div class="col-sm-12">
            <table class="table rai-table rai-table-vcenter">
                @foreach (var stanza in Model)
                {
                    <tr>
                        <td>
                            <div class="rai-checkbox">
                                <input type="checkbox" data-stanza-id="@stanza.PrenStanza.Id_Stanza"/>
                                <label></label>
                            </div>
                        </td>
                        <td>
                            <span class="rai-font-md-bold">@(stanza.PrenStanza.NoteStanza)</span><br />
                            <span class="rai-font-sm-neutral">@stanza.PrenStanza.DesStanza</span>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="row push-10-t">
        <div class="col-sm-12">
            <button id="btn-assoc" class="btn rai-btn-small" disabled="disabled" title="Associa i giornalisti da valutare">Associa</button>
        </div>
    </div>

    <script>
        function ToggleEnableAssign() {
            if ($('[data-stanza-id]:checked').length > 0) {
                $('#btn-assoc').enable(true);
            } else {
                $('#btn-assoc').enable(false);
            }
        }
    </script>
}