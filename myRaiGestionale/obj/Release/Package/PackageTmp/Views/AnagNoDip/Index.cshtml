
@{
    Layout = "~/Views/Shared/_layoutContent.cshtml";
    ViewBag.Title = "HRIS - Anagrafica Dipendente";
}

<section role="main" class="content-body">
    <main id="main-container">
        <div class="content">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">
                    @Html.RenderWidget(myRaiHelper.WidgetType.Normal, "Gestione anagrafica", "fa fa-user", "Aggiungi una nuova anagrafica", action: new myRaiHelper.ActionTemplate()
                       {
                            Text = "Crea anagrafica",
                            OnClick = "AnagNoDipModal(0)"
                       })
                </div>
            </div>
        </div>
    </main>

    <!-- end: page -->
</section>

<!--Impedire la chiusura della modale-->
@Html.RenderModal("anagrafica", myRaiHelper.ModalPosition.Right, myRaiHelper.ModalSize.Half, modalAttributes: new myRaiHelper.RaiAttributes() { new myRaiHelper.RaiAttribute("data-backdrop", "static") })

<script>
    function AnagNoDipModal(idAnag) {
        RaiOpenAsyncModal("modal-anagrafica", "/AnagNoDip/Modal_Anagrafica", { idAnag: idAnag });
    }
</script>
