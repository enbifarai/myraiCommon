@model myRaiCommonModel.sidebarModel
<!-- start: sidebar -->
<aside id="sidebar-left" class="sidebar-left" >
    <div class="nano">
        <div class="nano-content">
            <nav id="menu" class="nav-main" role="navigation">
                <ul class="nav nav-main nav-expanded">
                    @if (Model.sezioni != null)
                    {
                        if (Model.sezioni.Any(a => a.codiceMy == "MY"))
                        {
                            foreach (var sez in Model.sezioni.Where(a => a.codiceMy == "MY"))
                            {
                                //Sezioni
                                if (sez.customView == null)
                                {
                                }
                                else
                                {

                                    string s = "";

                                    if (sez.attivo)
                                    {
                                        s = "active";
                                    }

                        <li>
                            <a class="@s nav-active" href="@sez.customView">
                                <i class="icons icon-home text-primary" aria-hidden="true"></i>
                                <span>@sez.nomeSezione.ToUpper()</span>
                            </a>
                        </li>
                                }
                            }
                               <hr style="background-color: #2e3b42; margin-right: 35px; margin-top: 10px; margin-bottom: 8px;">
                        }
                     
                      
                        if (Model.sezioni.Any(a => a.codiceMy == "EVENTI"))
                        {
                                        
                        <li class="nav-parent nav-expanded">
                            <a>
                                <i class="icons icon-clock text-primary" aria-hidden="true"></i>
                                <span>EVENTI</span>
                            </a>
                            @foreach (var sez in Model.sezioni.Where(a => a.codiceMy == "EVENTI"))
                            {
                                if (sez.vociMenu.Count > 0)
                                {
                                <ul class="nav nav-children">

                                    <li class="nav-parent ">
                                        <a><span class="colorSecondLiv">@sez.nomeSezione</span></a>
                                        @if (sez.vociMenu.Count > 0)
                                        {
                                            <ul class="nav nav-children">
                                                @foreach (var voce in sez.vociMenu)
                                                {  
												       
                                                    <li>
                                                        <a href="@voce.customView" class="margine-10-sx">@voce.nomeSezione</a>
                                                    </li>
													       
												      
                                                }
                                            </ul>
                                        }
                                    </li>

                                </ul>
                                }
                                else
                                {
                                    string s = "";

                                    if (sez.attivo)
                                    {
                                        s = "nav-active";
                                    }
                                <ul class="nav nav-children">
                                    <li>
                                        <a class="@s" href="@sez.customView">

                                            <span class="colorSecondLiv">@sez.nomeSezione</span>
                                        </a>
                                    </li>
                                </ul>                                     
                                }

                            }

                        </li>
                          <li>
                            <hr style="background-color: #2e3b42; margin-right: 35px; margin-top: 10px; margin-bottom: 8px;">
                        </li>
                        }
                    }

                </ul>
            </nav>


        </div>
    </div>
    @if (@ViewData["viewhelp"] != null)
    {
        <div>
            <ul class="nav nav-main nav-expanded sfondoGuida">
                <li>
                    <a id="guida" class="nav-active sfondoGuida" href="javascript:Info('@ViewData["viewhelp"]');">
                        <i class="icons icon-info text-white" aria-hidden="true"></i>
                        <span>GUIDA ALL'UTILIZZO</span>
                    </a>
                </li>
            </ul>
        </div>
    }

</aside>
<!-- end: sidebar -->
