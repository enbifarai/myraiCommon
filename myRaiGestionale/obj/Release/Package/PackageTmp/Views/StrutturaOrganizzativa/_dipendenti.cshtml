
@model myRaiCommonModel.Gestionale.IncarichiTreeModel

 
    <section class="panel">
        <header class="panel-heading">
            <h2 id="lblLeftBox" class="panel-title">Dipendenti</h2>
            <div class="panel-actions visible-xs">
                <a href="#" class="panel-action  panel-action-toggle" data-panel-toggle="" aria-labelledby="lblLeftBox" aria-expanded="true"></a>
            </div>
        </header>

        <div class="panel-body panel-body-nopadding panel-row-bordered">
                @foreach (var dip in Model.Dettaglio.Dipendenti)
                {
                    <div class="row" role="row" style="padding: 10px;" data-stato="4">
                        <div class="col-sm-6">
                            @Html.ProfileWidget(dip.COD_MATLIBROMAT, dip.DES_COGNOMEPERS.Trim() + " " + dip.DES_NOMEPERS, null, "Matr. "+dip.COD_MATLIBROMAT)
                        </div>
                        <div class="col-sm-4">
                            <label class="rai-font-md ">
                                @dip.DES_QUALIFICA
                                @*@myRaiCommonHelper.IncarichiManager.GetCategoria(dip.COD_QUALIFICA)*@
                                <br>
                                <i class="rai-font-sm-neutral"> 
                                @dip.DES_RUOLO
                                    @*@myRaiCommonHelper.IncarichiManager.GetMansione(dip.COD_RUOLO)*@ 
                                </i>
                            </label><br class="hidden-xl">
                        </div>
                        
                        <div class="col-sm-2" style="font-weight:bold">
                            @*@switch (dip.Ordine_tipodip)
                            {
                                case "1":
                                    <span>TI</span>
                                    break;
                                case "2":
                                    <span>CFL</span>
                                    break;
                                case "3":
                                    <span>TD</span>
                                    break;
                                case "4":
                                    <span>CO</span>
                                    break;
                            }*@
                        </div>



                    </div>
                }
        </div>

    </section>
 
