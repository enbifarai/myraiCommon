@model myRaiCommonModel.Gestionale.GestioneSistemiModel

 
@foreach (var s in Model.Sistemi)
{
<div class="row" style="padding:8px;border-bottom:solid 1px #eee">
    <div class="col-sm-11">
        <span>@s.nome_sistema</span>
    </div>
    <div class="col-sm-1">
        <i class="fa fa-trash" title="Cancella sistema" style="cursor:pointer" onclick="cancellaSistema(@s.id)"></i>
    </div>
</div>
}

<div class="row" style="padding:8px;border-bottom:solid 1px #eee">
    <div class="col-sm-11">
        <input type="text" class="form-control" placeholder="Aggiungi nuovo sistema" id="nome-sistema" />
    </div>
    <div class="col-sm-1" style="padding:0px">
       <button class="btn btn-primary" value=" " onclick="AggiungiSistemaDB()">Aggiungi</button>
    </div>
</div>
