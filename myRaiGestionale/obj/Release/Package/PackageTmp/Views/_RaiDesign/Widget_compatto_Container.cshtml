@model List<myRaiCommonModel.AlertModel>

@if (Model != null && Model.Count() > 0)
{
    <div class="row">
        <div class="col-sm-12">
            <div class="panel-card-container panel-card-collapse-container">
                @foreach (var card in Model.GroupBy(x => x.IntestazioneWidget))
                {
                    <section class="panel panel-card" tabindex="0">
                        <div class="panel-heading light">
                            <label class="panel-title">@card.Key</label>
                        </div>
                        <div class="panel-body panel-body-nopadding">
                            <table class="table rai-table rai-table-vcenter rai-table-panel rai-table-filter">
                                @foreach (var subCard in card)
                                {
                                    <tr data-filter onclick="window.location='@subCard.HrefPulsante'">
                                        <td style="width:100%;">
                                            <span class="rai-font-lg-bold"><a href="@subCard.HrefPulsante">@subCard.Titolo</a></span>
                                            @if (!String.IsNullOrWhiteSpace(subCard.TraParentesi))
                                            {
                                                <br />
                                                <span class="rai-font-sm-neutral">@subCard.TraParentesi</span>
                                            }
                                        </td>
                                        <td class="text-right">
                                            <h4 class="text-bold">@subCard.CifraPrincipale</h4>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </section>
                }
            </div>
        </div>
    </div>
}