@model myRaiCommonModel.BoxSituazioneModel

<section class="panel ">
    <div class="panel-body" style="font-size: 120%;">
        @Model.Titolo

        <div class="row">
            <div class="col-sm-7" style="font-weight: 600;">
                @{
                    if ( String.IsNullOrEmpty( Model.CifraPrincipale ) &&
                    !String.IsNullOrEmpty( Model.MessaggioPrincipale ) )
                    {
                        <h3>@Model.MessaggioPrincipale</h3>
                    }
                    else
                    {
                        <h2>@Model.CifraPrincipale</h2>
                    }
                }
            </div>
            <div class="col-sm-5 tt-right" style="padding-top: 10px;">
                <h5>@Model.AllaData</h5>
            </div>
        </div>
    </div>
    <div class="panel-footer" style="background-color: #fff;">
        <div class="row">
            <div class="col-sm-2">
               @* <i class="icons icon-briefcase fa-2x text-primary"></i>*@
                <i class="@Model.ClasseIcona @Model.ColoreIcona"></i>
            </div>
            <div class="col-sm-10 text-right">
                <a href="@Model.HrefPulsante" class="btn btn-default bg-puls_dash btn-scriv">
                    @Model.TestoPulsante</a>
            </div>
        </div>

    </div>
</section>
