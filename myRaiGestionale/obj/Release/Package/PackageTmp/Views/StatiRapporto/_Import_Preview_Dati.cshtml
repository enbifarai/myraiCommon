@using myRaiCommonModel
@model IEnumerable<EventoModel>

<table class="table rai-table rai-table-vcenter">
    @foreach (var item in Model)
    {
        if (item.IdEvento != 0)
        {
        <tr>
            <td>@item.Matricola</td>
            <td>@item.DataInizio.ToString("dd/MM/yyyy")</td>
            <td>@item.DataFine.ToString("ddMM/yyyy")</td>
            <td style="width:100%">@item.DescrizioneEvento</td>
        </tr>
        }
        else
        {
            <tr>
                <td colspan="4">@item.DescrizioneEvento</td>
            </tr>
        }
    }
</table>