@using myRaiHelper;
@model myRaiCommonModel.Gestionale.CampagnaScheda



<div class="row">
    @{
        string titleMain = "";
        if (Model.ID == 0)
        {
            titleMain = "Nuova scheda";
        }
        else
        {
            titleMain = Model.Descrizione;
        }

    }
    @Html.RenderModalColumn(myRaiHelper.ModalColumnType.Main, "col-sm-12", titleMain, new List<myRaiHelper.SectionTemplate>()
            {
                SectionTemplate.CreateBlock(BlockType.ContentTable, "Dati iniziativa", "subpartial/Modal_Campagna_Scheda_CampagnaDetails", Model),
                SectionTemplate.CreateBlock(BlockType.ContentTable, "Parametri scheda", "subpartial/Modal_Campagna_Scheda_Parametri", Model)
            })

</div>

