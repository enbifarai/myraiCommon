                       data-iddirezione="@(Model.IdDirezione)" data-idcampagna="@(Model.IdCampagna)" data-idprovv="@(provvedimento)">
                        <i class="icons icon-@icon " style="font-size:13px;"
                           data-costo-straordinario="@aumentoLivello.CostoStraordinario"
