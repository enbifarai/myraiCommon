@using System.Globalization;
@using myRaiCommonModel;
@using myRaiHelper;

@{
    Layout = null;
    var cultureInfo = CultureInfo.GetCultureInfo("it-IT");
}

@model SimulazioneBudgetDirezioneVM

<div class="block-content">
    <div id="pn_budget">
        @Html.Partial("~/Views/Budget/Panels/_panelBudget.cshtml", Model)
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div id="pn_tblUtenti">
                @Html.Partial("~/Views/Budget/Panels/_tblUtenti.cshtml", Model)
            </div>
        </div>
    </div>
</div>
<div class="block-footer" style="position:absolute;bottom:0px;width:100%;">
    <div class="row">
        <div class="col-xs-4 col-xl-3">
            <p class="padd-10"><label class="rai-font-md-bold">Costo</label> <span>@String.Format("€ {0:N2}", Model.BudgetRiepilogo.TotaleProvv)</span></p>
        </div>
        <div class="col-xs-4 col-xl-3">
            <p class="padd-10"><label class="rai-font-md-bold">Budget</label> <span>@(String.Format("€ {0:N2}", Model.BudgetRiepilogo.Direzione))</span></p>
        </div>
        <div class="col-xs-4 col-xl-3">
            <p class="padd-10"><span class=""></span>&nbsp;<span class="">Delta @(String.Format("€ {0:N2}", Model.BudgetRiepilogo.Delta))</span></p>
        </div>
        <div class="col-xs-12 col-xl-3 text-right">
            <div class="rai-btn-fill">
                <button class="btn rai-btn-secondary" type="button" onclick="resetTblUtenti(this);" data-iddirezione="@(Model.IdDirezione)" data-idcampagna="@(Model.IdCampagna)">Reset</button>
                @{
                    if (PoliticheRetributiveHelper.EnableGest(PolRetrChiaveEnum.Richieste) && !Model.IsVisualizzazione)
                    {
                        <button class="btn rai-btn-primary" type="button" onclick="salvaSimulazine(this)" data-iddirezione="@(Model.IdDirezione)" data-idcampagna="@(Model.IdCampagna)">Salva simulazione</button>
                    }
                }
            </div>
        </div>
    </div>
</div>






