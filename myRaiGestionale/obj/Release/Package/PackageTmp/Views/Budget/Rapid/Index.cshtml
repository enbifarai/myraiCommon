            confirmButtonText: ' SI',
            cancelButtonText: ' NO'
        }).then(function () {

            var tbl = new Array();

            $('div[data-tabella-azioni=""]').each(function () {
                var idDip = $(this).data('iddipendente');
                $('a[id^="azione_' + idDip + '_"]').each(function () {
