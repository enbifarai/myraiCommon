@model myRaiCommonModel.UffPersBoxModel

@if (Model.isUffPers)
{
    bool approvata = false;

    if (Model.Richiesta.XR_MAT_PIANIFICAZIONI.Any())
    {
        var p = Model.Richiesta.XR_MAT_PIANIFICAZIONI.OrderByDescending(x => x.DATA_INSERIMENTO).FirstOrDefault();
        approvata = p.DATA_APPROVAZIONE != null;
    }
    <div id="infogiornata" class="block block-transparent block-content-table">
        <div class="block-header block-content-mini">
            <label class="rai-font-table-heading">Informazioni aggiuntive</label>
        </div>
        <div class="block-content block-content-mini">
            <div>

                <div class="row">
                    <div class="col-xs-6"><span>Presa visione Resp.</span></div>

                    <div class="col-xs-6">
                        @if (approvata)
                        {
                            <b>Sì</b>
                        }
                        else
                        {
                            <b>No</b>
                        }

                    </div>
                </div>

                <div class="row" style="margin-top:16px">
                    <div class="col-xs-6"><span>Eccezioni inserite </span></div>

                    <div class="col-xs-6">
                        <b>@Model.EccezioniInserite</b>

                    </div>
                </div>
            </div>
        </div>

    </div>

}
