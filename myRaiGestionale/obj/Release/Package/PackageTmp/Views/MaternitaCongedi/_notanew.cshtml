@model myRaiCommonModel.SingolaNotaModel


<div id="dettagli-note" @*style="margin-top: 16px; background-color: #fff;padding: 6px;"*@ class="">
    <div class="row">
        <div class="col-sm-12">
            <textarea name="testo" id="nota-amm" onkeyup="AbilitaButtonAggNota()" placeholder="Aggiungi una nota alla richiesta che potrà essere visualizzata da altri operatori"
                      style="    padding: 8px;    border: solid 1px #ccc;    border-radius: 4px;    width: 100%;    resize: none;"
                      rows="4" 
                      >@Model.nota.TESTO</textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a id="get-alle" href="#" onclick="AllegaDocNota()">Allega documento</a>
            <input name="file" style="display:none" type="file" id="file-nota" onchange="FileNotaChanged(this)" />
            <div class="text-primary" id="nomefile-container" style="display:none">
                <span class="fa fa-download"></span>
                <span style="margin-left:8px" id="nomefile-nota"></span>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="rai-radio rai-radio-inline" style="margin:15px;margin-left:0px;">
                <input type="radio" id="tutti-uff" name="visibilita"   value="*" 
                       @if (Model.nota.VISIBILITA == null || Model.nota.VISIBILITA == "*")
                       {
                            @:checked="checked"
                       }
                       >
                <label for="">Visibile a tutti gli uffici</label>
            </div>
            <div class="rai-radio rai-radio-inline" style="margin:15px;margin-left:0px;">
                <input type="radio" id="questo-uff" name="visibilita"  value="1"
                        @if (Model.nota.VISIBILITA != null && Model.nota.VISIBILITA != "*")
                       {
                            @:checked="checked"
                       }
                       >
                <label for="">Visibile solo a questo ufficio</label>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-12">
            <div class="rai-btn-fill">
                @if (Model.nota.ID == 0)
                {
                    <button type="button" id="agg-nota" class="disable btn rai-btn-small" onclick="AggiungiNota()">Aggiungi nota</button>
                }

            </div>
        </div>
    </div>

</div>