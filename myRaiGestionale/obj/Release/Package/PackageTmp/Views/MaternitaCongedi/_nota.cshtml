@model myRaiCommonModel.NotaModel
@{
    var NoteVisibili = Model.Richiesta.XR_MAT_NOTE.Where(x => x.VISIBILITA == Model.MioUfficioPerNote || x.VISIBILITA == "*").ToList();
}

@if (!NoteVisibili.Any() && !Model.InCaricoAMe)
{
    return;
}

