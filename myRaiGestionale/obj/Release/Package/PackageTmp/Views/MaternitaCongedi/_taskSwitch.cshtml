@model myRaiCommonModel.TaskSwitchModel
@{
    bool disabled = myRaiCommonManager.MaternitaCongediManager.IsEccezioneSospesa(Model.statoeccezione);
    //Model.statoeccezione != null && Model.statoeccezione.StartsWith("S");
    string OnOff = Model.stato == true ? "on" : "off";
    if (disabled)
    {
        OnOff = "off";
    }
}
<div 
     @if (disabled)
     {
         @:title="Eccezione sospesa" 
     }
     class="switch switch-sm @(Model.disabilitato?"disable":"")  @(disabled?"":"switch-primary")" 
      
     >
    <div class="ios-switch @OnOff">
        <div class="on-background background-fill"></div>
        <div class="state-background background-fill"></div>
        <div class="handle"></div>

    </div>
    <input data-mese="@Model.mese" data-stornocedolino="@Model.IsStornoCedolino" id="cb-@Model.counter" value="1" class="task-switch" type="checkbox" name="model[@Model.counter].attivo" data-plugin-ios-switch="" 
           @if (OnOff=="on")
           {
               @:checked="checked"
           }
           style="display: none;">
</div>