@model myRaiData.Incentivi.XR_INC_DIPENDENTI


<form id="form-modificaContabile" novalidate="novalidate" method="post">
    @Html.HiddenFor(x => x.ID_DIPENDENTE)
    
    <div class="form-group">
        <div class="row push-10">
            <div class="col-sm-12">
                <div class="rai-checkbox">
                    <input id="chkVincoloBCCR" name="chkVincoloBCCR" type="checkbox" />
                    <label for="chkVincoloBCCR">Vincolo BCCR</label>
                </div>
            </div>
        </div>
        <div class="row push-10">
            <div class="col-sm-12">
                <div class="rai-checkbox">
                    <input id="chkPignoramento" name="chkPignoramento" type="checkbox" />
                    <label for="chkPignoramento">Pignoramento in corso</label>
                </div>
            </div>
        </div>
        <div class="row push-10">
            <div class="col-sm-12">
                <div class="rai-checkbox">
                    <input id="chkEstinzioneAnticipata" name="chkEstinzioneAnticipata" type="checkbox" />
                    <label for="chkEstinzioneAnticipata">Estinzione anticipata del prestito</label>
                </div>
            </div>
        </div>
        <div class="row push-10">
            <div class="col-sm-12">
                <div class="rai-checkbox">
                    <input id="chkCessioneQuinto" name="chkCessioneQuinto" type="checkbox" />
                    <label for="chkCessioneQuinto">Cessione del credito della trattenuta di un quinto sul TFR</label>
                </div>
            </div>
        </div>
        <div class="row push-10">
            <div class="col-sm-4">
                @Html.LabelFor(m => m.CAUSE_VERTENZE, "Cause/Vertenze", new { @class = "rai-caption" })
            </div>
            <div class="col-sm-8">
                @Html.TextAreaFor(m => m.CAUSE_VERTENZE, new { @id = "txtGestMan", @class = "form-control ", placeholder = "", rows = 4 })
            </div>
        </div>
    </div>
</form>