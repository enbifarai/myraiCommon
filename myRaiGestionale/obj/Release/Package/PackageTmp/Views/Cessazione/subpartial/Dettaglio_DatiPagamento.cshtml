@using myRaiHelper
@using myRaiGestionale.Controllers
@model myRaiData.Incentivi.XR_INC_DIPENDENTI

@{
    myRaiData.Incentivi.XR_INC_OPERSTATI oper = Model.XR_INC_OPERSTATI.First(x => x.ID_STATO == (int)IncStato.Cedolini);
}

<div class="block block-content-table block-transparent ">
    <div class="block-header block-content-mini ">
        <label class="block-title">@CessazioneController.GetBoxDescription(IncStato.Cedolini)</label>
    </div>
    <!--contenuto-->
    <div class="block-content block-content-mini">
        <div class="rai-table-info">
            <div class="row">
                <div class="col-sm-6 ">
                    <label class="text-bold">Importo netto</label>
                </div>
                <div class="col-sm-6">
                    <label>@(Model.IMPORTO_NETTO != null ? String.Format("€ {0:N}", Model.IMPORTO_NETTO.Value) : "-")</label>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 ">
                    <label class="text-bold">Data pagamento</label>
                </div>
                <div class="col-sm-6">
                    <label>@(Model.DATA_PAGAMENTO.HasValue ? Model.DATA_PAGAMENTO.Value.ToString("dd/MM/yyyy") : "-")</label>
                </div>
            </div>
        </div>
        @Html.Partial("subpartial/Dettaglio_OperNote", oper)
    </div>
</div>
<!--fine contenuto-->
