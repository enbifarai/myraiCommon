</div>

<script type="text/javascript">

    function Dematerializzazione_Btn3Next_Click() {
        SubMitForm();
    }

    function Dematerializzazione_Save() {
        var idDoc = $('#btns-fase3-next').data('idDoc');

        $.ajax({
            url: "/Dematerializzazione/SetCompleted",
            type: "POST",
            data: JSON.stringify({
                matricola: '@(Model.Matricola)',
                idPersona: '@(Model.IdPersona)',
                idDoc: idDoc
            }),
            contentType: "application/json; charset=utf-8",
            dataType: 'html',
            success: function (data) {
                swal({
                    title: 'Il documento è stato creato correttamente',
                    type: 'success',
                    //confirmButtonClass: "btn btn-primary btn-lg",
                    showConfirmButton: true,
                    confirmButtonText: 'Ok',
                    customClass: 'rai'
                }).then(function () {
                    $('#modal-inserimentoDocDem-internal').data('isDirty', 'false');
                    $('#modal-inserimentoDocDem').modal('hide');
                    $('#modal-modificaRichiestaDematerializzazione').modal('hide');
                    //Dematerializzazione_OpenDettaglio('@(Model.Matricola)', '@(Model.IdPersona)', idDoc);
                    $('#modal-inserimentoDocDem-internal').html('');
                    $('#modal-modificaRichiestaDematerializzazione-internal').html('');
                });

            },
            error: function (xhr, status) {
                swal({
                    title: xhr.statusText,
                    type: 'error',
                    //confirmButtonClass: "btn btn-primary btn-lg",
                    showConfirmButton: true,
                    confirmButtonText: 'Ok',
                    customClass: 'rai'
                })
            }
        });
    }

    function SetPosizioneProtocollo() {
        var result = false;
        var idAllegato = $('#identificativoAllegato').val();
        if (idAllegato == null || idAllegato == "" || typeof (idAllegato) === "undefined") {
            return false;
        }

        var idDocumento = $('#idDocumento').val();
        if (idDocumento == null || idDocumento == "" || typeof (idDocumento) === "undefined") {
            return false;
        }

        var $newPosX = "-1";
        var $newPosY = "-1";
        var $newPosXData = "-1";
        var $newPosYData = "-1";
        var $newPosXFirma = "-1";
        var $newPosYFirma = "-1";

        $newPosX = $('#textLeft').text();
        $newPosY = $('#textTop').text();
        $newPosX = $newPosX.replace(".", ",");
        $newPosY = $newPosY.replace(".", ",");

        $newPosXData = $('#textLeftData').text();
        $newPosYData = $('#textTopData').text();
        $newPosXData = $newPosXData.replace(".", ",");
        $newPosYData = $newPosYData.replace(".", ",");

        $newPosXFirma = $('#textLeftFirma').text();
        $newPosYFirma = $('#textTopFirma').text();
        $newPosXFirma = $newPosXFirma.replace(".", ",");
        $newPosYFirma = $newPosYFirma.replace(".", ",");
        var numeroPagina = $('#dem-sel-pagina-documento').data('paginafirma');

        if ($newPosX == "") {
            $newPosX = "-1";
        }

        if ($newPosY == "") {
            $newPosY = "-1";
        }

        if ($newPosXData == "") {
            $newPosXData = "-1";
        }

        if ($newPosYData == "") {
            $newPosYData = "-1";
        }

        if ($newPosXFirma == "") {
            $newPosXFirma = "-1";
        }

        if ($newPosYFirma == "") {
            $newPosYFirma = "-1";
        }

        $.ajax({
            url: "/Dematerializzazione/SetPosizioneProtocollo",
            type: "POST",
            async: false,
            data: JSON.stringify({
                matricola: '@(Model.Richiesta.Documento.MatricolaDestinatario)',
                idPersona: '@(Model.Richiesta.Documento.IdPersonaDestinatario.GetValueOrDefault())',
                idAllegato: idAllegato,
                posLeft: $newPosX,
                posTop: $newPosY,
                posLeftData: $newPosXData,
                posTopData: $newPosYData,
                posLeftFirma: $newPosXFirma,
                posTopFirma: $newPosYFirma,
                numeroPaginaFirma: numeroPagina,
                idDocumento: idDocumento
            }),
            contentType: "application/json; charset=utf-8",
            dataType: 'html',
            success: function (data) {
                result = true;
            },
            error: function (xhr, status) {
                swal({
                    title: xhr.statusText,
                    type: 'error',
                    //confirmButtonClass: "btn btn-primary btn-lg",
                    showConfirmButton: true,
                    confirmButtonText: 'Ok',
                    customClass: 'rai'
                })
            }
        });
        return result;
    }

    $(function () {
        $("#draggable").data('mosso', 'false');
        $("#draggableData").data('mosso', 'false');
        $("#draggableFirma").data('mosso', 'false');

        $("#draggable").draggable({
            containment: "#ItemPreview",
            scroll: true,
            start: function (e, ui) {
                $(this).css('margin-top', '0px;');
                $(this).data('mosso', 'true');
            },
            stop: function (e, ui) {

            }
        });

        $("#draggableData").draggable({
            containment: "#ItemPreview",
            scroll: true,
            start: function (e, ui) {
                $(this).css('margin-top', '0px;');
                $(this).data('mosso', 'true');
            },
            stop: function (e, ui) {

            }
        });

        $("#draggableFirma").draggable({
            containment: "#ItemPreview",
            scroll: true,
            start: function (e, ui) {
                $(this).css('margin-top', '0px;');
                $(this).data('mosso', 'true');
            },
            stop: function (e, ui) {

            }
        });

        $("#ItemPreview").droppable({
            drop: function (event, ui) {
                var $newPosX = ui.offset.left - $(this).offset().left;
                var $newPosY = ui.offset.top - $(this).offset().top;

                var id = ui.draggable.attr('id');
                if (id == "draggable") {
                    $('#textLeft').text($newPosX);
                    $('#textTop').text($newPosY);
                }
                else if (id == "draggableData") {
                    $('#textLeftData').text($newPosX);
                    $('#textTopData').text($newPosY);
                }
                else if (id == "draggableFirma") {
                    $('#textLeftFirma').text($newPosX);
                    $('#textTopFirma').text($newPosY);
                }
            }
        });


        @{
            if (!String.IsNullOrEmpty(allegatoPrincipale.PosizioneProtocollo))
            {
                string sPosLeft = "";
                string sPosTop = "";
                string sPosLeftData = "";
                string sPosTopData = "";
                string sPosLeftFirma = "";
                string sPosTopFirma = "";

                List<PosizioneProtocolloOBJ> objD = JsonConvert.DeserializeObject<List<PosizioneProtocolloOBJ>>(allegatoPrincipale.PosizioneProtocollo);

                var protPos = objD.Where( w => w.Oggetto.Equals( "Protocollo" ) ).FirstOrDefault( );
                if (protPos != null)
                {
                    float posLeft = protPos.PosizioneLeft;
                    float posTop = protPos.PosizioneTop;
                    int leftProt = (int)posLeft;
                    int topProt = (int)posTop;
                    sPosLeft = leftProt.ToString();
                    sPosTop = topProt.ToString();
                    <text>
                    $("#draggable").css({ "top": "@(sPosTop)px" });
                    $("#draggable").data("left", '@(sPosLeft)');
                    $("#textTop").text("@(sPosTop)");
                    $("#textLeft").text("@(sPosLeft)");
                    $("#draggable").data({ "oldtop": "@(sPosTop)" });
                    $("#draggable").data("oldleft", '@(sPosLeft)');
                    </text>
                }

                var protPosData = objD.Where(w => w.Oggetto.Equals("Data")).FirstOrDefault( );
                if (protPosData != null)
                {
                    float posLeftData = protPosData.PosizioneLeft;
                    float posTopData = protPosData.PosizioneTop;
                    int leftData = (int)posLeftData;
                    int topData = (int)posTopData;

                    sPosLeftData = leftData.ToString();
                    sPosTopData = topData.ToString();
                    <text>
                    $("#draggableData").css({ "top": "@(sPosTopData)px" });
                    $("#draggableData").data("left", '@(sPosLeftData)');
                    $("#textTopData").text("@(sPosTopData)");
                    $("#textLeftData").text("@(sPosLeftData)");
                    $("#draggableData").data({ "oldtop": "@(sPosTopData)" });
                    $("#draggableData").data("oldleft", '@(sPosLeftData)');
                    </text>
                }

                var protPosFirma = objD.Where(w => w.Oggetto.Equals("Firma")).FirstOrDefault( );
                if (protPosFirma != null)
                {
                    float posLeftFirma = protPosFirma.PosizioneLeft;
                    float posTopFirma = protPosFirma.PosizioneTop;
                    paginaFirma = protPosFirma.NumeroPagina;
                    int leftFirma = (int)posLeftFirma;
                    int topFirma = (int)posTopFirma;

                    sPosLeftFirma = leftFirma.ToString();
                    sPosTopFirma = topFirma.ToString();
                    <text>
                    $('#dem-sel-pagina-documento').data('paginarichiesta', '1');
                    $('#dem-sel-pagina-documento').data('paginacorrente', '1');
                    $('#dem-sel-pagina-documento').data('paginafirma', '@(paginaFirma)');
                    $('#selPagina').val('@(paginaFirma)');
                    $("#draggableFirma").css({ "top": "@(sPosTopFirma)px" });
                    $("#draggableFirma").data("left", '@(sPosLeftFirma)');
                    $("#textTopFirma").text("@(sPosTopFirma)");
                    $("#textLeftFirma").text("@(sPosLeftFirma)");
                    $("#draggableFirma").data({ "oldtop": "@(sPosTopFirma)" });
                    $("#draggableFirma").data("oldleft", '@(sPosLeftFirma)');
                    $("#draggableFirma").data("oldpagina", '@(paginaFirma)');

                    </text>
                }

                <text>
                    $('#dem-sel-pagina-documento').hide();
                    $('#icona1-protocollo').addClass('evidenzia');
                    $('#icona3-firma').removeClass('evidenzia');

                    $('#draggable').show();
                    $('#draggableData').show();
                    if (@(paginaFirma) === 1) {
                        $('#icona3-firma').addClass('evidenzia');
                        $('#draggableFirma').show();
                    }
                    else {
                        $('#icona3-firma').removeClass('evidenzia');
                        $('#draggableFirma').hide();
                    }  
                </text>
            }
        }
    });
</script>