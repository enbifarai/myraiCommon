@model Dem_ModificaDocumentoVM

@{
    var allegatoPrincipale = Model.Richiesta.Allegati.FirstOrDefault(w => w.IsPrincipal);
    bool isPDF = false;
    if (allegatoPrincipale != null)
    {
        if (allegatoPrincipale.MimeType.ToUpper().Contains("APPLICATION/PDF"))
        {
            isPDF = true;
        }
        else
        {
            isPDF = allegatoPrincipale.ContentBytePDF != null;
        }
    }
    else
    {
        allegatoPrincipale = new myRaiData.Incentivi.XR_ALLEGATI();
    }
    string sIsPDF = isPDF.ToString().ToUpper();

    int nPagina = 1;
