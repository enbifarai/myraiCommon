@using myRaiCommonModel
@model List<RichiestaAnag>

@if (!Model.Any())
{
    <div class="row push-10-t push-10">
        <div class="col-xs-12 text-center">
            <span class="rai-font-md-neutral">Non ci sono dati da visualizzare</span>
        </div>
    </div>
}
else
{
    <table class="table rai-table rai-table-vcenter rai-table-panel">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span class="rai-font-md-neutral-bold">@item.DataRichiesta.ToString("dd/MM/yyyy")</span>
                </td>
                <td class="full-width">
                    <span>@item.Descrizione</span>
                </td>
                <td class="text-right">
                    <button class="btn rai-btn-small" onclick="OpenModalRichiesta('@item.Matricola', '@item.Tipologia', @item.IdRichiesta)">Vedi</button>
                </td>
            </tr>
        }
    </table>


}