@using myRaiCommonModel
@model AnagraficaStatiRapporti

@{
    Model.ModifyAction = "OpenModalStatiRapporto";

    var listAction = new List<myRaiHelper.ActionTemplate>();
    if (Model.CanAdd)
    {
        listAction.Add(new myRaiHelper.ActionTemplate() { Icon = "fa fa-plus", OnClick = "OpenModalStatiRapporto('" + Model.Matricola + "', 0)" });
    }
}

@using (Html.BeginBlock(myRaiHelper.BlockType.ContentTable, "Stati", listAction))
{
    @Html.Partial("~/Views/Anagrafica/subpartial/_Eventi_Container.cshtml", Model)
}