@using myRaiHelper
@using myRaiCommonModel
@model AnagraficaDatiAnag

@{ 
    var listAction = new List<myRaiHelper.ActionTemplate>();
    if (Model.CanModify)
    {
        listAction.Add(new myRaiHelper.ActionTemplate() { Icon = "fa fa-pencil", OnClick = "OpenModalAnag('"+Model.Matricola+"')", Title = "Modifica dati anagrafici" });
    }
}

@using (Html.BeginBlock(myRaiHelper.BlockType.ContentTable, "DATI ANAGRAFICI", listAction))
{
<div class="rai-table-info">
    <div class="row push-10-t">
        <div class="col-sm-4 col-lg-3 col-xl-2">
            <span>Nome</span>
        </div>
        <div class="col-sm-8 col-lg-9 col-xl-10">
            <span>@Model.Nome.TitleCase()</span>
        </div>
    </div>
    <div class="row push-10-t">
        <div class="col-sm-4 col-lg-3 col-xl-2">
            <span>Cognome</span>
        </div>
        <div class="col-sm-8 col-lg-9 col-xl-10">
            <span>@Model.Cognome.TitleCase()@(!String.IsNullOrWhiteSpace(Model.SecondoCognome)?" "+Model.SecondoCognome.TitleCase():"")</span>
        </div>
    </div>
    <div class="row push-10-t">
        <div class="col-sm-4 col-lg-3 col-xl-2">
            <span>Data di nascita</span>
        </div>
        <div class="col-sm-8 col-lg-9 col-xl-10">
            <span>@Model.DataNascita.ToString("dd/MM/yyyy")</span>
        </div>
    </div>
    <div class="row push-10-t">
        <div class="col-sm-4 col-lg-3 col-xl-2">
            <span>Sesso</span>
        </div>
        <div class="col-sm-8 col-lg-9 col-xl-10">
            <span>@Model.Sesso</span>
        </div>
    </div>
    <div class="row push-10-t">
        <div class="col-sm-4 col-lg-3 col-xl-2">
            <span>Luogo di nascita</span>
        </div>
        <div class="col-sm-8 col-lg-9 col-xl-10">
            <span>@Model.LuogoNascita</span>
        </div>
    </div>
    <div class="row push-10-t">
        <div class="col-sm-4 col-lg-3 col-xl-2">
            <span>Cittadinanza</span>
        </div>
        <div class="col-sm-8 col-lg-9 col-xl-10">
            <span>@Model.Cittadinanza.TitleCase()</span>
        </div>
    </div>
    <div class="row push-10-t">
        <div class="col-sm-4 col-lg-3 col-xl-2">
            <span>Stato civile</span>
        </div>
        <div class="col-sm-8 col-lg-9 col-xl-10">
            <span>@Model.StatoCivile</span>
        </div>
    </div>
    <div class="row push-10-t">
        <div class="col-sm-4 col-lg-3 col-xl-2">
            <span>Codice fiscale</span>
        </div>
        <div class="col-sm-8 col-lg-9 col-xl-10">
            <span>@Model.CodiceFiscale</span>
        </div>
    </div>
</div>



}