@using myRaiHelper
@using myRaiCommonModel
@model AnagraficaModel

@{
    string matricola = Model.Matricola;
    if (Model.IsNeoMatr)
    {
        matricola = Model.Sesso;
    }
}

<div class="row">
    <div class="col-xs-12">
        <div class="row push-20-t">
            @if (!Model.IsNeoMatr)
            {
                <div class="col-xl-1 col-md-3 col-sm-4" style="padding-top:5px;">
                    @Html.ProfileWidget(matricola, htmlImgAttributes: new { @class = "img-doubled" })
                </div>
            }
            <div class="col-xl-11 col-md-9 col-sm-8">
                <div class="row push-10">
                    <div class="col-xs-12">
                        <span class="rai-font-text-heading-bold">@Model.Nome  @Model.Cognome</span><br />
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model.ViewInfo)
                    {
                        switch (item)
                        {
                            case "matricola":
                                <div class="col-xl-3 col-sm-6 push-10">
                                    <span class="rai-font-md-bold">Matricola</span><br />
                                    <span class="rai-font-md-neutral-bold">@Model.Matricola</span>
                                </div>
                                break;
                            case "data_assunzione":
                                <div class="col-xl-3 col-sm-6 push-10">
                                    <span class="rai-font-md-bold">Data assunzione</span><br />
                                    <span class="rai-font-md-neutral-bold">@Model.DataAssunzione.ToString("dd/MM/yyyy")</span>
                                </div>
                                break;
                            case "servizio":
                                <div class="col-xl-3 col-sm-6 push-10">
                                    <span class="rai-font-md-bold">Servizio</span><br />
                                    <span class="rai-font-md-neutral-bold">@Model.Servizio</span>
                                </div>
                                break;
                            case "sede":
                                <div class="col-xl-3 col-sm-6 push-10">
                                    <span class="rai-font-md-bold">Sede</span><br />
                                    <span class="rai-font-md-neutral-bold">@Model.Sede</span>
                                </div>
                                break;
                            case "qualifica":
                                <div class="col-xl-3 col-sm-6 push-10">
                                    <span class="rai-font-md-bold">Qualifica</span><br />
                                    <span class="rai-font-md-neutral-bold">@Model.Qualifica</span>
                                </div>
                                break;
                            case "sezione":
                                    <div class="col-xl-3 col-sm-6 push-10">
                                        <span class="rai-font-md-bold">Direzione</span><br />
                                        <span class="rai-font-md-neutral-bold">@Model.Sezione</span>
                                    </div>
                                break;
                            default:
                                break;
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>