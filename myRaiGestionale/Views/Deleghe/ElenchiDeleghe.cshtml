@using myRaiHelper
@using MVCProject.Custom_Helpers
@using myRaiGestionale.Controllers
@using myRaiCommonModel

@{
    Layout = null;
    ViewBag.Title = "HRIS - Deleghe";
}

@model DelegheVM

<div class="block block-transparent no-margin-bottom">
    <div class="block-header">
        <label class="rai-font-modal-heading">Gestisci deleghe</label>
        <div class="block-options">
            <button data-dismiss="modal" class="btn btn-action-icon" onclick="$(this).parent('.modal').css('z-index', '');"><i class="glyphicon glyphicon-remove"></i></button>
        </div>
    </div>
    <div class="block-content">
        <div class="row">
            <div class="col-sm-12" id="">
                <!-- PANEL DELEGHE CONCESSE -->
                <div class="row">
                    <div class="col-sm-12" id="">
                        <section id="" class="panel" style="">
                            <header class="panel-heading" data-panel-toggle="">
                                <h1 class="panel-title">Deleghe concesse</h1>
                                <div class="panel-actions rai-panel-actions">
                                    <a href="#" class="panel-action rai panel-action-toggle" data-panel-toggle="" aria-labelledby="lblRightBox" aria-expanded="true"></a>
                                </div>
                            </header>
                            <div class="panel-body no-padding">
                                <div id="div_deleghe_concesse">
                                    <div class="block" style="margin-bottom:0px;">
                                        <div class="block-content tab-content" style="padding:23px 5px 1px;overflow:unset;">
                                            <div class="tab-pane active" role="tabpanel">
                                                <div class="table-responsive" id="" style="display:none;">
                                                    <table class="rai-table table rai-table-vcenter">
                                                        <thead>
                                                            <tr>
                                                                <th>
                                                                    <div class="col-xs-12">
                                                                        <label class="rai-font-sm-bold"></label>
                                                                    </div>
                                                                </th>
                                                                <th class="text-right">
                                                                    <div class="row">
                                                                        <div class="col-xs-12 text-right">
                                                                            <button class="btn rai-btn-small" aria-label="Rifiuta tutti" onclick="" title="Elimina selezionate" style="min-width:80px;">
                                                                                Elimina selezionate
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                </th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>
                                                <div class="panel-body panel-body-nopadding" id="">
                                                    <div id="">
                                                        <div class="table-responsive">
                                                            <table class="rai-table table rai-table-vcenter" id="">
                                                                <thead>
                                                                    <tr>
                                                                        <th class="text-left">Dipendente</th>
                                                                        <th class="text-left">Descrizione</th>
                                                                        <th class="text-right">Azioni</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody></tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <!-- PANEL DELEGHE CONCESSE -->
            </div>
        </div>
    </div>
    <div class="block-footer-modal" style="height:60px;">
        <div class="">
            <div id="btns-fase1" class="block-footer" style="padding: 5px 2px;">
                <div class="rai-btn-fill">
                    <button type="button" id="deleghe-btn-chiudi-modal-elenco" class="btn rai-btn-secondary" onclick="Deleghe_ChiudiModaleElencoDeleghe();">Annulla</button>
                    <button type="button" id="deleghe-btn-aggiungi-delega" onclick="Deleghe_CreaDelegaNoWizard('@Model.MatricolaCorrente', 'DEMA', 'DEMA');" class="btn rai-btn-primary">Aggiungi delega</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
        $(function () {
            RaiUpdateWidget('div_deleghe_concesse', '/Deleghe/GetContentDelegheConcesse', 'html', { matricola: @(Model.MatricolaCorrente)}, false, null, false, 'GET');

            RaiUpdateWidget('div_deleghe_ricevute', '/Deleghe/GetContentDelegheRicevute', 'html', { matricola: @(Model.MatricolaCorrente)}, false, null, false, 'GET');
        });
</script>