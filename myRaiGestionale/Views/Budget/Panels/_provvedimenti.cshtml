@using System.Globalization;
@using myRaiCommonModel;

@{
    Layout = null;
    var cultureInfo = CultureInfo.GetCultureInfo("it-IT");
}

@model List<Provvedimento>

<table class="table table-hover table-responsive" role="grid" style="font-size:14px; text-align:left;">
    <thead>
        <tr>
            <th>Data</th>
            <th>Descrizione</th>
            <th>Importo</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null && Model.Any())
            {
                foreach (var p in Model.OrderByDescending(w => w.Data))
                {
                    <tr>
                        <td><h5>@(p.Data.ToString("dd/MM/yyyy"))</h5></td>
                        <td><h5>@(p.Descrizione)</h5></td>
                        <td><h5>@(String.Format("€ {0:N2}", p.Importo))</h5></td>
                    </tr>
                }
            }
            else
            {
                @Html.Partial("~/Views/Shared/_NoDati.cshtml")
            }
        }
    </tbody>
</table>