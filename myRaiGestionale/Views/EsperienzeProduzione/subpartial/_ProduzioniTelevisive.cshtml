@model myRaiCommonModel.EsperienzeProduzioneModel
<div class="form-group">
    <div class="row">
        <div class="col-xs-12 push-10">
            <div class="col-sm-9" style="padding-left:5px">
                <div class="row">
                    <input type="hidden" id="_produzioni" name="_produzioni" value="" />
                    @Html.LabelForRequiredObbl(model => model.produzioniTelevisive.Programmi, "Produzioni", new { @class = "rai-caption requiredobbl" })
                    @{
                        List<SelectListItem> item_select_produzioni = new List<SelectListItem>();
                        foreach (var elem in Model.produzioniTelevisive.Programmi.OrderBy(x => x.Titolo))
                        {
                            item_select_produzioni.Add(new SelectListItem()
                            {
                                Value = elem.Matricola,
                                Text = elem.Titolo
                            });
                        }
                    }
                    @Html.DropDownList("_codProduzione", item_select_produzioni, string.Empty, new
               {
                   @id = "_codProduzione",
                   @class = "js-select2 rai form-control  textable-select",
                   @style = "width: 100%",
                   @data_allow_insert = "true"
               })
                    @Html.ValidationMessageFor(model => model.produzioniTelevisive.Programmi)
                </div>
            </div>
        </div>
    </div>
   
        @Html.Partial("subpartial/_Ricerca", Model)
 
    <div class="row form-button">
        <div class="col-sm-12">
            <div class="rai-btn-fill">
                <input type="submit" id="btnCerca" class="btn btn-primary" title="Cerca" value="Cerca" data-target="#modal-dettaglio-direzione" />
            </div>
        </div>
    </div>
</div>

