@model myRaiCommonModel.EsperienzeProduzioneModel
<div id="tblContainerRisorse">
    <div class="row">
        <div class="col-md-12">
            <label id="ritrovamenti" class="rai-caption">@Model.numeroRisorse risorse individuate</label>
        </div>

    </div>
    <div class="panel-body  panel-body-nopadding" id="">
        <div id="sez_Risorse">
            <div class="table-responsive">
                <table class="rai-table table trasferte rai-table-vcenter" id="table_Risorse">
                    <thead>
                        <tr>
                            <th>Matricola</th>
                            <th style="width:auto;">Nome e Cognome</th>
                            <th>Direzione</th>
                            <th>Fig.Prof.</th>
                            <th>Inizio Impegno</th>
                            <th>Fine Impegno</th>
                            <th>Disp.</th>
                            <th>Num.</th>
                            <th>Perc.</th>
                        </tr>
                    </thead>

                    <tbody id="listaRisorse">
                        @{
                            foreach (var item in Model.risorse)
                            {
                                string datada = "";
                                if (!item.dataInizio.IsEmpty())
                                {
                                    datada = @item.dataInizio.Substring(6, 2) + "/" + @item.dataInizio.Substring(4, 2) + "/" + @item.dataInizio.Substring(0, 4);
                                }
                                string dataa = "";
                                if (!item.dataFine.IsEmpty())
                                {
                                    dataa = @item.dataFine.Substring(6, 2) + "/" + @item.dataFine.Substring(4, 2) + "/" + @item.dataFine.Substring(0, 4);
                                }
                                    <tr style="cursor: pointer;">
                                    <td>
                                        <span class="rai-font-md-bold">@item.Matricola</span>
                                    </td>
                                    <td>
                                        <span class="rai-font-md-bold">@item.Nominativo</span>
                                    </td>
                                    <td>
                                        <span class="rai-font-md-bold">@item.Direzione</span>
                                    </td>
                                    <td>
                                        <span class="rai-font-md-bold">@item.Figura</span>
                                    </td>
                                    <td>
                                        <span class="rai-font-md-bold">@datada</span>
                                    </td>
                                    <td>
                                        <span class="rai-font-md-bold">@dataa</span>
                                    </td>
                                    <td>
                                        <i class="fa fa-circle circle-@item.Disponibile"></i>
                                    </td>
                                    <td>
                                        <span class="rai-font-md-bold">@item.numProd</span>
                                    </td>
                                    <td>
                                        <span class="rai-font-md-bold">@item.percentuale</span>
                                    </td>

                                </tr>
                            }
                        }






                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>
