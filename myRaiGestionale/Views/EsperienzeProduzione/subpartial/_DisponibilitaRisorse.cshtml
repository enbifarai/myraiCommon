@model myRaiCommonModel.EsperienzeProduzioneModel
<div class="form-group">
    <div class="row">
        @Html.Partial("subpartial/_Ricerca", Model)
    </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="rai-radio rai-radio-inline">
                    <input type="radio" name="ricerca-diponibili" value="D" checked="checked" />
                    <label for="" style="font-size:xx-small">Disponibili</label>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="rai-radio rai-radio-inline">
                    <input type="radio" name="ricerca-allocate" value="D" />
                    <label for="" style="font-size:xx-small">Allocate</label>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="rai-radio rai-radio-inline">
                    <input type="radio" name="ricerca-prenotate" value="P" />
                    <label for="" style="font-size:xx-small">Prenotate</label>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="input-group mb-md">
                    <span class="input-group-addon"><i class="icons icon-calendar"></i></span>
                    <input class="js-datetimepicker form-control" data-format="DD/MM/YYYY" data-locale="it" type="text" id="data" name="data" placeholder="alla data">
                </div>
            </div>
        </div>
   
    <div class="row form-button">
        <div class="col-sm-12">
            <div class="rai-btn-fill">
                <input type="submit" id="btnCerca" class="btn btn-primary" title="Cerca" value="Cerca" data-target="#modal-dettaglio-direzione" />
            </div>
        </div>
    </div>
</div>
