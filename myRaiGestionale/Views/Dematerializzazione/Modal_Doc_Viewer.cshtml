@using myRaiGestionale.Controllers
@using myRaiCommonModel
@using myRaiHelper
@model DettaglioDematerializzazioneVM

@{
    /**/

    string title = "Dettagli documento";
}

@using ( Html.BeginModal( title ) )
{
<div class="row">
    <div class="col-sm-8">
        @using ( Html.BeginPanel( myRaiHelper.PanelType.Panel , "Anteprima documento" , false ) )
        {
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-12" style="background-color:gray; overflow-y:auto;">
                        <iframe style="width:100%; height:76vh!important;" src="@Url.Action("GetPDF","Dematerializzazione")?idDoc=@Model.Richiesta.Documento.Id"></iframe>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-sm-4">
        <div class="row">
            <div class="block block-content-table block-transparent">
                <div class="block-header">
                    <label class="block-title">Dettagli</label>
                </div>
                <div class="block-content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="panel remove-margin-bottom">
                                <div class="panel-body">
                                    <div class="rai-table-info">
                                        <div class="row push-20">
                                            <div class="col-sm-12">
                                                <label>Data richiesta</label>
                                            </div>
                                            <div class="col-sm-12">
                                                <label>@Model.Richiesta.Documento.DataCreazione.ToString( "dd/MM/yyyy" )</label>
                                            </div>
                                        </div>

                                        <div class="row push-20">
                                            <div class="col-sm-12">
                                                <label>Creato da</label>
                                            </div>
                                            <div class="col-sm-12">
                                                <label>@Model.NominativoUtenteCreatore</label>
                                            </div>
                                        </div>

                                        <div class="row push-20">
                                            <div class="col-sm-12">
                                                <label>Incaricato firma</label>
                                            </div>
                                            <div class="col-sm-12">
                                                <label>@Model.NominativoUtenteApprovatore</label>
                                            </div>
                                        </div>

                                        <div class="row push-20">
                                            <div class="col-sm-12">
                                                <label>Documento</label>
                                            </div>
                                            <div class="col-sm-12">
                                                <label>@(Model.Richiesta.Documento.XR_DEM_TIPI_DOCUMENTO.Descrizione)</label>
                                            </div>
                                        </div>

                                        <div class="row push-20">
                                            <div class="col-sm-12">
                                                <span>
                                                    <a href="@Url.Action("ScaricaPDF","Dematerializzazione")?idDoc=@Model.Richiesta.Documento.Id"><i class="fa fa-download"> </i> Scarica il documento</a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}