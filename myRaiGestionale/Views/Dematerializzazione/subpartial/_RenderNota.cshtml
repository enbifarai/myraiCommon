@using myRaiData
@using myRaiCommonModel
@model NotaVM

@{
    <div class="bg-neutrals-xl-10" style="margin-left:-15px; margin-right:-15px; padding:10px 25px;">
        <div class="row">
            <div class="col-sm-12">
                <label class="rai-font-sm-neutral-bold margine-10-sx">@Model.Data.ToString("dd MMMM yyyy")</label>
            </div>
        </div>
        <div class="row" style="margin-right: -15px; margin-left: -15px;">
            <div class="col-sm-12">
                <div class="panel remove-margin-bottom">
                    <div class="panel-body" style="background-color:#fff;">
                        <div class="">
                            <div class="row push-30">
                                <div class="col-sm-8">
                                    @Html.Partial( "~/Views/Dematerializzazione/subpartial/_profiloimage.cshtml" , new myRaiCommonModel.ProfiloImageModel() {
                                   Matricola= Model.Matricola,
                                   Row1 = Model.Nominativo,
                                   Row2 = "Matricola "+ Model.Matricola
                               })
                                </div>
                                <div class="col-sm-4 text-right">
                                    <span class="rai-font-sm-neutral-bold">@Model.Commento</span>
                                </div>
                            </div>
                            <div class="row push-20">
                                <div class="col-sm-12">
                                    <span class="rai-font-sm-neutral-bold">Nota</span>
                                </div>
                                <div class="col-sm-12">
                                    <label>@Model.Testo</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}