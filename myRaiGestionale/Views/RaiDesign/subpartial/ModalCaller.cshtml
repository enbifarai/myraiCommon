<div class="row push-10">
    <div class="col-sm-12">
        <label class="rai-font-sm-neutral">Modale laterale</label>
    </div>
    <div class="col-sm-12">
        <div class="rai-btn-fill">
            <button class="btn rai-btn-small" onclick="OpenModalFull()">Modale full</button>
            <button class="btn rai-btn-small" onclick="OpenModalHalf()">Modale half</button>
        </div>
    </div>
</div>
<div class="row push-10">
    <div class="col-sm-12">
        <label class="rai-font-sm-neutral">Alert un bottone</label>
    </div>
    <div class="col-sm-12">
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwalOneButton('success')">Success</button>
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwalOneButton('info')">Info</button>
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwalOneButton('error')">Error</button>
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwalOneButton('warning')">Warning</button>
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwalOneButton('question')">Question</button>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <label class="rai-font-sm-neutral">Alert due bottoni</label>
    </div>
    <div class="col-sm-12">
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('success')">Success</button>
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('info')">Info</button>
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('error')">Error</button>
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('warning')">Warning</button>
        <button class="btn rai-btn-small" onclick="OpenFeedbackSwal('question')">Question</button>
    </div>
</div>


<script>
    function OpenModalFull() {
        RaiOpenAsyncModal('modal-full', '/RaiDesign/ModaleFull');
    }
    function OpenModalHalf() {
        RaiOpenAsyncModal('modal-half', '/RaiDesign/ModaleHalf');
    }

    function OpenFeedbackSwal(tipo) {
        swal({
           title: 'Pratica Conclusa',
            type: tipo,
            html: "Riceverai subito un'e-mail di conferma<br>Vuoi modificare anche il numero del Servizio in Mobilità?",
            confirmButtonText: '<i class="fa fa-check"></i> Vedi il riepilogo',
            showCancelButton: true,
            cancelButtonText: '<i class="fa fa-times"></i> No, lascia stare',
            reverseButtons: true,
            customClass: 'rai rai-confirm-cancel',
        }).then(function () {
            //something
        })
    }

    function OpenFeedbackSwalOneButton(tipo) {
        swal({
            title: 'Pratica Conclusa',
            type: tipo,
            html: "Pratica conclusa con successo"
        }).then(function () {
            //something
        })
    }

</script>
