@using myRaiCommonModel
@model SceltaDestinazioneTfrViewModel

@using (Html.BeginPanel(myRaiHelper.PanelType.Panel, "Scelta della destinazione", false))
{
    @Html.Partial("_wizard", Model)

    switch (Model.StepCorrenteAmministrazione)
    {
        case StepsEnum.PREGRESSO:
            @Html.Partial("_step1", Model)
            break;
        case StepsEnum.DETTAGLI:
            @Html.Partial("_step2", Model)
            break;
        case StepsEnum.DOCUMENTO:
            @Html.Partial("_step3", Model)
            break;
        case StepsEnum.RIEPILOGO:
            @Html.Partial("_step4", Model)
            break;
    }
}

<script>
    function visualizzaFile(idAllegato) {
        var idModal = 'modal-viewer-temp-allegati'
        RaiOpenAsyncModal('modal-viewer-temp-allegati', '/SceltaDestinazioneTfr/GetAllegatoTemporaneo', { idAllegato: idAllegato }, null, 'GET');
    }
</script>
