    function caricaMotiviSceltaPregressa() {
        var isSceltaPregressaEffettuata = $('#IsSceltaPregressaEffettuata').val();

        $.ajax({
            type: 'GET',
            cache: false,
            url: "/SceltaDestinazioneTfr/CaricaScelteDisponibili",
