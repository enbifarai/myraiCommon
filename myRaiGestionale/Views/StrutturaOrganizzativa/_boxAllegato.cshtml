@model myRaiCommonModel.Gestionale.BoxAllegatoModel

@if (Model.Allegato == null)
{
    <div class="box-allegato" data-tipo="@Model.tipo" style="margin-bottom:20px">

        <input type="hidden" class="doc-action" />
        <input type="hidden" class="doc-tipo" />

        <div class="row" style="margin-bottom:4px">
            <div class="col-sm-2">
                <div title="Aggiungi documento" id="boxFile" class=" summary-icon item item-rounded text-primary bigborder" style="width:50px;height:50px;line-height:50px">
                    <span id="spanAddFile" class="cursor-pointer">
                        <i id="iAddFile" style="font-size: 36px;" role="link" aria-label="Aggiungi l'allegato" class="" onclick="AddAllegatoProcesso(this)">+</i>
                    </span>
                    <input style="display:none" type="file" onchange="CheckAllegato(this)" />
                </div>
            </div>
            <div class="col-sm-10">
                <div>
                    <input type="text" class="form-control" style="display:none">
                </div>
            </div>


        </div>
        <div class="row">
            <div class="col-sm-2">&nbsp;</div>
            <div class="col-sm-10">
                <textarea style="display:none" placeholder="Digita una descrizione del file..." class="form-control" rows="6"></textarea>
            </div>
        </div>
    </div>

}
else
{
    <div class="box-allegato" data-tipo="@Model.tipo" style="margin-bottom:20px">

        <input type="hidden" class="doc-action" name="Documenti[@Model.progressivo].Action" />
        <input type="hidden" class="doc-tipo" name="Documenti[@Model.progressivo].Tipo" value="@Model.tipo" />
        <input type="hidden" class="doc-id" name="Documenti[@Model.progressivo].id" value="@Model.Allegato.id" />

        <div class="row" style="margin-bottom:4px">
            <div class="col-sm-2">
                <div title="Cancella documento" id="boxFile" class=" summary-icon item item-rounded text-primary bigborder" style="width:50px;height:50px;line-height:50px">
                    <span id="spanAddFile" class="cursor-pointer">
                        <i id="iAddFile" style="font-size: 22px;" role="link" aria-label="Cancella l'allegato" class="fa fa-trash" onclick="CancellaAllegato(this)"></i>
                    </span>

                </div>
            </div>
            <div class="col-sm-10">
                <div>
                    <input onkeyup="ModificaAllegato(this)" type="text" class="form-control" name="Documenti[@Model.progressivo].Nome" value="@Model.Allegato.nome_file">
                </div>
            </div>


        </div>
        <div class="row">
            <div class="col-sm-2">&nbsp;</div>
            <div class="col-sm-10">
                <textarea  onkeyup="ModificaAllegato(this)" name="Documenti[@Model.progressivo].Desc" placeholder="Digita una descrizione del file..." class="form-control" rows="6">@Model.Allegato.descrizione</textarea>
            </div>
        </div>
    </div>
}
