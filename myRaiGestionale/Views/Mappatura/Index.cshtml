@{
    Layout = "~/Views/Shared/_layoutContent.cshtml";
    ViewBag.Title = "HRIS - Mappatura giornalisti";
}

<style>
    #new-dip tr > td:nth-child(1), #dip-assoc tr > td:nth-child(1) {
        padding-right: 0px;
    }

    #new-dip tr > td:nth-child(2), #dip-assoc tr > td:nth-child(2) {
        padding-left: 0px;
    }
