                        @helper DrawTree(myRaiCommonModel.Gestionale.IncarichiTreeModel albero, myRaiCommonModel.Gestionale.TAlberoSezioneModel node)
                        {
                            bool hasChild = albero.AlberoItems.Any(x => x.subordinato_a == node.id);
                            string treeIcon = "";
                            if (!hasChild)
                            {
                                treeIcon = "fa fa-file";
