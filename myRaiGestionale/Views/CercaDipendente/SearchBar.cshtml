                                {
                                    <ul>
                                        @foreach (var child in albero.AlberoItems.Where(x => x.subordinato_a == node.id).OrderBy(x => x.num_ordina))
                                        {
                                            @DrawTree(albero, child)
                                        }
                                    </ul>
                                }
                            </li>
                        }

