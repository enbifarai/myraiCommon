@using myRaiCommonModel
@using myRaiHelper
@model List<IndirizzoModel>


@if (!Model.Any())
{
    <div class="row push-10 push-10-t">
        <div class="col-sm-12 text-center">
            <span class="rai-font-md-neutral">Non ci sono dati da visualizzare</span>
        </div>
    </div>
}
else
{
    <table class="js-table-sections table rai-table rai-table-panel rai-table-borderless" role="grid">
        @foreach (var item in Model)
        {
            <tbody class="js-table-sections-header">
                <tr>
                    <td style="padding-top:12px; padding-bottom:12px;">
                        <span class="rai-font-md-neutral-bold">@item.Decorrenza.ToString("dd/MM/yyyy")</span>
                    </td>
                    <td style="width:100%;padding-top:12px; padding-bottom:12px;">
                        <span class="">@item.Indirizzo.TitleCase()</span>
                    </td>
                    <td style="padding-top:12px; padding-bottom:12px;" class="rai-table-td-toggle">
                        <i class="fa fa-chevron-down"></i>
                    </td>
                </tr>
            </tbody>
            <tbody class="no-border">
                <tr>
                    <td class="">
                        <span class="rai-font-md-neutral-bold">Città</span>
                    </td>
                    <td class="" colspan="2">
                        @if (!String.IsNullOrWhiteSpace(item.CodCitta) && item.CodCitta!="ND")
                        {
                            <span>@item.Citta</span>
                        }
                        else
                        {
                            <span><span class="fa fa-circle feedback-warning-color"></span> Non disponibile</span>
                        }
                    </td>
                </tr>
                <tr>
                    <td class="">
                        <span class="rai-font-md-neutral-bold">CAP</span>
                    </td>
                    <td class="" colspan="2">
                        <span>@item.CAP</span>
                    </td>
                </tr>
                <tr>
                    <td class="">
                        <span class="rai-font-md-neutral-bold">Stato</span>
                    </td>
                    <td class="" colspan="2">
                        <span>@item.Stato</span>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
