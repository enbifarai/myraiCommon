@using myRaiCommonModel
@model List<IbanModel>


@if (!Model.Any())
{
    <div class="row push-10 push-10-t">
        <div class="col-sm-12 text-center">
            <span class="rai-font-md-neutral">Non ci sono dati da visualizzare</span>
        </div>
    </div>
}
else
{
    <table class="js-table-sections table rai-table rai-table-panel rai-table-vcenter rai-table-borderless" role="grid">
        @foreach (var item in Model)
        {
            <tbody class="js-table-sections-header">
                <tr>
                    <td style="padding-top:12px;padding-bottom:0px;">
                        <span class="rai-font-md-neutral-bold">@item.DataInizio.ToString("dd/MM/yyyy")</span>
                    </td>
                    <td style="width:100%;padding-bottom:0px">&nbsp;</td>
                    <td rowspan="2" class="rai-table-td-toggle text-right">
                        <i class="fa fa-chevron-down"></i>
                    </td>
                </tr>
                <tr >
                    <td colspan="2" class="" style="padding-top:0px;padding-bottom:12px;"><span class="">@item.IBAN</span></td>
                </tr>
            </tbody>
            <tbody  class="no-border">
                <tr>
                    <td class="">
                        <span class="rai-font-md-neutral-bold">Intestatario</span>
                    </td>
                    <td class="" colspan="2">
                        <span>@item.Intestatario</span>
                    </td>
                </tr>
                <tr>
                    <td class="">
                        <span class="rai-font-md-neutral-bold">Agenzia</span>
                    </td>
                    <td class="" colspan="2">
                        <span>@item.Agenzia</span>
                    </td>
                </tr>
                <tr>
                    <td class="">
                        <span class="rai-font-md-neutral-bold">Indirizzo Agenzia</span>
                    </td>
                    <td class="" colspan="2">
                        <span>@item.IndirizzoAgenzia</span>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
