@using myRaiHelper;
@using myRaiCommonModel.ess;

@model DettaglioTrasfertaVM
@{
    Layout = null;
    string modalTitle = "Dettaglio trasferta " + Model.FViaggio;
}

@using (Html.BeginModal(modalTitle))
{

    <div class="modal-backdrop fade in"></div>

        <div class="rai height100 scroll-container">
               
                <div class="block-content">
                    <div class="row">
                        <!-- Colonna -->
                        <div class="col-sm-12">
                            @{
                                if (Model.Itinerario != null && Model.Itinerario.Any())
                                {

                                    foreach (var it in Model.Itinerario)
                                    {
                                        string boxTitle = System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(it.DataPartenza.GetValueOrDefault().ToString("dddd").ToLower()) + " " + (it.DataPartenza.GetValueOrDefault().ToString("dd")) + " " + (System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(it.DataPartenza.GetValueOrDefault().ToString("MMMM")));

                                        using (Html.BeginPanel(myRaiHelper.PanelType.Panel, boxTitle, false))
                                        {
                                            <div class="rai-table-info">
                                                <div class="row" id="">
                                                    <div class="col-xs-5"><span>Partenza da </span></div>
                                                    <div class="col-xs-7"><span>@(it.Origine)</span></div>
                                                </div>
                                                <div class="row" id="">
                                                    <div class="col-xs-5"><span>Data partenza </span></div>
                                                    <div class="col-xs-7"><span>@(it.DataPartenza.GetValueOrDefault().ToString("dd/MM/yyyy HH:mm:ss"))</span></div>
                                                </div>
                                                <div class="row" id="">
                                                    <div class="col-xs-5"><span>Codice prenotazione </span></div>
                                                    <div class="col-xs-7"><span>@(it.CodicePrenotazione)</span></div>
                                                </div>
                                                <div class="row" id="">
                                                    <div class="col-xs-5"><span>Codice mezzo </span></div>
                                                    <div class="col-xs-7"><span>@(it.CodiceMezzo)</span></div>
                                                </div>
                                                <div class="row" id="">
                                                    <div class="col-xs-5"><span>Arrivo a </span></div>
                                                    <div class="col-xs-7"><span>@(it.DestCitta)</span></div>
                                                </div>
                                                <div class="row" id="">
                                                    <div class="col-xs-5"><span>Data arrivo </span></div>
                                                    <div class="col-xs-7"><span>@(it.DataArrivoFull.GetValueOrDefault().ToString("dd/MM/yyyy HH:mm:ss"))</span></div>
                                                </div>

                                            </div>
                                        }

                                    }

                                }
                                else
                                {
                                    <section class="rai panel">
                                        <header class="panel-heading">
                                            <h2 class="panel-title">Itinerari</h2>
                                        </header>
                                        <div class="panel-body">
                                            <div class="row push-5-t">
                                                @Html.Partial("~/Views/Shared/_NoDatidiv.cshtml")
                                            </div>
                                        </div>
                                    </section>
                                }
                            }
                        </div>
                        <!-- Fine colonna -->
                    </div>
                    <div class="row no-margin-left-right"></div>
                </div>
        </div>
    
}