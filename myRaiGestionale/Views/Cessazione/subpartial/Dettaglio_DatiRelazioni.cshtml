@using myRaiGestionale.Controllers
@model myRaiData.Incentivi.XR_INC_DIPENDENTI

@{ 
    DateTime? dtaAnzCat = CessazioneController.GetDataAnzCat(Model.ID_PERSONA);
}


@using (Html.BeginBlock(myRaiHelper.BlockType.ContentTable, "Dati posizione"))
{
<div class="rai-table-info">
    <div class="row">
        <div class="col-sm-5 col-xs-6 ">
            <label class="">Direzione/Servizio</label>
        </div>
        <div class="col-sm-7 col-xs-6">
            <label>@Model.SINTESI1.DES_SERVIZIO</label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 col-xs-6 ">
            <label class="">Aggregato sede</label>
        </div>
        <div class="col-sm-7 col-xs-6">
            <label>@Model.SINTESI1.DES_SEDE</label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 col-xs-6 ">
            <label class="">Struttura/Sezione</label>
        </div>
        <div class="col-sm-7 col-xs-6">
            <label>@Model.SINTESI1.COD_UNITAORG - @Model.SINTESI1.DES_DENOMUNITAORG</label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 col-xs-6 ">
            <label class="">Profilo professionale</label>
        </div>
        <div class="col-sm-7 col-xs-6">
            <label>@Model.SINTESI1.QUALIFICA.TB_QUALSTD.DES_QUALSTD</label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 col-xs-6 ">
            <label class="">Livello attuale</label>
        </div>
        <div class="col-sm-7 col-xs-6">
            <label>@Model.SINTESI1.DES_QUALIFICA</label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 col-xs-6 ">
            <label class="">Anzianità di livello</label>
        </div>
        <div class="col-sm-7 col-xs-6">
            @if (dtaAnzCat.HasValue)
            {
                <label>@dtaAnzCat.Value.ToString("dd/MM/yyyy")</label>
            }
        </div>
    </div>
</div>
}

