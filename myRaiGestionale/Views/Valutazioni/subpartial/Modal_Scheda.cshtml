@using myRaiCommonModel.Gestionale;

@model Sheet

@{
    var title = "Nuova scheda di valutazione";
    if (Model.IdSheet > 0)
    {
        title = "Modifica scheda di valutazione";
    }
}

@using (Html.BeginModal(title))
{
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                @using (Html.BeginPanel(myRaiHelper.PanelType.Panel, "Dati generali"))
                {

                    @Html.HiddenFor(m => m.IdSheet)
                    <div class="row push-10">
                        <div class="col-sm-4">
                            <label class="rai-caption">Nome</label>
                        </div>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label class="rai-caption">Descrizione</label>
                        </div>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        </div>
                    </div>

                    //using (Html.BeginBlock(myRaiHelper.BlockType.ContentTable, "Composizione scheda"))
                    //{

                    //}
                }

                @using (Html.BeginBlock(myRaiHelper.BlockType.ContentTable, "Composizione scheda"))
                {
                    foreach (var group in Model.Groups)
                    {
                        using (Html.BeginPanel(myRaiHelper.PanelType.NoHeader, ""))
                        {
                            <div data-gruppo>
                                <div class="row">
                                    <div class="col-sm-12 text-right">
                                        <div class="btn-action-icon-container">
                                            <button class="btn btn-action-icon"></button>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="rai-caption">Nome</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input class="form-control" data-group-name type="text" value="@group.Name" />
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
}

