@model List<myRaiCommonModel.Gestionale.CampagnaScheda>

@if (Model != null && Model.Count > 0)
{
<table class="table rai-table rai-table-panel rai-table-vcenter" style="margin-top:0 !important;" role="grid">
    @foreach (var subitem in Model)
    {
        <tr>
            <td style="width:100%">
                @subitem.Descrizione
            </td>
            <td class="rai-table-td-action text-right">
                <div class="btn-action-icon-container">
                    <a href="#" class="btn btn-action-icon" onclick="ValShowReport(@subitem.ID)"><div class="icon icon-chart push-5-t"></div></a>
                    <a href="@Url.Action("Report_Mail_CampagnaScheda","Valutazioni", new {idCampagnaScheda=subitem.ID})" target="_blank" class="btn btn-action-icon" title="Elenco valutatori/valutati"><div class="fa fa-file-excel-o"></div></a>
                    <a href="#" class="btn btn-action-icon" onclick="ValModificaCampagnaScheda(@subitem.Id_Campagna, @subitem.ID)"><div class="fa fa-pencil"></div></a>
                    <a href="#" class="btn btn-action-icon" onclick="ValCancellaCampagnaScheda(@subitem.Id_Campagna, @subitem.ID)"><div class="fa fa-trash"></div></a>
                </div>
            </td>
            <td class="rai-table-td-toggle">&nbsp;</td>
        </tr>
    }
</table>
}
