@using myRaiHelper;
@model myRaiCommonModel.Gestionale.Campagna



<div class="row">
    @{
        string titleMain = "";
        if (Model.ID == 0)
        {
            titleMain = "Nuova iniziativa";
        }
        else
        {
            titleMain = Model.Name;
        }

    }
    @Html.RenderModalColumn(myRaiHelper.ModalColumnType.Main, "col-sm-12", titleMain, new List<myRaiHelper.SectionTemplate>()
{
    SectionTemplate.CreateBlock(BlockType.ContentTable, "Dati generali", "subpartial/Modal_Campagna_DatiGenerali", Model)
})

</div>
